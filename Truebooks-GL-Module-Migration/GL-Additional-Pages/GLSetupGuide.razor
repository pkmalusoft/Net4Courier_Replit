@page "/gl/setup-guide"
@inject ISnackbar Snackbar

<PageTitle>General Ledger Setup Guide - Truebooks ERP</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-4">
    <MudPaper Elevation="0" Class="pa-4 mb-4" Style="background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%); border-radius: 16px;">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudText Typo="Typo.h4" Style="color: white; font-weight: 600;">General Ledger Setup Guide</MudText>
                <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.9);" Class="mt-2">
                    Complete step-by-step guide to configure your financial accounting system
                </MudText>
            </MudItem>
            <MudItem xs="12" md="4" Class="d-flex align-center justify-end">
                <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Style="font-size: 80px; color: rgba(255,255,255,0.3);" />
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-4">
        <MudTabPanel Text="Initial Setup" Icon="@Icons.Material.Filled.Settings">
            <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 600;">
                <MudIcon Icon="@Icons.Material.Filled.Checklist" Class="mr-2" Style="vertical-align: middle;" />
                System Configuration Steps
            </MudText>

            <MudExpansionPanels MultiExpansion="true">
                <MudExpansionPanel>
                    <TitleContent>
                        <div class="d-flex align-center">
                            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-3">1</MudAvatar>
                            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="mr-2" Color="Color.Primary" />
                            <MudText Typo="Typo.subtitle1"><strong>Chart of Accounts</strong></MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Class="mb-3">Set up your account hierarchy with proper classification.</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Assets (1xxx)</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Liabilities (2xxx)</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Equity (3xxx)</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Revenue (4xxx)</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Expenses (5xxx-7xxx)</MudListItem>
                        </MudList>
                        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-2">
                            Navigate to: Settings → Chart of Accounts
                        </MudAlert>
                    </ChildContent>
                </MudExpansionPanel>

                <MudExpansionPanel>
                    <TitleContent>
                        <div class="d-flex align-center">
                            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-3">2</MudAvatar>
                            <MudIcon Icon="@Icons.Material.Filled.CalendarMonth" Class="mr-2" Color="Color.Secondary" />
                            <MudText Typo="Typo.subtitle1"><strong>Financial Calendar</strong></MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Class="mb-3">Define your fiscal year and periods.</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Fiscal year start/end dates</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Period structure (monthly/quarterly)</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Period naming convention</MudListItem>
                        </MudList>
                        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-2">
                            Navigate to: Finance → Financial Calendar
                        </MudAlert>
                    </ChildContent>
                </MudExpansionPanel>

                <MudExpansionPanel>
                    <TitleContent>
                        <div class="d-flex align-center">
                            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-3">3</MudAvatar>
                            <MudIcon Icon="@Icons.Material.Filled.Input" Class="mr-2" Color="Color.Info" />
                            <MudText Typo="Typo.subtitle1"><strong>Opening Balances</strong></MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Class="mb-3">Enter starting balances for all balance sheet accounts.</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Enter asset balances</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Enter liability balances</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Enter equity balances</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Verify Opening Balance Equity is zero</MudListItem>
                        </MudList>
                        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-2">
                            Navigate to: General Ledger → Opening Balances
                        </MudAlert>
                    </ChildContent>
                </MudExpansionPanel>

                <MudExpansionPanel>
                    <TitleContent>
                        <div class="d-flex align-center">
                            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-3">4</MudAvatar>
                            <MudIcon Icon="@Icons.Material.Filled.SwapHoriz" Class="mr-2" Color="Color.Success" />
                            <MudText Typo="Typo.subtitle1"><strong>Currency Setup</strong></MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Class="mb-3">Configure currencies and exchange rates.</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Set base currency</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Add foreign currencies</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Enter exchange rates</MudListItem>
                        </MudList>
                        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-2">
                            Navigate to: Settings → Currencies
                        </MudAlert>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudTabPanel>

        <MudTabPanel Text="Daily Operations" Icon="@Icons.Material.Filled.Today">
            <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 600;">
                <MudIcon Icon="@Icons.Material.Filled.Loop" Class="mr-2" Style="vertical-align: middle;" />
                Daily Workflow
            </MudText>
            
            <MudGrid Spacing="3">
                <MudItem xs="12" md="4">
                    <MudCard Elevation="2">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudAvatar Color="Color.Primary">
                                    <MudIcon Icon="@Icons.Material.Filled.Edit" />
                                </MudAvatar>
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Journal Entries</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText Typo="Typo.body2">Create and post journal vouchers for manual adjustments.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudCard Elevation="2">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudAvatar Color="Color.Secondary">
                                    <MudIcon Icon="@Icons.Material.Filled.Assessment" />
                                </MudAvatar>
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Trial Balance</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText Typo="Typo.body2">Review account balances and verify debits equal credits.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudCard Elevation="2">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudAvatar Color="Color.Success">
                                    <MudIcon Icon="@Icons.Material.Filled.Description" />
                                </MudAvatar>
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Financial Statements</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText Typo="Typo.body2">Generate Balance Sheet and Income Statement.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</MudContainer>
