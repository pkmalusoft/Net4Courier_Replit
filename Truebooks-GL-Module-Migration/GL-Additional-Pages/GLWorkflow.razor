@page "/gl/workflow"

<PageTitle>General Ledger Workflow - Truebooks ERP</PageTitle>

<style>
    .workflow-hero {
        background: linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #60a5fa 100%);
        position: relative;
        overflow: hidden;
    }
    .workflow-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(rgba(255,255,255,0.05) 1px, transparent 1px);
        background-size: 30px 30px;
    }
    .phase-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 16px;
    }
    .phase-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }
</style>

<div style="margin: -24px; margin-bottom: 0;">
    <div class="workflow-hero pa-8 pa-md-12" style="color: white;">
        <div style="position: relative; z-index: 1;">
            <MudContainer MaxWidth="MaxWidth.Large">
                <div class="d-flex align-center gap-2 mb-4">
                    <MudChip T="string" Color="Color.Info" Size="Size.Small" Variant="Variant.Filled">
                        <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Small" Class="mr-1" />
                        Financial Core
                    </MudChip>
                </div>
                
                <MudText Typo="Typo.h2" Class="mb-4" Style="font-weight: 800; letter-spacing: -1px;">
                    General Ledger Workflow<br/>
                    <span style="color: #bfdbfe;">From Transactions to Reports</span>
                </MudText>
                
                <MudText Typo="Typo.h6" Class="mb-6" Style="opacity: 0.9; max-width: 800px; font-weight: 400;">
                    Understand the complete accounting cycle from daily journal entries through period closing to financial reporting and year-end processing.
                </MudText>

                <MudGrid>
                    <MudItem xs="6" sm="4" md="2">
                        <div class="text-center pa-2" style="background: rgba(255,255,255,0.1); border-radius: 12px;">
                            <MudText Typo="Typo.h5" Style="font-weight: 700;">6</MudText>
                            <MudText Typo="Typo.caption">Phases</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" sm="4" md="2">
                        <div class="text-center pa-2" style="background: rgba(255,255,255,0.1); border-radius: 12px;">
                            <MudText Typo="Typo.h5" Style="font-weight: 700;">Auto</MudText>
                            <MudText Typo="Typo.caption">Posting</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" sm="4" md="2">
                        <div class="text-center pa-2" style="background: rgba(255,255,255,0.1); border-radius: 12px;">
                            <MudText Typo="Typo.h5" Style="font-weight: 700;">Multi</MudText>
                            <MudText Typo="Typo.caption">Currency</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" sm="4" md="2">
                        <div class="text-center pa-2" style="background: rgba(255,255,255,0.1); border-radius: 12px;">
                            <MudText Typo="Typo.h5" Style="font-weight: 700;">Real-Time</MudText>
                            <MudText Typo="Typo.caption">Reports</MudText>
                        </div>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </div>
    </div>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <div class="text-center mb-8">
        <MudText Typo="Typo.overline" Color="Color.Primary" Class="mb-2">ACCOUNTING CYCLE</MudText>
        <MudText Typo="Typo.h4" Style="font-weight: 700;">Visual Workflow Guide</MudText>
    </div>

    <MudTimeline TimelinePosition="TimelinePosition.Alternate">
        <MudTimelineItem Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Primary">Phase 1</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Chart of Accounts Setup</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.AccountTree">Define account hierarchy</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Category">Configure account types</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Settings">Set default accounts</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>

        <MudTimelineItem Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Secondary">Phase 2</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Opening Balances</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Input">Enter opening balances</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Balance">Use Opening Balance Equity</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Verified">Verify trial balance</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>

        <MudTimelineItem Color="Color.Info" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Info">Phase 3</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Daily Transactions</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Edit">Create journal vouchers</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.AutoAwesome">Receive auto-postings from modules</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.SwapHoriz">Multi-currency transactions</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>

        <MudTimelineItem Color="Color.Success" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Success">Phase 4</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Period Review</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Assessment">Generate trial balance</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Search">Review account details</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Build">Make adjusting entries</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>

        <MudTimelineItem Color="Color.Warning" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Warning">Phase 5</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Period Closing</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Lock">Close financial period</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Description">Generate financial statements</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Archive">Archive period data</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>

        <MudTimelineItem Color="Color.Error" Variant="Variant.Filled" Size="Size.Large">
            <ItemOpposite>
                <MudText Typo="Typo.h6" Color="Color.Error">Phase 6</MudText>
            </ItemOpposite>
            <ItemContent>
                <MudCard Class="phase-card" Elevation="0" Style="border: 1px solid #e2e8f0;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Year-End Closing</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Calculate">Close income/expense accounts</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.SwapVert">Transfer to retained earnings</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Replay">Carry forward balances</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>
    </MudTimeline>
</MudContainer>
