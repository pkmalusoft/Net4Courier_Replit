@page "/gl/profile"


<PageTitle>GL Profile - Truebooks ERP</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 50%, #818cf8 100%);
        position: relative;
        overflow: hidden;
    }
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(rgba(255,255,255,0.1) 1px, transparent 1px);
        background-size: 20px 20px;
    }
    .feature-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    .stat-card {
        background: linear-gradient(145deg, #f8fafc 0%, #f1f5f9 100%);
    }
    .check-icon {
        color: #10b981;
    }
</style>

<div style="margin: -24px; margin-bottom: 0;">
    <!-- Hero Section -->
    <div class="hero-section pa-8 pa-md-12" style="color: white;">
        <div style="position: relative; z-index: 1;">
            <MudContainer MaxWidth="MaxWidth.Large">
                <div class="d-flex align-center gap-2 mb-6">
                    <MudChip T="string" Color="Color.Success" Size="Size.Small" Variant="Variant.Filled">
                        <MudIcon Icon="@Icons.Material.Filled.FiberManualRecord" Size="Size.Small" Class="mr-1" Style="animation: pulse 2s infinite;" />
                        Enterprise-Grade Architecture
                    </MudChip>
                </div>
                
                <MudText Typo="Typo.h2" Class="mb-4" Style="font-weight: 800; letter-spacing: -1px;">
                    Complete Visibility.<br/>
                    <span style="color: #a5f3fc;">Total Financial Control.</span>
                </MudText>
                
                <MudText Typo="Typo.h6" Class="mb-8" Style="opacity: 0.9; max-width: 800px; font-weight: 400;">
                    Truebooks-ERP is the production-ready SaaS solution that unifies your 
                    <strong>General Ledger, Inventory, Sales, and Purchasing</strong>. 
                    Eliminate data silos with a platform built for multi-branch, multi-currency, and high-compliance operations.
                </MudText>

                <MudGrid Class="mt-8">
                    <MudItem xs="6" md="3">
                        <div class="text-center">
                            <MudText Typo="Typo.h4" Style="font-weight: 700;">100%</MudText>
                            <MudText Typo="Typo.body2" Style="opacity: 0.8;">Traceability</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <div class="text-center">
                            <MudText Typo="Typo.h4" Style="font-weight: 700;">Real-Time</MudText>
                            <MudText Typo="Typo.body2" Style="opacity: 0.8;">Dashboards (SignalR)</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <div class="text-center">
                            <MudText Typo="Typo.h4" Style="font-weight: 700;">Global</MudText>
                            <MudText Typo="Typo.body2" Style="opacity: 0.8;">Multi-Currency/Tax</MudText>
                        </div>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <div class="text-center">
                            <MudText Typo="Typo.h4" Style="font-weight: 700;">Secure</MudText>
                            <MudText Typo="Typo.body2" Style="opacity: 0.8;">Row-Level Security</MudText>
                        </div>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </div>
    </div>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <!-- Comprehensive Features Section -->
    <div class="text-center mb-8">
        <MudText Typo="Typo.overline" Color="Color.Primary" Class="mb-2">COMPREHENSIVE FEATURES</MudText>
        <MudText Typo="Typo.h4" Style="font-weight: 700;">A Unified Platform for Your Entire Workflow</MudText>
    </div>

    <MudGrid Spacing="6" Class="mb-12">
        <!-- Financial Management -->
        <MudItem xs="12" md="6">
            <MudCard Class="feature-card h-100" Elevation="0" Style="border: 1px solid #e2e8f0;">
                <MudCardContent Class="pa-6">
                    <div class="d-flex gap-4">
                        <MudAvatar Size="Size.Large" Style="background: #dbeafe; color: #2563eb;" Class="flex-shrink-0">
                            <MudIcon Icon="@Icons.Material.Filled.Balance" />
                        </MudAvatar>
                        <div>
                            <MudText Typo="Typo.h6" Class="mb-2" Style="font-weight: 700;">Advanced Financial Management</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                                The backbone of your business with complete General Ledger capabilities.
                            </MudText>
                            <MudList T="string" Dense="true" Gutters="false">
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Dynamic Year-End Closing:</strong> 5-stage wizard with real-time opening balance calculation.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Bank Reconciliation:</strong> Auto-match transactions based on amount, date, and reference.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Chart of Accounts:</strong> Hierarchical structure with professional PDF/Excel exports.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Financial Periods:</strong> Soft-close capability for secure month-end adjustments.
                                </MudListItem>
                            </MudList>
                        </div>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Supply Chain -->
        <MudItem xs="12" md="6">
            <MudCard Class="feature-card h-100" Elevation="0" Style="border: 1px solid #e2e8f0;">
                <MudCardContent Class="pa-6">
                    <div class="d-flex gap-4">
                        <MudAvatar Size="Size.Large" Style="background: #f3e8ff; color: #9333ea;" Class="flex-shrink-0">
                            <MudIcon Icon="@Icons.Material.Filled.Warehouse" />
                        </MudAvatar>
                        <div>
                            <MudText Typo="Typo.h6" Class="mb-2" Style="font-weight: 700;">Inventory & Supply Chain</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                                Control stock across multiple warehouses, showrooms, and third-party sites.
                            </MudText>
                            <MudList T="string" Dense="true" Gutters="false">
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Multi-Location Tracking:</strong> Real-time visibility of stock across all branches.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Stock Valuation:</strong> Live Moving Average Cost updates and valuation reports.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Smart Replenishment:</strong> Automated alerts for reorder levels and quantities.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Goods Received (GRN):</strong> 3-way matching ensuring you pay only for what you receive.
                                </MudListItem>
                            </MudList>
                        </div>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Sales Automation -->
        <MudItem xs="12" md="6">
            <MudCard Class="feature-card h-100" Elevation="0" Style="border: 1px solid #e2e8f0;">
                <MudCardContent Class="pa-6">
                    <div class="d-flex gap-4">
                        <MudAvatar Size="Size.Large" Style="background: #d1fae5; color: #059669;" Class="flex-shrink-0">
                            <MudIcon Icon="@Icons.Material.Filled.Receipt" />
                        </MudAvatar>
                        <div>
                            <MudText Typo="Typo.h6" Class="mb-2" Style="font-weight: 700;">Sales & Receivables Automation</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                                Accelerate your quote-to-cash cycle with seamless document flow.
                            </MudText>
                            <MudList T="string" Dense="true" Gutters="false">
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Workflow Continuity:</strong> Convert Enquiry → Quote → Order → Invoice with one click.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Credit Control:</strong> Auto-lock orders if customers exceed credit limits.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Flexible Pricing:</strong> Retail, wholesale, and special price lists management.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Approval Workflows:</strong> Admin oversight for discounts and credit approvals.
                                </MudListItem>
                            </MudList>
                        </div>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Procurement -->
        <MudItem xs="12" md="6">
            <MudCard Class="feature-card h-100" Elevation="0" Style="border: 1px solid #e2e8f0;">
                <MudCardContent Class="pa-6">
                    <div class="d-flex gap-4">
                        <MudAvatar Size="Size.Large" Style="background: #fef3c7; color: #d97706;" Class="flex-shrink-0">
                            <MudIcon Icon="@Icons.Material.Filled.LocalShipping" />
                        </MudAvatar>
                        <div>
                            <MudText Typo="Typo.h6" Class="mb-2" Style="font-weight: 700;">Purchasing & Payables</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                                Optimize spending and manage supplier relationships effectively.
                            </MudText>
                            <MudList T="string" Dense="true" Gutters="false">
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Purchase Controls:</strong> Approval workflows for high-value Purchase Orders.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Expense Tracking:</strong> Record direct expenses or link to inventory costs.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Supplier Management:</strong> Track payment terms, credit limits, and history.
                                </MudListItem>
                                <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">
                                    <strong>Aging Analysis:</strong> Detailed payable aging reports to manage cash flow.
                                </MudListItem>
                            </MudList>
                        </div>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Tax & Multi-Entity Section -->
    <MudPaper Class="pa-8 mb-8" Style="background: linear-gradient(145deg, #f8fafc 0%, #f1f5f9 100%); border-radius: 16px;">
        <MudGrid Spacing="6">
            <!-- Tax Section -->
            <MudItem xs="12" md="6">
                <MudChip T="string" Color="Color.Primary" Size="Size.Small" Variant="Variant.Filled" Class="mb-4">GLOBAL READY</MudChip>
                <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 700;">Comprehensive Tax Compliance</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-6">
                    Navigate complex tax landscapes with ease. Truebooks-ERP is built to handle global tax requirements, ensuring you remain compliant wherever you do business.
                </MudText>
                
                <MudStack Spacing="3">
                    <MudPaper Class="pa-4" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 8px;">
                        <div class="d-flex gap-3 align-center">
                            <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Primary" />
                            <div>
                                <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">US State Tax & Nexus</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Manage state-by-state rates and tax collection obligations automatically.</MudText>
                            </div>
                        </div>
                    </MudPaper>
                    <MudPaper Class="pa-4" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 8px;">
                        <div class="d-flex gap-3 align-center">
                            <MudIcon Icon="@Icons.Material.Filled.Percent" Color="Color.Primary" />
                            <div>
                                <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">GST & VAT Support</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Input/Output tracking, HSN/SAC codes, and return preparation support.</MudText>
                            </div>
                        </div>
                    </MudPaper>
                    <MudPaper Class="pa-4" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 8px;">
                        <div class="d-flex gap-3 align-center">
                            <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Color="Color.Primary" />
                            <div>
                                <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Exemption Management</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Store certificates and auto-apply exemptions during invoicing.</MudText>
                            </div>
                        </div>
                    </MudPaper>
                </MudStack>
            </MudItem>

            <!-- Multi-Entity Section -->
            <MudItem xs="12" md="6">
                <MudChip T="string" Color="Color.Success" Size="Size.Small" Variant="Variant.Filled" Class="mb-4">SCALABLE ARCHITECTURE</MudChip>
                <MudText Typo="Typo.h5" Class="mb-4" Style="font-weight: 700;">Built for Complex Organizations</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-6">
                    Whether you have one office or fifty, Truebooks scales with you. Manage your entire enterprise hierarchy from a single login.
                </MudText>
                
                <MudGrid Spacing="3">
                    <MudItem xs="6">
                        <MudPaper Class="pa-4 text-center" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 12px;">
                            <MudIcon Icon="@Icons.Material.Filled.Business" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Multi-Branch</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">Centralized control, distributed ops.</MudText>
                        </MudPaper>
                    </MudItem>
                    <MudItem xs="6">
                        <MudPaper Class="pa-4 text-center" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 12px;">
                            <MudIcon Icon="@Icons.Material.Filled.Groups" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Multi-Tenant</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">Isolated data for separate companies.</MudText>
                        </MudPaper>
                    </MudItem>
                    <MudItem xs="6">
                        <MudPaper Class="pa-4 text-center" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 12px;">
                            <MudIcon Icon="@Icons.Material.Filled.Inventory2" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Multi-Warehouse</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">Granular stock location tracking.</MudText>
                        </MudPaper>
                    </MudItem>
                    <MudItem xs="6">
                        <MudPaper Class="pa-4 text-center" Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 12px;">
                            <MudIcon Icon="@Icons.Material.Filled.CurrencyExchange" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Multi-Currency</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">Global transactions made simple.</MudText>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Deployment Options -->
    <div class="text-center mb-6">
        <MudText Typo="Typo.h5" Style="font-weight: 700;">Flexible Deployment Options</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">Choose the model that fits your security and operational needs.</MudText>
    </div>

    <MudGrid Spacing="4" Justify="Justify.Center" Class="mb-8">
        <MudItem xs="12" md="5">
            <MudCard Elevation="0" Style="border: 2px solid #c7d2fe; background: linear-gradient(145deg, #eef2ff 0%, #e0e7ff 100%); border-radius: 16px; position: relative; overflow: visible;">
                <MudChip T="string" Color="Color.Primary" Size="Size.Small" Style="position: absolute; top: -10px; right: 16px;">POPULAR</MudChip>
                <MudCardContent Class="pa-6">
                    <div class="d-flex align-center gap-2 mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.Cloud" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Style="font-weight: 700;">Cloud SaaS</MudText>
                    </div>
                    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-6">
                        Perfect for businesses wanting instant access, automatic updates, and zero infrastructure hassle.
                    </MudText>
                    <MudList T="string" Dense="true" Gutters="false">
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Instant Deployment</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Automatic Updates</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Pay-As-You-Grow</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Success">Accessible Anywhere</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="5">
            <MudCard Elevation="0" Style="border: 1px solid #e2e8f0; border-radius: 16px;">
                <MudCardContent Class="pa-6">
                    <div class="d-flex align-center gap-2 mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.Storage" Color="Color.Default" />
                        <MudText Typo="Typo.h6" Style="font-weight: 700;">On-Premise</MudText>
                    </div>
                    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-6">
                        For organizations requiring complete data sovereignty, custom integrations, or offline capabilities.
                    </MudText>
                    <MudList T="string" Dense="true" Gutters="false">
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Default">Complete Data Control</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Default">Custom Internal Integrations</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Default">One-Time License Cost</MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Check" IconColor="Color.Default">Network Independence</MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Tech Specs -->
    <MudPaper Class="pa-6" Style="background: #1e293b; border-radius: 12px; color: white;">
        <MudGrid Spacing="4">
            <MudItem xs="6" md="3">
                <MudText Typo="Typo.subtitle2" Style="font-weight: 600; color: white;">Backend</MudText>
                <MudText Typo="Typo.body2" Style="opacity: 0.7;">.NET 8, ASP.NET Core Web API</MudText>
            </MudItem>
            <MudItem xs="6" md="3">
                <MudText Typo="Typo.subtitle2" Style="font-weight: 600; color: white;">Frontend</MudText>
                <MudText Typo="Typo.body2" Style="opacity: 0.7;">Blazor Server, MudBlazor UI</MudText>
            </MudItem>
            <MudItem xs="6" md="3">
                <MudText Typo="Typo.subtitle2" Style="font-weight: 600; color: white;">Database</MudText>
                <MudText Typo="Typo.body2" Style="opacity: 0.7;">PostgreSQL with Row Level Security</MudText>
            </MudItem>
            <MudItem xs="6" md="3">
                <MudText Typo="Typo.subtitle2" Style="font-weight: 600; color: white;">Security</MudText>
                <MudText Typo="Typo.body2" Style="opacity: 0.7;">JWT, RBAC, SignalR Real-time</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Footer -->
    <div class="text-center mt-8 mb-4">
        <MudText Typo="Typo.caption" Color="Color.Secondary">
            Developed by Truebooks Information Systems LLP (ISO 9001:2015)
        </MudText>
        <MudText Typo="Typo.caption" Color="Color.Secondary">
            Empowering SMEs with enterprise-grade ERP technology.
        </MudText>
    </div>
</MudContainer>

