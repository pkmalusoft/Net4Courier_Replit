@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Class="mb-4">
            Mark pickup <strong>@PickupNo</strong> as attempted (courier unable to collect)?
        </MudText>
        <MudTextField @bind-Value="_remarks" Label="Reason for Failed Collection" 
                      Placeholder="e.g., Customer not available, Address not found, Shipment not ready..."
                      Variant="Variant.Outlined" Lines="3" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Warning" Variant="Variant.Filled" 
                   Disabled="@string.IsNullOrWhiteSpace(_remarks)">Mark Attempted</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string PickupNo { get; set; } = string.Empty;

    private string _remarks = string.Empty;

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_remarks));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
