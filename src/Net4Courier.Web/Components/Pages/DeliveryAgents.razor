@page "/delivery-agents"
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<PageTitle>Delivery Agents - Net4Courier</PageTitle>

<MudPaper Class="pa-4" Elevation="0">
    <MudToolBar Dense="true" Class="pl-0">
        <MudText Typo="Typo.h6">Delivery Agents</MudText>
        <MudChip T="string" Size="Size.Small" Color="Color.Success" Class="ml-2">Account Receivable</MudChip>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenAddDialog">
            Add Delivery Agent
        </MudButton>
    </MudToolBar>

    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-3">
        Delivery agents deliver shipments on behalf of the company. Payment is received from them.
    </MudText>

    <MudTable Items="_agents" Hover="true" Dense="true" Loading="_loading">
        <HeaderContent>
            <MudTh>Code</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Contact Person</MudTh>
            <MudTh>Phone</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Credit Limit</MudTh>
            <MudTh>Status</MudTh>
            <MudTh Style="width: 120px;">Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Code</MudTd>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.ContactPerson</MudTd>
            <MudTd>@context.Phone</MudTd>
            <MudTd>@context.Email</MudTd>
            <MudTd>@context.CreditLimit.ToString("N2")</MudTd>
            <MudTd>
                <MudChip T="string" Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                    @(context.IsActive ? "Active" : "Inactive")
                </MudChip>
            </MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="@(() => OpenEditDialog(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="@(() => DeleteAgent(context))" />
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No delivery agents found. Click "Add Delivery Agent" to create one.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

<MudDialog @bind-Visible="_dialogVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">@(_editingAgent.Id == 0 ? "Add Delivery Agent" : "Edit Delivery Agent")</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="2">
            <MudItem xs="4">
                <MudTextField @bind-Value="_editingAgent.Code" Label="Code" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="8">
                <MudTextField @bind-Value="_editingAgent.Name" Label="Name*" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="_editingAgent.ContactPerson" Label="Contact Person" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="_editingAgent.Phone" Label="Phone" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="_editingAgent.Mobile" Label="Mobile" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="_editingAgent.Email" Label="Email" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_editingAgent.CreditLimit" Label="Credit Limit" Variant="Variant.Outlined" Format="N2" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_editingAgent.CreditDays" Label="Credit Days" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudSwitch @bind-Value="_editingAgent.IsActive" Label="Active" Color="Color.Primary" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAgent">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private List<Party> _agents = new();
    private bool _loading = true;
    private bool _dialogVisible;
    private Party _editingAgent = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAgents();
    }

    private async Task LoadAgents()
    {
        _loading = true;
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        _agents = await dbContext.Parties
            .Where(p => p.PartyType == PartyType.DeliveryAgent && !p.IsDeleted)
            .OrderBy(p => p.Name)
            .ToListAsync();
        _loading = false;
    }

    private void OpenAddDialog()
    {
        _editingAgent = new Party 
        { 
            PartyType = PartyType.DeliveryAgent,
            AccountNature = PartyAccountNature.Receivable,
            IsActive = true,
            CreatedAt = DateTime.UtcNow
        };
        _dialogVisible = true;
    }

    private void OpenEditDialog(Party agent)
    {
        _editingAgent = new Party
        {
            Id = agent.Id,
            Code = agent.Code,
            Name = agent.Name,
            ContactPerson = agent.ContactPerson,
            Phone = agent.Phone,
            Mobile = agent.Mobile,
            Email = agent.Email,
            CreditLimit = agent.CreditLimit,
            CreditDays = agent.CreditDays,
            IsActive = agent.IsActive,
            PartyType = PartyType.DeliveryAgent,
            AccountNature = PartyAccountNature.Receivable,
            CompanyId = agent.CompanyId,
            CreatedAt = agent.CreatedAt
        };
        _dialogVisible = true;
    }

    private void CloseDialog() => _dialogVisible = false;

    private async Task SaveAgent()
    {
        if (string.IsNullOrWhiteSpace(_editingAgent.Name))
        {
            Snackbar.Add("Name is required", Severity.Error);
            return;
        }

        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (_editingAgent.Id == 0)
        {
            dbContext.Parties.Add(_editingAgent);
            Snackbar.Add("Delivery agent added successfully", Severity.Success);
        }
        else
        {
            var existing = await dbContext.Parties.FindAsync(_editingAgent.Id);
            if (existing != null)
            {
                existing.Code = _editingAgent.Code;
                existing.Name = _editingAgent.Name;
                existing.ContactPerson = _editingAgent.ContactPerson;
                existing.Phone = _editingAgent.Phone;
                existing.Mobile = _editingAgent.Mobile;
                existing.Email = _editingAgent.Email;
                existing.CreditLimit = _editingAgent.CreditLimit;
                existing.CreditDays = _editingAgent.CreditDays;
                existing.IsActive = _editingAgent.IsActive;
                existing.ModifiedAt = DateTime.UtcNow;
            }
            Snackbar.Add("Delivery agent updated successfully", Severity.Success);
        }

        await dbContext.SaveChangesAsync();
        _dialogVisible = false;
        await LoadAgents();
    }

    private async Task DeleteAgent(Party agent)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Delete Delivery Agent",
            $"Are you sure you want to delete '{agent.Name}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            await using var dbContext = await DbFactory.CreateDbContextAsync();
            var entity = await dbContext.Parties.FindAsync(agent.Id);
            if (entity != null)
            {
                entity.IsDeleted = true;
                entity.ModifiedAt = DateTime.UtcNow;
                await dbContext.SaveChangesAsync();
            }
            Snackbar.Add("Delivery agent deleted", Severity.Success);
            await LoadAgents();
        }
    }
}
