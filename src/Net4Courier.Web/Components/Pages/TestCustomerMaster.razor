@page "/test-customer-master"
@using MudBlazor
@inject IDialogService DialogService

<PageTitle>Test Customer Master Dialog</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="py-8">
    <MudPaper Class="pa-6" Elevation="2">
        <MudStack Spacing="4" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Science" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h4">Dialog Design Preview</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mud-text-secondary">
                Click the button below to preview the redesigned Customer Master dialog with the modern card-based layout.
            </MudText>
            
            <MudDivider Class="my-4" FlexItem="true" Style="width:100%" />
            
            <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Design Features:</MudText>
            <MudStack Spacing="1">
                <MudText Typo="Typo.body2">• Modern card-based layout with outlined sections</MudText>
                <MudText Typo="Typo.body2">• Two-column responsive grid (Core Identity & Address)</MudText>
                <MudText Typo="Typo.body2">• Native HTML selects for reliable dropdown behavior in dialogs</MudText>
                <MudText Typo="Typo.body2">• Cascading Country → City → Area dropdowns</MudText>
                <MudText Typo="Typo.body2">• Credit & Status section with toggle switch</MudText>
            </MudStack>

            <MudDivider Class="my-4" FlexItem="true" Style="width:100%" />

            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       Size="Size.Large"
                       StartIcon="@Icons.Material.Filled.OpenInNew"
                       OnClick="OpenTestDialog">
                Open Test Dialog
            </MudButton>
            
            <MudText Typo="Typo.caption" Class="mud-text-secondary mt-2">
                This is a temporary test page. Remove after finalizing the design.
            </MudText>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    private async Task OpenTestDialog()
    {
        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Large,
            FullWidth = true,
            CloseOnEscapeKey = true,
            BackdropClick = false
        };

        await DialogService.ShowAsync<TestCustomerMasterDialog>("", options);
    }
}
