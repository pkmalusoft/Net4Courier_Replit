@page "/login"
@layout Net4Courier.Web.Components.Layout.EmptyLayout
@using Net4Courier.Infrastructure.Services
@using Net4Courier.Web.Services
@using Net4Courier.Masters.Entities
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-image">
        <img src="images/login-bg.png" alt="Delivery Service" />
        <div class="login-image-logo">
            <img src="images/logo.png" alt="Net4Courier" />
        </div>
    </div>
    <div class="login-card">
        <div class="login-content">
            <img src="/api/company-logo" alt="Company Logo" class="login-logo" onerror="this.style.display='none'" />
            
            @if (_loginStep == LoginStep.Credentials)
            {
                <MudText Typo="Typo.subtitle1" Align="Align.Center" Color="Color.Secondary" Class="mb-6">
                    Sign in to your account
                </MudText>
                
                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <MudAlert Severity="Severity.Error" Dense="true" Class="mb-4">@_errorMessage</MudAlert>
                }

                <MudTextField @bind-Value="_username" 
                              Label="Username" 
                              Variant="Variant.Outlined"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Person"
                              Required="true"
                              Immediate="true"
                              Class="mb-4"
                              OnKeyDown="HandleKeyDown" />

                <MudTextField @bind-Value="_password" 
                              Label="Password" 
                              Variant="Variant.Outlined"
                              InputType="@_passwordInputType"
                              Adornment="Adornment.End"
                              AdornmentIcon="@_passwordIcon"
                              OnAdornmentClick="TogglePasswordVisibility"
                              Required="true"
                              Immediate="true"
                              Class="mb-2"
                              OnKeyDown="HandleKeyDown" />

                <div class="d-flex justify-end mb-4">
                    <MudLink Href="/forgot-password" Color="Color.Primary" Typo="Typo.body2">
                        Forgot Password?
                    </MudLink>
                </div>

                <MudButton Variant="Variant.Filled" 
                           Color="Color.Primary" 
                           FullWidth="true"
                           Size="Size.Large"
                           Disabled="@_isLoading"
                           OnClick="HandleValidateCredentials"
                           Class="login-btn">
                    @if (_isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>Validating...</span>
                    }
                    else
                    {
                        <span>Continue</span>
                    }
                </MudButton>
            }
            else if (_loginStep == LoginStep.BranchSelection)
            {
                <MudText Typo="Typo.subtitle1" Align="Align.Center" Color="Color.Secondary" Class="mb-2">
                    Welcome, @(_validatedUser?.FullName ?? _validatedUser?.Username)
                </MudText>
                <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary" Class="mb-6">
                    Select your branch to continue
                </MudText>
                
                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <MudAlert Severity="Severity.Error" Dense="true" Class="mb-4">@_errorMessage</MudAlert>
                }

                <MudSelect T="long?" @bind-Value="_selectedBranchId" 
                           Label="Branch" 
                           Variant="Variant.Outlined"
                           AnchorOrigin="Origin.BottomCenter"
                           Required="true"
                           Class="mb-4">
                    @foreach (var branch in _availableBranches)
                    {
                        <MudSelectItem T="long?" Value="@branch.Id">
                            @branch.Company?.Name - @branch.Name
                        </MudSelectItem>
                    }
                </MudSelect>

                <MudButton Variant="Variant.Filled" 
                           Color="Color.Primary" 
                           FullWidth="true"
                           Size="Size.Large"
                           Disabled="@(_isLoading || !_selectedBranchId.HasValue)"
                           OnClick="HandleLogin"
                           Class="login-btn mb-3">
                    @if (_isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </MudButton>
                
                <MudButton Variant="Variant.Text" 
                           Color="Color.Default" 
                           FullWidth="true"
                           OnClick="GoBackToCredentials"
                           Class="mb-2">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" Class="mr-1" />
                    Back to Login
                </MudButton>
            }

            <div class="d-flex justify-center mt-4">
                <MudLink Href="/knowledge-base" Color="Color.Primary" Typo="Typo.body2">
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Size="Size.Small" Class="mr-1" />
                    Knowledge Base
                </MudLink>
            </div>

            <div class="d-flex justify-center mt-6">
                <img src="images/truebooks-logo.png" alt="Truebooks Business Solutions" style="height: 56px; opacity: 0.7;" />
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        flex-direction: row;
        margin: 0;
        padding: 0;
    }

    .login-image {
        flex: 1;
        min-height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: stretch;
        position: relative;
    }

    .login-image img {
        width: 100%;
        height: 100vh;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    .login-image-logo {
        position: absolute;
        top: 40px;
        left: 40px;
        z-index: 2;
    }

    .login-image-logo img {
        width: 220px;
        height: auto;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3)) brightness(1.1);
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.9);
        padding: 12px;
    }

    .login-card {
        width: 420px;
        min-width: 420px;
        min-height: 100vh;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        box-shadow: -2px 0 10px rgba(0, 0, 0, 0.15);
    }

    .login-content {
        width: 100%;
        max-width: 320px;
    }

    .login-logo {
        display: block;
        width: 180px;
        height: auto;
        margin: 0 auto 24px auto;
    }

    .login-btn {
        height: 48px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: none;
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }

        .login-image {
            display: none;
        }
        
        .login-card {
            width: 100%;
            min-width: unset;
            min-height: auto;
            margin: 20px;
            border-radius: 16px;
            padding: 32px 24px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }
    }
</style>

@code {
    private enum LoginStep { Credentials, BranchSelection }
    
    private LoginStep _loginStep = LoginStep.Credentials;
    private string _username = "";
    private string _password = "";
    private string _errorMessage = "";
    private bool _isLoading = false;
    private bool _showPassword = false;
    private InputType _passwordInputType = InputType.Password;
    private string _passwordIcon = Icons.Material.Filled.VisibilityOff;
    
    private User? _validatedUser;
    private List<Branch> _availableBranches = new();
    private long? _selectedBranchId;

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
        _passwordInputType = _showPassword ? InputType.Text : InputType.Password;
        _passwordIcon = _showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await HandleValidateCredentials();
    }

    private async Task HandleValidateCredentials()
    {
        _errorMessage = "";

        if (string.IsNullOrWhiteSpace(_username) || string.IsNullOrWhiteSpace(_password))
        {
            _errorMessage = "Please enter username and password";
            return;
        }

        _isLoading = true;
        StateHasChanged();

        try
        {
            var user = await AuthService.ValidateUserAsync(_username, _password);

            if (user == null)
            {
                _errorMessage = "Invalid username or password";
                _isLoading = false;
                return;
            }
            
            _validatedUser = user;
            _availableBranches = await AuthService.GetUserBranchesAsync(user.Id);
            
            if (_availableBranches.Count == 0)
            {
                var authProvider = (AppAuthStateProvider)AuthStateProvider;
                authProvider.Login(user);
                Navigation.NavigateTo("/");
            }
            else if (_availableBranches.Count == 1)
            {
                var authProvider = (AppAuthStateProvider)AuthStateProvider;
                authProvider.Login(user, _availableBranches[0]);
                Navigation.NavigateTo("/");
            }
            else
            {
                var defaultBranch = _availableBranches.FirstOrDefault(b => 
                    user.UserBranches.Any(ub => ub.BranchId == b.Id && ub.IsDefault));
                _selectedBranchId = defaultBranch?.Id ?? _availableBranches[0].Id;
                _loginStep = LoginStep.BranchSelection;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = "Login failed. Please try again.";
            Console.WriteLine($"[LOGIN] EXCEPTION: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private async Task HandleLogin()
    {
        if (_validatedUser == null || !_selectedBranchId.HasValue) return;
        
        _isLoading = true;
        _errorMessage = "";
        StateHasChanged();
        
        try
        {
            var selectedBranch = _availableBranches.FirstOrDefault(b => b.Id == _selectedBranchId.Value);
            if (selectedBranch == null)
            {
                _errorMessage = "You are not authorized to access this branch.";
                _isLoading = false;
                return;
            }
            
            var authProvider = (AppAuthStateProvider)AuthStateProvider;
            authProvider.Login(_validatedUser, selectedBranch);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            _errorMessage = "Login failed. Please try again.";
            Console.WriteLine($"[LOGIN] EXCEPTION: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private void GoBackToCredentials()
    {
        _loginStep = LoginStep.Credentials;
        _validatedUser = null;
        _availableBranches.Clear();
        _selectedBranchId = null;
        _errorMessage = "";
    }
}
