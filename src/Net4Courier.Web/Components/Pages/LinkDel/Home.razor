@page "/linkdel"
@layout Net4Courier.Web.Components.Layout.LinkDelLayout
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@using Net4Courier.Masters.Entities
@inject AuthenticationStateProvider AuthStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<div class="ld-home">
    <div class="ld-greeting">
        <div>
            <MudText Typo="Typo.h5" Style="font-weight: 700; color: #1e293b;">Hello, @_courierName</MudText>
            <MudText Typo="Typo.body2" Style="color: #94a3b8;">@DateTime.Today.ToString("dddd, dd MMMM yyyy")</MudText>
        </div>
    </div>

    @if (_isLoading)
    {
        <div style="display: flex; justify-content: center; padding: 40px 0;">
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        </div>
    }
    else
    {
        <div class="ld-stats-row">
            <div class="ld-stat-pill" style="background: #eef2ff; color: #556ee6;" @onclick='() => Navigation.NavigateTo("/linkdel/pickups")'>
                <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Small" />
                <span>@_pendingPickups Pickups</span>
            </div>
            <div class="ld-stat-pill" style="background: #ecfdf5; color: #059669;" @onclick='() => Navigation.NavigateTo("/linkdel/deliveries")'>
                <MudIcon Icon="@Icons.Material.Filled.DeliveryDining" Size="Size.Small" />
                <span>@_pendingDeliveryAwbs Deliveries</span>
            </div>
            <div class="ld-stat-pill" style="background: #fffbeb; color: #d97706;">
                <MudIcon Icon="@Icons.Material.Filled.Payments" Size="Size.Small" />
                <span>@_totalCod.ToString("N2") COD</span>
            </div>
        </div>

        @if (_pendingDeliveryItems.Any())
        {
            <div class="ld-section-header">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 700; color: #1e293b;">
                    Pending Deliveries
                    <span class="ld-count-badge" style="background: #059669;">@_pendingDeliveryItems.Count</span>
                </MudText>
                <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Primary"
                           OnClick='() => Navigation.NavigateTo("/linkdel/deliveries")'>View All</MudButton>
            </div>

            @foreach (var d in _pendingDeliveryItems)
            {
                <MudPaper Elevation="0" Class="ld-card ld-delivery-card" @onclick="() => OpenDelivery(d.DetailId)">
                    <div class="ld-card-top">
                        <div style="flex: 1; min-width: 0;">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 700; color: #1e293b;">@d.AWBNo</MudText>
                            <MudText Typo="Typo.caption" Style="color: #64748b;">@d.DRSNo</MudText>
                        </div>
                        @if (d.CODAmount > 0)
                        {
                            <MudChip T="string" Size="Size.Small" Style="background: #fef3c7; color: #92400e;">
                                COD @d.CODAmount.ToString("N2")
                            </MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Size="Size.Small" Style="background: #ecfdf5; color: #059669;">
                                @(string.IsNullOrEmpty(d.Status) || d.Status == "Pending" ? "Pending" : d.Status)
                            </MudChip>
                        }
                    </div>
                    <div class="ld-card-details">
                        <div class="ld-detail-row">
                            <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" Style="color: #94a3b8;" />
                            <MudText Typo="Typo.caption" Style="color: #64748b;">@(d.Consignee ?? "N/A")</MudText>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(d.Address))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">@TruncateText(d.Address, 60)</MudText>
                            </div>
                        }
                        @if (d.Pieces > 0 || d.Weight > 0)
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Inventory2" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">
                                    @if (d.Pieces > 0) { <span>@d.Pieces pcs</span> }
                                    @if (d.Weight > 0) { <span> / @d.Weight.Value.ToString("N1") kg</span> }
                                </MudText>
                            </div>
                        }
                        @if (d.CODAmount > 0)
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Payments" Size="Size.Small" Style="color: #f59e0b;" />
                                <MudText Typo="Typo.caption" Style="color: #92400e; font-weight: 600;">COD: @d.CODAmount.ToString("N2")</MudText>
                            </div>
                        }
                    </div>
                    <div class="ld-card-action">
                        <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Success"
                                   Style="border-radius: 8px; flex: 1; font-weight: 600;"
                                   OnClick="() => OpenDelivery(d.DetailId)" OnClickStopPropagation="true">
                            Deliver
                        </MudButton>
                    </div>
                </MudPaper>
            }
        }

        @if (_assignedPickups.Any())
        {
            <div class="ld-section-header" style="margin-top: @(_pendingDeliveryItems.Any() ? "24px" : "0");">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 700; color: #1e293b;">
                    Assigned Pickups
                    <span class="ld-count-badge">@_assignedPickups.Count</span>
                </MudText>
                <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Primary"
                           OnClick='() => Navigation.NavigateTo("/linkdel/pickups")'>View All</MudButton>
            </div>

            @foreach (var p in _assignedPickups)
            {
                <MudPaper Elevation="0" Class="ld-card ld-pickup-card" @onclick="() => OpenPickup(p.Id)">
                    <div class="ld-card-top">
                        <div style="flex: 1; min-width: 0;">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 700; color: #1e293b;">@p.PickupNo</MudText>
                            <MudText Typo="Typo.caption" Style="color: #64748b;">@p.CustomerName</MudText>
                        </div>
                        <MudChip T="string" Size="Size.Small" Style="@GetPickupStatusStyle(p.Status)">
                            @GetPickupStatusLabel(p.Status)
                        </MudChip>
                    </div>

                    <div class="ld-card-details">
                        @if (!string.IsNullOrWhiteSpace(p.PickupAddress))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">@TruncateText(BuildPickupAddress(p), 60)</MudText>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(p.ContactPerson) || !string.IsNullOrWhiteSpace(p.Phone))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">
                                    @(p.ContactPerson ?? "")
                                    @if (!string.IsNullOrWhiteSpace(p.Phone))
                                    {
                                        <span> &bull; @p.Phone</span>
                                    }
                                </MudText>
                            </div>
                        }
                        <div class="ld-detail-row">
                            <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Small" Style="color: #94a3b8;" />
                            <MudText Typo="Typo.caption" Style="color: #64748b;">
                                @(p.ScheduledDate?.ToString("dd MMM yyyy") ?? p.RequestDate.ToString("dd MMM yyyy"))
                                @if (p.ScheduledTimeFrom.HasValue)
                                {
                                    <span> @p.ScheduledTimeFrom.Value.ToString("hh\\:mm")</span>
                                }
                                @if (p.EstimatedPieces > 0)
                                {
                                    <span> &bull; ~@p.EstimatedPieces pcs</span>
                                }
                            </MudText>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(p.SpecialInstructions))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Small" Style="color: #f59e0b;" />
                                <MudText Typo="Typo.caption" Style="color: #92400e; font-weight: 500;">@TruncateText(p.SpecialInstructions, 60)</MudText>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(p.CollectionRemarks))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.NoteAlt" Size="Size.Small" Style="color: #7c3aed;" />
                                <MudText Typo="Typo.caption" Style="color: #5b21b6; font-weight: 500;">Collection: @TruncateText(p.CollectionRemarks, 60)</MudText>
                            </div>
                        }
                        @{ var codTotal = p.Shipments?.Where(s => !s.IsDeleted && s.DeclaredValue.HasValue && s.DeclaredValue > 0).Sum(s => s.DeclaredValue ?? 0) ?? 0; }
                        @if (codTotal > 0)
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Payments" Size="Size.Small" Style="color: #059669;" />
                                <MudText Typo="Typo.caption" Style="color: #065f46; font-weight: 600;">COD: @codTotal.ToString("N2")</MudText>
                            </div>
                        }
                    </div>

                    <div class="ld-card-action">
                        <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Primary"
                                   Style="border-radius: 8px; flex: 1; font-weight: 600;"
                                   OnClick="() => OpenPickup(p.Id)" OnClickStopPropagation="true">
                            @if (p.Status == PickupStatus.AssignedForCollection)
                            {
                                <span>Proceed to Collect</span>
                            }
                            else
                            {
                                <span>View Details</span>
                            }
                        </MudButton>
                    </div>
                </MudPaper>
            }
        }

        @if (!_pendingDeliveryItems.Any() && !_assignedPickups.Any())
        {
            <MudPaper Elevation="0" Style="border-radius: 12px; padding: 40px 24px; text-align: center;">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Style="font-size: 3rem; color: #34c38f;" />
                <MudText Typo="Typo.body1" Style="color: #64748b; margin-top: 12px; font-weight: 500;">
                    No pending tasks right now
                </MudText>
                <MudText Typo="Typo.caption" Style="color: #94a3b8; margin-top: 4px;">
                    New pickups and deliveries will appear here automatically
                </MudText>
            </MudPaper>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Warning" Dense="true" Class="mt-4">@_errorMessage</MudAlert>
        }
    }
</div>

