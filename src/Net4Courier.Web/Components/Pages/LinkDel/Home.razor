@page "/linkdel"
@layout Net4Courier.Web.Components.Layout.LinkDelLayout
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@inject AuthenticationStateProvider AuthStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<div class="ld-home">
    <div class="ld-greeting">
        <div>
            <MudText Typo="Typo.h5" Style="font-weight: 700; color: #1e293b;">Hello, @_courierName</MudText>
            <MudText Typo="Typo.body2" Style="color: #94a3b8;">@DateTime.Today.ToString("dddd, dd MMMM yyyy")</MudText>
        </div>
    </div>

    @if (_isLoading)
    {
        <div style="display: flex; justify-content: center; padding: 40px 0;">
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        </div>
    }
    else
    {
        <div class="ld-stats-row">
            <div class="ld-stat-pill" style="background: #eef2ff; color: #556ee6;">
                <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Small" />
                <span>@_pendingPickups Pickups</span>
            </div>
            <div class="ld-stat-pill" style="background: #ecfdf5; color: #059669;">
                <MudIcon Icon="@Icons.Material.Filled.DeliveryDining" Size="Size.Small" />
                <span>@_todayDeliveries Deliveries</span>
            </div>
            <div class="ld-stat-pill" style="background: #fffbeb; color: #d97706;">
                <MudIcon Icon="@Icons.Material.Filled.Payments" Size="Size.Small" />
                <span>@_codCollected.ToString("N0")</span>
            </div>
        </div>

        <div class="ld-section-header">
            <MudText Typo="Typo.subtitle1" Style="font-weight: 700; color: #1e293b;">
                Assigned Pickups
                @if (_assignedPickups.Any())
                {
                    <span class="ld-count-badge">@_assignedPickups.Count</span>
                }
            </MudText>
        </div>

        @if (_assignedPickups.Any())
        {
            @foreach (var p in _assignedPickups)
            {
                <MudPaper Elevation="0" Class="ld-pickup-card" @onclick="() => OpenPickup(p.Id)">
                    <div class="ld-pickup-top">
                        <div style="flex: 1; min-width: 0;">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: 700; color: #1e293b;">@p.PickupNo</MudText>
                            <MudText Typo="Typo.caption" Style="color: #64748b;">@p.CustomerName</MudText>
                        </div>
                        <MudChip T="string" Size="Size.Small" Style="@GetPickupStatusStyle(p.Status)">
                            @GetPickupStatusLabel(p.Status)
                        </MudChip>
                    </div>

                    <div class="ld-pickup-details">
                        @if (!string.IsNullOrWhiteSpace(p.PickupAddress))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">@TruncateText(BuildPickupAddress(p), 60)</MudText>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(p.ContactPerson) || !string.IsNullOrWhiteSpace(p.Phone))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" Style="color: #94a3b8;" />
                                <MudText Typo="Typo.caption" Style="color: #64748b;">
                                    @(p.ContactPerson ?? "")
                                    @if (!string.IsNullOrWhiteSpace(p.Phone))
                                    {
                                        <span> &bull; @p.Phone</span>
                                    }
                                </MudText>
                            </div>
                        }
                        <div class="ld-detail-row">
                            <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Small" Style="color: #94a3b8;" />
                            <MudText Typo="Typo.caption" Style="color: #64748b;">
                                @(p.ScheduledDate?.ToString("dd MMM yyyy") ?? p.RequestDate.ToString("dd MMM yyyy"))
                                @if (p.ScheduledTimeFrom.HasValue)
                                {
                                    <span> @p.ScheduledTimeFrom.Value.ToString("hh:mm tt")</span>
                                }
                                @if (p.EstimatedPieces > 0)
                                {
                                    <span> &bull; ~@p.EstimatedPieces pcs</span>
                                }
                                @if (p.EstimatedWeight > 0)
                                {
                                    <span> / @p.EstimatedWeight.Value.ToString("N1") kg</span>
                                }
                            </MudText>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(p.SpecialInstructions))
                        {
                            <div class="ld-detail-row">
                                <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Small" Style="color: #f59e0b;" />
                                <MudText Typo="Typo.caption" Style="color: #92400e; font-weight: 500;">@TruncateText(p.SpecialInstructions, 60)</MudText>
                            </div>
                        }
                    </div>

                    <div class="ld-pickup-action">
                        <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Primary"
                                   Style="border-radius: 8px; flex: 1; font-weight: 600;"
                                   OnClick="() => OpenPickup(p.Id)" OnClickStopPropagation="true">
                            @if (p.Status == PickupStatus.AssignedForCollection)
                            {
                                <span>Proceed to Collect</span>
                            }
                            else
                            {
                                <span>View Details</span>
                            }
                        </MudButton>
                    </div>
                </MudPaper>
            }
        }
        else
        {
            <MudPaper Elevation="0" Style="border-radius: 12px; padding: 40px 24px; text-align: center;">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Style="font-size: 3rem; color: #34c38f;" />
                <MudText Typo="Typo.body1" Style="color: #64748b; margin-top: 12px; font-weight: 500;">
                    No assigned pickups right now
                </MudText>
                <MudText Typo="Typo.caption" Style="color: #94a3b8; margin-top: 4px;">
                    New assignments will appear here automatically
                </MudText>
            </MudPaper>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Warning" Dense="true" Class="mt-4">@_errorMessage</MudAlert>
        }
    }
</div>

<style>
    .ld-home {
        max-width: 600px;
        margin: 0 auto;
    }

    .ld-greeting {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .ld-stats-row {
        display: flex;
        gap: 8px;
        margin-bottom: 20px;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .ld-stat-pill {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .ld-section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .ld-count-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 22px;
        height: 22px;
        border-radius: 11px;
        background: #ef4444;
        color: #fff;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 0 6px;
        margin-left: 8px;
        vertical-align: middle;
    }

    .ld-pickup-card {
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 12px;
        cursor: pointer;
        transition: transform 0.1s;
        -webkit-tap-highlight-color: transparent;
        border-left: 4px solid #556ee6;
    }

    .ld-pickup-card:active {
        transform: scale(0.98);
    }

    .ld-pickup-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
    }

    .ld-pickup-details {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .ld-detail-row {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .ld-pickup-action {
        display: flex;
        gap: 8px;
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid #f1f5f9;
    }
</style>

@code {
    private string _courierName = "";
    private long _userId;
    private bool _isLoading = true;
    private string _errorMessage = "";

    private int _pendingPickups;
    private int _todayDeliveries;
    private decimal _codCollected;

    private List<PickupRequest> _assignedPickups = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        _courierName = user.FindFirst("FullName")?.Value ?? user.Identity?.Name ?? "Courier";
        var userIdClaim = user.FindFirst("UserId")?.Value;
        if (long.TryParse(userIdClaim, out var uid))
            _userId = uid;

        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        _isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var today = DateTime.UtcNow.Date;

            _assignedPickups = await db.PickupRequests
                .Where(p => p.CourierId == _userId && !p.IsDeleted &&
                    (p.Status == PickupStatus.PickupRequest
                     || p.Status == PickupStatus.AssignedForCollection
                     || p.Status == PickupStatus.Attempted))
                .OrderByDescending(p => p.Status == PickupStatus.AssignedForCollection ? 0 :
                                        p.Status == PickupStatus.PickupRequest ? 1 : 2)
                .ThenByDescending(p => p.RequestDate)
                .Take(50)
                .ToListAsync();

            _pendingPickups = _assignedPickups.Count(p =>
                p.Status == PickupStatus.PickupRequest || p.Status == PickupStatus.AssignedForCollection);

            _todayDeliveries = await db.DRSs
                .Where(d => d.DeliveryEmployeeId == (int)_userId && d.DRSDate.Date == today && !d.IsDeleted)
                .SelectMany(d => d.Details)
                .Where(dd => !dd.IsDeleted)
                .CountAsync();

            _codCollected = await db.DRSs
                .Where(d => d.DeliveryEmployeeId == (int)_userId && d.DRSDate.Date == today && !d.IsDeleted)
                .SelectMany(d => d.Details)
                .Where(dd => !dd.IsDeleted && dd.CollectedAmount.HasValue)
                .SumAsync(dd => dd.CollectedAmount ?? 0);
        }
        catch (Exception ex)
        {
            _errorMessage = "Could not load data. Please try again.";
            Console.WriteLine($"[LinkDel] Dashboard error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OpenPickup(long pickupId)
    {
        Navigation.NavigateTo($"/linkdel/pickups/{pickupId}");
    }

    private string BuildPickupAddress(PickupRequest p)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(p.PickupAddress)) parts.Add(p.PickupAddress);
        if (!string.IsNullOrWhiteSpace(p.City)) parts.Add(p.City);
        return parts.Any() ? string.Join(", ", parts) : "No address";
    }

    private string TruncateText(string? text, int max)
    {
        if (string.IsNullOrWhiteSpace(text)) return "";
        return text.Length > max ? text[..max] + "..." : text;
    }

    private string GetPickupStatusStyle(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => "background: #fef3c7; color: #92400e;",
        PickupStatus.AssignedForCollection => "background: #dbeafe; color: #1d4ed8;",
        PickupStatus.Attempted => "background: #fee2e2; color: #991b1b;",
        PickupStatus.ShipmentCollected => "background: #d1fae5; color: #065f46;",
        _ => "background: #f1f5f9; color: #64748b;"
    };

    private string GetPickupStatusLabel(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => "Requested",
        PickupStatus.AssignedForCollection => "Assigned",
        PickupStatus.Attempted => "Attempted",
        PickupStatus.ShipmentCollected => "Collected",
        PickupStatus.Inscanned => "Inscanned",
        PickupStatus.Cancelled => "Cancelled",
        _ => status.ToString()
    };
}
