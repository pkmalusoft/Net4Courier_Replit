@code {
    private string _courierName = "";
    private long _userId;
    private long _employeeId;
    private bool _isLoading = true;
    private string _errorMessage = "";

    private int _pendingPickups;
    private int _pendingDeliveryAwbs;
    private decimal _totalCod;

    private List<PickupRequest> _assignedPickups = new();
    private List<DeliveryItem> _pendingDeliveryItems = new();

    private class DeliveryItem
    {
        public long DetailId { get; set; }
        public long DRSId { get; set; }
        public string DRSNo { get; set; } = "";
        public string AWBNo { get; set; } = "";
        public string? Consignee { get; set; }
        public string? ConsigneePhone { get; set; }
        public string? Address { get; set; }
        public string? City { get; set; }
        public int? Pieces { get; set; }
        public decimal? Weight { get; set; }
        public bool IsCOD { get; set; }
        public decimal CODAmount { get; set; }
        public string? Status { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        _courierName = user.FindFirst("FullName")?.Value ?? user.Identity?.Name ?? "Courier";
        var userIdClaim = user.FindFirst("UserId")?.Value;
        if (long.TryParse(userIdClaim, out var uid))
            _userId = uid;

        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        _isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            var employee = await db.Employees
                .Where(e => e.UserId == _userId && !e.IsDeleted && e.IsActive)
                .Select(e => new { e.Id })
                .FirstOrDefaultAsync();
            _employeeId = employee?.Id ?? _userId;

            var openDrsList = await db.DRSs
                .Where(d => d.DeliveryEmployeeId == (int)_employeeId && !d.IsDeleted
                    && d.Status != DRSStatus.Closed)
                .OrderByDescending(d => d.DRSDate)
                .Take(20)
                .ToListAsync();

            if (openDrsList.Any())
            {
                var drsIds = openDrsList.Select(d => d.Id).ToList();

                var details = await db.DRSDetails
                    .Include(dd => dd.Inscan)
                    .Include(dd => dd.DRS)
                    .Where(dd => drsIds.Contains(dd.DRSId) && !dd.IsDeleted)
                    .OrderBy(dd => dd.Sequence)
                    .ToListAsync();

                var awbNos = details
                    .Where(dd => dd.Inscan?.AWBNo != null)
                    .Select(dd => dd.Inscan!.AWBNo)
                    .Distinct()
                    .ToList();

                var importCharges = await db.ImportShipments
                    .Where(imp => awbNos.Contains(imp.AWBNo) && !imp.IsDeleted)
                    .Select(imp => new { imp.AWBNo, imp.DutyAmount, imp.VATAmount, imp.OtherCharges, imp.CODAmount })
                    .ToListAsync();

                var importChargesMap = importCharges
                    .GroupBy(x => x.AWBNo)
                    .ToDictionary(g => g.Key, g => g.First());

                _pendingDeliveryItems = details
                    .Where(dd => string.IsNullOrEmpty(dd.Status) || dd.Status == "Pending" || dd.Status == "Out for Delivery")
                    .Select(dd =>
                    {
                        var awb = dd.Inscan?.AWBNo ?? "";
                        var codAmt = dd.CODAmount ?? dd.Inscan?.CODAmount ?? 0;
                        var isCod = dd.Inscan?.IsCOD ?? false;
                        if (codAmt == 0 && !string.IsNullOrEmpty(awb) && importChargesMap.TryGetValue(awb, out var imp))
                        {
                            codAmt = (imp.DutyAmount ?? 0) + (imp.VATAmount ?? 0) + (imp.OtherCharges ?? 0) + (imp.CODAmount ?? 0);
                            if (codAmt > 0) isCod = true;
                        }
                        return new DeliveryItem
                        {
                            DetailId = dd.Id,
                            DRSId = dd.DRSId,
                            DRSNo = dd.DRS?.DRSNo ?? "",
                            AWBNo = awb.Length > 0 ? awb : $"AWB-{dd.InscanId}",
                            Consignee = dd.Inscan?.Consignee ?? "N/A",
                            ConsigneePhone = dd.Inscan?.ConsigneePhone ?? dd.Inscan?.ConsigneeMobile,
                            Address = BuildDeliveryAddress(dd.Inscan),
                            City = dd.Inscan?.ConsigneeCity,
                            Pieces = dd.Inscan?.Pieces,
                            Weight = dd.Inscan?.Weight,
                            IsCOD = isCod,
                            CODAmount = codAmt,
                            Status = dd.Status
                        };
                    })
                    .ToList();

                _pendingDeliveryAwbs = _pendingDeliveryItems.Count;
                _totalCod = _pendingDeliveryItems.Sum(d => d.CODAmount);
            }

            _assignedPickups = await db.PickupRequests
                .Include(p => p.Shipments)
                .Where(p => p.CourierId == _employeeId && !p.IsDeleted &&
                    (p.Status == PickupStatus.PickupRequest
                     || p.Status == PickupStatus.AssignedForCollection
                     || p.Status == PickupStatus.Attempted))
                .OrderByDescending(p => p.Status == PickupStatus.AssignedForCollection ? 0 :
                                        p.Status == PickupStatus.PickupRequest ? 1 : 2)
                .ThenByDescending(p => p.RequestDate)
                .Take(50)
                .ToListAsync();

            _pendingPickups = _assignedPickups.Count(p =>
                p.Status == PickupStatus.PickupRequest || p.Status == PickupStatus.AssignedForCollection);
        }
        catch (Exception ex)
        {
            _errorMessage = "Could not load data. Please try again.";
            Console.WriteLine($"[LinkDel] Dashboard error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OpenDelivery(long detailId)
    {
        Navigation.NavigateTo($"/linkdel/deliveries/{detailId}");
    }

    private void OpenPickup(long pickupId)
    {
        Navigation.NavigateTo($"/linkdel/pickups/{pickupId}");
    }

    private string? BuildDeliveryAddress(InscanMaster? inscan)
    {
        if (inscan == null) return null;
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(inscan.ConsigneeAddress1)) parts.Add(inscan.ConsigneeAddress1);
        if (!string.IsNullOrWhiteSpace(inscan.ConsigneeCity)) parts.Add(inscan.ConsigneeCity);
        return parts.Any() ? string.Join(", ", parts) : null;
    }

    private string BuildPickupAddress(PickupRequest p)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(p.PickupAddress)) parts.Add(p.PickupAddress);
        if (!string.IsNullOrWhiteSpace(p.City)) parts.Add(p.City);
        return parts.Any() ? string.Join(", ", parts) : "No address";
    }

    private string TruncateText(string? text, int max)
    {
        if (string.IsNullOrWhiteSpace(text)) return "";
        return text.Length > max ? text[..max] + "..." : text;
    }

    private string GetPickupStatusStyle(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => "background: #fef3c7; color: #92400e;",
        PickupStatus.AssignedForCollection => "background: #dbeafe; color: #1d4ed8;",
        PickupStatus.Attempted => "background: #fee2e2; color: #991b1b;",
        PickupStatus.ShipmentCollected => "background: #d1fae5; color: #065f46;",
        _ => "background: #f1f5f9; color: #64748b;"
    };

    private string GetPickupStatusLabel(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => "Requested",
        PickupStatus.AssignedForCollection => "Assigned",
        PickupStatus.Attempted => "Attempted",
        PickupStatus.ShipmentCollected => "Collected",
        PickupStatus.Inscanned => "Inscanned",
        PickupStatus.Cancelled => "Cancelled",
        _ => status.ToString()
    };
}
