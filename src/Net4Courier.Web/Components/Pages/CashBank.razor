@page "/cash-bank"
@inject NavigationManager NavigationManager
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization

<PageTitle>Cash and Bank - Net4Courier</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Cash & Bank Transactions</MudText>
    
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Success" Size="Size.Large">
                            <MudIcon Icon="@Icons.Material.Filled.Money" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Cash Transactions</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Default">Manage cash receipts and payments</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2" Class="mb-4">
                        Record cash receipts (money in) and cash payments (money out) using the General Ledger module.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                               StartIcon="@Icons.Material.Filled.Add"
                               OnClick="CreateNewTransaction">
                        New Cash Transaction
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary"
                               StartIcon="@Icons.Material.Filled.List"
                               OnClick="ViewJournalList">
                        View All Journals
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="6">
            <MudCard Elevation="3" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Info" Size="Size.Large">
                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Bank Transactions</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Default">Manage bank receipts and payments</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2" Class="mb-4">
                        Record bank receipts (deposits) and bank payments (withdrawals/transfers) using the General Ledger module.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Info" 
                               StartIcon="@Icons.Material.Filled.Add"
                               OnClick="CreateNewTransaction">
                        New Bank Transaction
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Info"
                               StartIcon="@Icons.Material.Filled.List"
                               OnClick="ViewJournalList">
                        View All Journals
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
    
    <MudPaper Class="pa-4 mt-4" Elevation="2">
        <MudText Typo="Typo.h6" Class="mb-3">Quick Links</MudText>
        <MudGrid>
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Text" Color="Color.Primary" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Receipt"
                           OnClick="@(() => NavigationManager.NavigateTo("/gl/journal-entry"))">
                    New Journal Entry
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Text" Color="Color.Primary" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.ViewList"
                           OnClick="ViewJournalList">
                    Journal List
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Text" Color="Color.Primary" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.AccountTree"
                           OnClick="@(() => NavigationManager.NavigateTo("/gl/chart-of-accounts"))">
                    Chart of Accounts
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Text" Color="Color.Primary" FullWidth="true"
                           StartIcon="@Icons.Material.Filled.BarChart"
                           OnClick="@(() => NavigationManager.NavigateTo("/reports/trial-balance"))">
                    Trial Balance
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

@code {
    private void CreateNewTransaction()
    {
        NavigationManager.NavigateTo("/gl/journal-entry");
    }
    
    private void ViewJournalList()
    {
        NavigationManager.NavigateTo("/gl/journal-list");
    }
}
