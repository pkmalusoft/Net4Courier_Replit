@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject ISnackbar Snackbar
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Color="Color.Primary" />
            <MudText Typo="Typo.h6">Assign Ticket @Ticket.TicketNo</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
            @Ticket.Subject
        </MudText>
        
        <MudSelect T="long?" @bind-Value="_selectedUserId" Label="Assign To" Variant="Variant.Outlined" 
                   Required="true" RequiredError="Please select a user" Clearable="true">
            @foreach (var user in Users)
            {
                <MudSelectItem T="long?" Value="@((long?)user.Id)">@user.FullName</MudSelectItem>
            }
        </MudSelect>
        
        <MudSelect T="TicketStatus" @bind-Value="_newStatus" Label="Update Status" Variant="Variant.Outlined" Class="mt-3">
            <MudSelectItem T="TicketStatus" Value="@TicketStatus.Open">Open</MudSelectItem>
            <MudSelectItem T="TicketStatus" Value="@TicketStatus.InProgress">In Progress</MudSelectItem>
            <MudSelectItem T="TicketStatus" Value="@TicketStatus.PendingCustomer">Pending Customer</MudSelectItem>
        </MudSelect>
        
        <MudTextField @bind-Value="_notes" Label="Notes (Optional)" Variant="Variant.Outlined" Lines="2" Class="mt-3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="_saving">
            @if (_saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Assign
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Ticket Ticket { get; set; } = null!;
    [Parameter] public List<User> Users { get; set; } = new();

    private long? _selectedUserId;
    private TicketStatus _newStatus;
    private string _notes = "";
    private bool _saving;

    protected override void OnInitialized()
    {
        _selectedUserId = Ticket.AssignedToUserId;
        _newStatus = Ticket.Status;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        if (!_selectedUserId.HasValue)
        {
            Snackbar.Add("Please select a user to assign", Severity.Warning);
            return;
        }

        _saving = true;
        StateHasChanged();

        try
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            var ticket = await db.Tickets.FindAsync(Ticket.Id);
            
            if (ticket == null)
            {
                Snackbar.Add("Ticket not found", Severity.Error);
                return;
            }

            var user = Users.FirstOrDefault(u => u.Id == _selectedUserId);
            
            ticket.AssignedToUserId = _selectedUserId;
            ticket.AssignedToUserName = user?.FullName;
            ticket.Status = _newStatus;
            ticket.ModifiedAt = DateTime.UtcNow;
            
            if (ticket.FirstResponseAt == null && _selectedUserId.HasValue)
            {
                ticket.FirstResponseAt = DateTime.UtcNow;
            }

            await db.SaveChangesAsync();
            
            MudDialog.Close(DialogResult.Ok(ticket));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error assigning ticket: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }
}
