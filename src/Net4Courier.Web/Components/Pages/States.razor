@page "/states"
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>States</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Elevation="2" Class="pa-4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
            <MudText Typo="Typo.h5">States</MudText>
            <MudStack Row="true" Spacing="2">
                <MudSelect T="long?" Value="_selectedCountryId" Label="Filter by Country" Variant="Variant.Outlined" 
                           Dense="true" Style="min-width: 200px;" Immediate="true" ValueChanged="OnCountryFilterChanged">
                    <MudSelectItem T="long?" Value="@((long?)null)">All Countries</MudSelectItem>
                    @foreach (var country in _countries)
                    {
                        <MudSelectItem T="long?" Value="@country.Id">@country.Name</MudSelectItem>
                    }
                </MudSelect>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">
                    Add State
                </MudButton>
            </MudStack>
        </MudStack>

        <MudTable Items="@_filteredStates" Hover="true" Striped="true" Loading="@_loading" LoadingProgressColor="Color.Primary" Dense="true">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Code</MudTh>
                <MudTh>Country</MudTh>
                <MudTh>Cities</MudTh>
                <MudTh>Status</MudTh>
                <MudTh Style="width: 120px;">Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Code">@context.Code</MudTd>
                <MudTd DataLabel="Country">@context.Country?.Name</MudTd>
                <MudTd DataLabel="Cities">@context.Cities.Count</MudTd>
                <MudTd DataLabel="Status">
                    <MudChip T="string" Color="@(context.IsActive ? Color.Success : Color.Default)" Size="Size.Small">
                        @(context.IsActive ? "Active" : "Inactive")
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => DeleteState(context))" />
                </MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText>No states found.</MudText>
            </NoRecordsContent>
        </MudTable>
    </MudPaper>
</MudContainer>

@code {
    private List<State> _states = new();
    private List<State> _filteredStates = new();
    private List<Country> _countries = new();
    private long? _selectedCountryId;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        _countries = await dbContext.Countries.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        _states = await dbContext.States
            .Include(s => s.Country)
            .Include(s => s.Cities)
            .Where(s => !s.IsDeleted)
            .OrderBy(s => s.Name)
            .ToListAsync();
        ApplyFilter();
        _loading = false;
    }

    private void OnCountryFilterChanged(long? countryId)
    {
        _selectedCountryId = countryId;
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredStates = _selectedCountryId.HasValue
            ? _states.Where(s => s.CountryId == _selectedCountryId.Value).ToList()
            : _states;
    }

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters<StateDialog>
        {
            { x => x.State, new State { CountryId = _selectedCountryId ?? 0 } },
            { x => x.IsNew, true },
            { x => x.Countries, _countries }
        };

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<StateDialog>("Add State", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
            Snackbar.Add("State created successfully", Severity.Success);
        }
    }

    private async Task OpenEditDialog(State state)
    {
        var parameters = new DialogParameters<StateDialog>
        {
            { x => x.State, state },
            { x => x.IsNew, false },
            { x => x.Countries, _countries }
        };

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<StateDialog>("Edit State", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
            Snackbar.Add("State updated successfully", Severity.Success);
        }
    }

    private async Task DeleteState(State state)
    {
        if (state.Cities.Any())
        {
            Snackbar.Add($"Cannot delete '{state.Name}' - it has {state.Cities.Count} cities", Severity.Warning);
            return;
        }

        var confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete '{state.Name}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            await using var dbContext = await DbFactory.CreateDbContextAsync();
            var entity = await dbContext.States.FindAsync(state.Id);
            if (entity != null)
            {
                entity.IsDeleted = true;
                await dbContext.SaveChangesAsync();
            }
            await LoadData();
            Snackbar.Add("State deleted successfully", Severity.Success);
        }
    }
}
