@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Class="mb-4">@Message</MudText>
        <MudTextField @bind-Value="_reason" Label="Reason for Voiding" 
                      Placeholder="e.g., Customer requested cancellation, Duplicate request, No longer needed..."
                      Variant="Variant.Outlined" Lines="3" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Close</MudButton>
        <MudButton OnClick="Submit" Color="Color.Error" Variant="Variant.Filled" 
                   Disabled="@string.IsNullOrWhiteSpace(_reason)">Void</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string Title { get; set; } = "Void";

    [Parameter]
    public string Message { get; set; } = "Are you sure you want to void this request?";

    private string _reason = string.Empty;

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_reason));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
