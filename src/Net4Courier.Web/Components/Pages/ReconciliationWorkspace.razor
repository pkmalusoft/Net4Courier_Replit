@page "/bank-reconciliation/{ReconciliationId:long}"
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="GoBack" />
            <MudText Typo="Typo.h5">Reconciliation Workspace</MudText>
        </MudStack>
    </MudStack>

    <MudAlert Severity="Severity.Info" Class="mb-4">
        Bank Reconciliation Workspace is under development. This feature will be available after TrueBooks GL integration is complete.
    </MudAlert>

    <MudPaper Class="pa-4" Elevation="2">
        <MudText Typo="Typo.body1">
            The Bank Reconciliation Workspace will allow you to:
        </MudText>
        <MudList T="string" Dense="true" Class="mt-2">
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Import bank statements from CSV/Excel files</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Auto-match statement lines with book entries</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Manually match unreconciled transactions</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Create reconciliation adjustments</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Finalize and lock reconciliations</MudListItem>
        </MudList>
    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public long ReconciliationId { get; set; }

    private void GoBack()
    {
        Navigation.NavigateTo("/bank-reconciliation");
    }
}
