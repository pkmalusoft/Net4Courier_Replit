@inject ApplicationDbContext DbContext
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Vehicle.VehicleNo" Label="Vehicle No" Required="true" RequiredError="Vehicle number is required" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="Vehicle.VehicleType" Label="Vehicle Type" Required="true">
                        <MudSelectItem Value="@("Motorcycle")">Motorcycle</MudSelectItem>
                        <MudSelectItem Value="@("Van")">Van</MudSelectItem>
                        <MudSelectItem Value="@("Truck")">Truck</MudSelectItem>
                        <MudSelectItem Value="@("Car")">Car</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Vehicle.Make" Label="Make" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Vehicle.Model" Label="Model" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudNumericField @bind-Value="Vehicle.Year" Label="Year" Min="1990" Max="2030" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudNumericField @bind-Value="Vehicle.Capacity" Label="Capacity (kg)" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Vehicle.DriverName" Label="Driver Name" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Vehicle.DriverPhone" Label="Driver Phone" />
                </MudItem>
                <MudItem xs="12">
                    <MudSwitch @bind-Value="Vehicle.IsActive" Label="Active" Color="Color.Success" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Vehicle Vehicle { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        if (IsNew)
        {
            Vehicle.CreatedAt = DateTime.UtcNow;
            Vehicle.CompanyId = 1;
            DbContext.Set<Vehicle>().Add(Vehicle);
        }
        else
        {
            Vehicle.ModifiedAt = DateTime.UtcNow;
            DbContext.Set<Vehicle>().Update(Vehicle);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Vehicle));
    }
}
