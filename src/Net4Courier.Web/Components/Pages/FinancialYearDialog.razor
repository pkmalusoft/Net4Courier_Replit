@inject IDbContextFactory<ApplicationDbContext> DbFactory
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CalendarMonth" Class="mr-2" />
            @(IsNew ? "Add New Financial Year" : "Edit Financial Year")
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="d-block mx-auto my-4" />
        }
        else
        {
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12">
                    <MudSelect T="long" @bind-Value="FinancialYear.CompanyId" Label="Company" Required="true" 
                               RequiredError="Company is required" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        @foreach (var company in _companies)
                        {
                            <MudSelectItem T="long" Value="@company.Id">@company.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="FinancialYear.Name" Label="Name (e.g. 2025-2026)" Required="true" 
                                  RequiredError="Name is required" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="_startDate" Label="Start Date" Required="true" 
                                   RequiredError="Start date is required" Variant="Variant.Outlined" DateFormat="dd-MMM-yyyy"
                                   PickerVariant="PickerVariant.Dialog" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="_endDate" Label="End Date" Required="true" 
                                   RequiredError="End date is required" Variant="Variant.Outlined" DateFormat="dd-MMM-yyyy"
                                   PickerVariant="PickerVariant.Dialog" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="FinancialYear.IsCurrent" Label="Set as Current Year" Color="Color.Primary" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="FinancialYear.IsClosed" Label="Year Closed" Color="Color.Error" />
                </MudItem>
            </MudGrid>
        </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public FinancialYear FinancialYear { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    private bool _loading = true;
    private List<Company> _companies = new();
    private DateTime? _startDate;
    private DateTime? _endDate;

    protected override async Task OnInitializedAsync()
    {
        _loading = true;
        try
        {
            await using var dbContext = await DbFactory.CreateDbContextAsync();
            _companies = await dbContext.Companies.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
            
            if (!IsNew)
            {
                _startDate = FinancialYear.StartDate.ToLocalTime();
                _endDate = FinancialYear.EndDate.ToLocalTime();
            }
            else
            {
                _startDate = new DateTime(DateTime.Now.Year, 4, 1);
                _endDate = new DateTime(DateTime.Now.Year + 1, 3, 31);
                FinancialYear.Name = $"{DateTime.Now.Year}-{DateTime.Now.Year + 1}";
                
                if (_companies.Any())
                {
                    FinancialYear.CompanyId = _companies.First().Id;
                }
            }
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (_startDate.HasValue)
            FinancialYear.StartDate = DateTime.SpecifyKind(_startDate.Value, DateTimeKind.Utc);
        if (_endDate.HasValue)
            FinancialYear.EndDate = DateTime.SpecifyKind(_endDate.Value, DateTimeKind.Utc);

        await using var dbContext = await DbFactory.CreateDbContextAsync();

        if (IsNew)
        {
            FinancialYear.CreatedAt = DateTime.UtcNow;
            dbContext.FinancialYears.Add(FinancialYear);
            
            GenerateMonthlyPeriods();
        }
        else
        {
            FinancialYear.ModifiedAt = DateTime.UtcNow;
            dbContext.FinancialYears.Update(FinancialYear);
        }

        if (FinancialYear.IsCurrent)
        {
            var otherYears = await dbContext.FinancialYears
                .Where(f => f.CompanyId == FinancialYear.CompanyId && f.Id != FinancialYear.Id)
                .ToListAsync();
            foreach (var fy in otherYears)
            {
                fy.IsCurrent = false;
            }
        }

        await dbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(FinancialYear));
    }

    private void Cancel() => MudDialog.Cancel();
    
    private void GenerateMonthlyPeriods()
    {
        var startDate = FinancialYear.StartDate;
        var endDate = FinancialYear.EndDate;
        var periodNumber = 1;
        var currentDate = startDate;
        
        while (currentDate <= endDate && periodNumber <= 12)
        {
            var periodStart = currentDate;
            var periodEnd = new DateTime(currentDate.Year, currentDate.Month, 
                DateTime.DaysInMonth(currentDate.Year, currentDate.Month), 23, 59, 59);
            
            if (periodEnd > endDate)
                periodEnd = endDate;
            
            var period = new FinancialPeriod
            {
                PeriodNumber = periodNumber,
                PeriodName = periodStart.ToString("MMM yyyy"),
                StartDate = DateTime.SpecifyKind(periodStart, DateTimeKind.Utc),
                EndDate = DateTime.SpecifyKind(periodEnd, DateTimeKind.Utc),
                Status = PeriodStatus.Open,
                CreatedAt = DateTime.UtcNow
            };
            
            FinancialYear.Periods.Add(period);
            periodNumber++;
            currentDate = periodEnd.AddDays(1).Date;
        }
    }
}
