@inject ApplicationDbContext DbContext
@inject ISnackbar Snackbar
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@(IsNew ? "Add Branch / Department" : "Edit Branch / Department")</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid Spacing="2">
                <MudItem xs="12" md="8">
                    <MudTextField @bind-Value="Branch.Name" Label="Branch / Department Name" Required="true" 
                                  RequiredError="Name is required" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Branch.Code" Label="Code" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudDivider Class="my-1" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Contact Information</MudText>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.ContactName" Label="Contact Person" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Mobile" Label="Mobile" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudDivider Class="my-1" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Address</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Branch.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.City" Label="City" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Country" Label="Country" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudSwitch @bind-Value="Branch.IsHeadOffice" Label="Head Office / Main Branch" Color="Color.Primary" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public CustomerBranch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;

    protected override void OnInitialized()
    {
        if (IsNew)
        {
            Branch.IsActive = true;
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            DbContext.CustomerBranches.Add(Branch);
        }
        else
        {
            Branch.ModifiedAt = DateTime.UtcNow;
            DbContext.CustomerBranches.Update(Branch);
        }

        await DbContext.SaveChangesAsync();
        Snackbar.Add(IsNew ? "Branch added" : "Branch updated", Severity.Success);
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
