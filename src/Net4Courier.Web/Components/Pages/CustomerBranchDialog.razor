@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ISnackbar Snackbar
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@using Microsoft.EntityFrameworkCore

<MudDialog Style="max-width: 600px;">
    <TitleContent>
        <MudText Typo="Typo.h6">@(IsNew ? "Add Branch / Department" : "Edit Branch / Department")</MudText>
    </TitleContent>
    <DialogContent>
        <div style="max-height: 70vh; overflow-y: auto; padding-right: 8px;">
            <MudForm @ref="_form" @bind-IsValid="_formIsValid">
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="8">
                        <MudTextField @bind-Value="Branch.Name" Label="Branch / Department Name" Required="true" 
                                      RequiredError="Name is required" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudTextField @bind-Value="Branch.Code" Label="Code" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    
                    <MudItem xs="12" Class="pb-0">
                        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mt-2">
                            <MudIcon Icon="@Icons.Material.Filled.ContactPhone" Size="Size.Small" Class="mr-1" Style="vertical-align: middle;" />
                            Contact Information
                        </MudText>
                        <MudDivider Class="mt-1" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="Branch.ContactName" Label="Contact Person" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="Branch.Mobile" Label="Mobile" Variant="Variant.Outlined" Dense="true" />
                    </MudItem>
                    
                    <MudItem xs="12" Class="pb-0">
                        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mt-2">
                            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="mr-1" Style="vertical-align: middle;" />
                            Address
                        </MudText>
                        <MudDivider Class="mt-1" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="Branch.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudAutocomplete T="City" Label="City" Value="_selectedCity"
                                         SearchFunc="SearchCities" ToStringFunc="@(c => c?.Name ?? "")"
                                         Variant="Variant.Outlined" ShowProgressIndicator="true"
                                         ResetValueOnEmptyText="true" CoerceText="false" Dense="true"
                                         ValueChanged="OnCityChanged" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="Branch.Country" Label="Country" Variant="Variant.Outlined" ReadOnly="true" Dense="true" />
                    </MudItem>
                    
                    <MudItem xs="12" Class="pt-2 pb-3">
                        <MudDivider Class="mb-3" />
                        <MudSwitch @bind-Value="Branch.IsHeadOffice" Label="Head Office / Main Branch" Color="Color.Primary" />
                    </MudItem>
                </MudGrid>
            </MudForm>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public CustomerBranch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    private City? _selectedCity;
    private List<City> _cities = new();

    protected override async Task OnInitializedAsync()
    {
        if (IsNew)
        {
            Branch.IsActive = true;
        }
        else if (Branch.CityId.HasValue)
        {
            await using var dbContext = await DbFactory.CreateDbContextAsync();
            _selectedCity = await dbContext.Cities
                .Include(c => c.Country)
                .FirstOrDefaultAsync(c => c.Id == Branch.CityId);
            
            if (_selectedCity != null)
            {
                Branch.Country = _selectedCity.Country?.Name ?? "";
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await _form.Validate();
            StateHasChanged();
        }
    }

    private async Task<IEnumerable<City>> SearchCities(string value, CancellationToken cancellationToken)
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (string.IsNullOrWhiteSpace(value))
        {
            return await dbContext.Cities
                .Include(c => c.Country)
                .Where(c => c.IsActive && !c.IsDeleted)
                .OrderBy(c => c.Name)
                .Take(20)
                .ToListAsync();
        }

        return await dbContext.Cities
            .Include(c => c.Country)
            .Where(c => c.IsActive && !c.IsDeleted && c.Name.ToLower().Contains(value.ToLower()))
            .OrderBy(c => c.Name)
            .Take(20)
            .ToListAsync();
    }

    private void OnCityChanged(City? city)
    {
        _selectedCity = city;
        if (city != null)
        {
            Branch.CityId = city.Id;
            Branch.City = city.Name;
            Branch.Country = city.Country?.Name ?? "";
        }
        else
        {
            Branch.CityId = null;
            Branch.City = null;
            Branch.Country = null;
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            dbContext.CustomerBranches.Add(Branch);
        }
        else
        {
            if (Branch.CreatedAt.Kind == DateTimeKind.Unspecified)
            {
                Branch.CreatedAt = DateTime.SpecifyKind(Branch.CreatedAt, DateTimeKind.Utc);
            }
            Branch.ModifiedAt = DateTime.UtcNow;
            dbContext.CustomerBranches.Update(Branch);
        }

        await dbContext.SaveChangesAsync();
        Snackbar.Add(IsNew ? "Branch added" : "Branch updated", Severity.Success);
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
