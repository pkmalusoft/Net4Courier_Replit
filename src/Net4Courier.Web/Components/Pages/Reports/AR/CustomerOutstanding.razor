@page "/reports/ar/customer-outstanding"
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Finance.Entities
@using Net4Courier.Masters.Entities
@using Net4Courier.Kernel.Enums
@using Net4Courier.Web.Services
@using Microsoft.JSInterop
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ReportExportService ExportService
@inject IJSRuntime JS
@inject ISnackbar Snackbar

<PageTitle>Customer Outstanding - Net4Courier</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4" Elevation="2">
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.h5">Customer Outstanding Report</MudText>
            </MudItem>
            <MudItem xs="12" sm="6" Class="d-flex justify-end gap-2">
                <MudButton Variant="Variant.Outlined" Color="Color.Success" StartIcon="@Icons.Material.Filled.TableChart" 
                           OnClick="ExportExcel" Disabled="@(!_data.Any())">Excel</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Error" StartIcon="@Icons.Material.Filled.PictureAsPdf" 
                           OnClick="ExportPdf" Disabled="@(!_data.Any())">PDF</MudButton>
            </MudItem>
        </MudGrid>

        <MudGrid Class="mt-4">
            <MudItem xs="12" sm="3">
                <MudDatePicker @bind-Date="_asOnDate" Label="As On Date" DateFormat="dd-MMM-yyyy" Variant="Variant.Outlined" Dense="true" />
            </MudItem>
            <MudItem xs="12" sm="3">
                <MudSelect T="long?" Label="Branch" @bind-Value="_branchId" Clearable Variant="Variant.Outlined" Dense="true">
                    @foreach (var branch in _branches)
                    {
                        <MudSelectItem Value="@((long?)branch.Id)">@branch.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudCheckBox @bind-Value="_showZeroBalances" Label="Show Zero" Dense="true" Class="mt-2" />
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadData" FullWidth="true">
                    Generate
                </MudButton>
            </MudItem>
        </MudGrid>

        @if (_isLoading)
        {
            <MudProgressLinear Indeterminate="true" Class="mt-4" />
        }
        else if (_data.Any())
        {
            <MudPaper Class="pa-4 mt-4" Elevation="1" Style="background: var(--mud-palette-grey-lighten-4);">
                <MudGrid>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Customers</MudText>
                        <MudText Typo="Typo.h6">@_data.Count</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Invoiced</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.TotalInvoiced).ToString("N2")</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Received</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Success">@_data.Sum(x => x.TotalReceived).ToString("N2")</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Outstanding</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Error">@_data.Sum(x => x.Outstanding).ToString("N2")</MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>

            <MudTable Items="@_data" Dense="true" Hover="true" Striped="true" Class="mt-4" FixedHeader="true" Height="450px">
                <HeaderContent>
                    <MudTh>Code</MudTh>
                    <MudTh>Customer Name</MudTh>
                    <MudTh>Account Type</MudTh>
                    <MudTh Style="text-align: right">Opening</MudTh>
                    <MudTh Style="text-align: right">Invoiced</MudTh>
                    <MudTh Style="text-align: right">Received</MudTh>
                    <MudTh Style="text-align: right">Outstanding</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Code</MudTd>
                    <MudTd>@context.Name</MudTd>
                    <MudTd>@context.AccountType</MudTd>
                    <MudTd Style="text-align: right">@context.OpeningBalance.ToString("N2")</MudTd>
                    <MudTd Style="text-align: right">@context.TotalInvoiced.ToString("N2")</MudTd>
                    <MudTd Style="text-align: right; color: green;">@context.TotalReceived.ToString("N2")</MudTd>
                    <MudTd Style="@($"text-align: right; font-weight: bold; {(context.Outstanding > 0 ? "color: red;" : "")}")">
                        @context.Outstanding.ToString("N2")
                    </MudTd>
                </RowTemplate>
                <FooterContent>
                    <MudTd colspan="3"><strong>Grand Total</strong></MudTd>
                    <MudTd Style="text-align: right"><strong>@_data.Sum(x => x.OpeningBalance).ToString("N2")</strong></MudTd>
                    <MudTd Style="text-align: right"><strong>@_data.Sum(x => x.TotalInvoiced).ToString("N2")</strong></MudTd>
                    <MudTd Style="text-align: right"><strong>@_data.Sum(x => x.TotalReceived).ToString("N2")</strong></MudTd>
                    <MudTd Style="text-align: right"><strong>@_data.Sum(x => x.Outstanding).ToString("N2")</strong></MudTd>
                </FooterContent>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Class="mt-4">Click Generate to load outstanding report.</MudAlert>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<OutstandingDto> _data = new();
    private List<Branch> _branches = new();
    private DateTime? _asOnDate = DateTime.SpecifyKind(DateTime.Today, DateTimeKind.Utc);
    private long? _branchId;
    private bool _showZeroBalances;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        _branches = await dbContext.Branches.Where(b => b.IsActive).OrderBy(b => b.Name).ToListAsync();
    }

    private async Task LoadData()
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        _isLoading = true;
        _data.Clear();

        try
        {
            var asOnUtc = _asOnDate.HasValue 
                ? DateTime.SpecifyKind(_asOnDate.Value.Date.AddDays(1).AddTicks(-1), DateTimeKind.Utc) 
                : DateTime.UtcNow;

            var customersWithAccType = await dbContext.Parties
                .Where(p => p.IsActive && p.AccountNature == PartyAccountNature.Receivable)
                .Include(p => p.AccountType)
                .OrderBy(p => p.Name)
                .ToListAsync();

            var invoicesQuery = dbContext.Invoices.Where(i => i.InvoiceDate <= asOnUtc && i.Status != InvoiceStatus.Cancelled);
            if (_branchId.HasValue)
                invoicesQuery = invoicesQuery.Where(i => i.BranchId == _branchId);
            var invoices = await invoicesQuery.ToListAsync();

            var receiptsQuery = dbContext.Receipts.Where(r => r.ReceiptDate <= asOnUtc);
            if (_branchId.HasValue)
                receiptsQuery = receiptsQuery.Where(r => r.BranchId == _branchId);
            var receipts = await receiptsQuery.ToListAsync();

            foreach (var customer in customersWithAccType)
            {
                decimal opening = 0; // Opening balance calculated elsewhere
                var invoiced = invoices.Where(i => i.CustomerId == customer.Id).Sum(i => i.NetTotal ?? 0);
                var received = receipts.Where(r => r.CustomerId == customer.Id).Sum(r => r.Amount ?? 0);
                var outstanding = opening + invoiced - received;

                if (!_showZeroBalances && outstanding == 0) continue;

                _data.Add(new OutstandingDto
                {
                    Code = customer.Code ?? "",
                    Name = customer.Name,
                    AccountType = customer.AccountType?.Name ?? "Cash",
                    OpeningBalance = opening,
                    TotalInvoiced = invoiced,
                    TotalReceived = received,
                    Outstanding = outstanding
                });
            }

            _data = _data.OrderByDescending(x => x.Outstanding).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }

        _isLoading = false;
    }

    private async Task ExportExcel()
    {
        var columns = new Dictionary<string, Func<OutstandingDto, object?>>
        {
            { "Code", x => x.Code },
            { "Customer Name", x => x.Name },
            { "Account Type", x => x.AccountType },
            { "Opening Balance", x => x.OpeningBalance },
            { "Total Invoiced", x => x.TotalInvoiced },
            { "Total Received", x => x.TotalReceived },
            { "Outstanding", x => x.Outstanding }
        };

        var bytes = ExportService.ExportToExcel("Customer Outstanding", _data, columns);
        await DownloadFile(bytes, "CustomerOutstanding.xlsx", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
    }

    private async Task ExportPdf()
    {
        var columns = new Dictionary<string, Func<OutstandingDto, object?>>
        {
            { "Code", x => x.Code },
            { "Customer Name", x => x.Name },
            { "Account Type", x => x.AccountType },
            { "Opening", x => x.OpeningBalance },
            { "Invoiced", x => x.TotalInvoiced },
            { "Received", x => x.TotalReceived },
            { "Outstanding", x => x.Outstanding }
        };

        var totals = new Dictionary<string, decimal>
        {
            { "Opening", _data.Sum(x => x.OpeningBalance) },
            { "Invoiced", _data.Sum(x => x.TotalInvoiced) },
            { "Received", _data.Sum(x => x.TotalReceived) },
            { "Outstanding", _data.Sum(x => x.Outstanding) }
        };

        var bytes = ExportService.ExportToPdf("Customer Outstanding Report", $"As on: {_asOnDate:dd-MMM-yyyy}", _data, columns, totals);
        await DownloadFile(bytes, "CustomerOutstanding.pdf", "application/pdf");
    }

    private async Task DownloadFile(byte[] bytes, string filename, string contentType)
    {
        var base64 = Convert.ToBase64String(bytes);
        await JS.InvokeVoidAsync("downloadFile", filename, base64, contentType);
    }

    private class OutstandingDto
    {
        public string Code { get; set; } = "";
        public string Name { get; set; } = "";
        public string AccountType { get; set; } = "";
        public decimal OpeningBalance { get; set; }
        public decimal TotalInvoiced { get; set; }
        public decimal TotalReceived { get; set; }
        public decimal Outstanding { get; set; }
    }
}
