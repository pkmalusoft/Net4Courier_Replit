@page "/reports/ops/customer-awb-list"
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@using Net4Courier.Masters.Entities
@using Net4Courier.Kernel.Enums
@using Net4Courier.Web.Services
@using Microsoft.JSInterop
@inject ApplicationDbContext DbContext
@inject ReportExportService ExportService
@inject IJSRuntime JS
@inject ISnackbar Snackbar

<PageTitle>Customer AWB List - Net4Courier</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4" Elevation="2">
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.h5">Customer AWB List</MudText>
            </MudItem>
            <MudItem xs="12" sm="6" Class="d-flex justify-end gap-2">
                <MudButton Variant="Variant.Outlined" Color="Color.Success" StartIcon="@Icons.Material.Filled.TableChart" 
                           OnClick="ExportExcel" Disabled="@(!_data.Any())">Excel</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Error" StartIcon="@Icons.Material.Filled.PictureAsPdf" 
                           OnClick="ExportPdf" Disabled="@(!_data.Any())">PDF</MudButton>
            </MudItem>
        </MudGrid>

        <MudGrid Class="mt-4">
            <MudItem xs="12" sm="3">
                <MudSelect T="long?" Label="Customer" @bind-Value="_customerId" Variant="Variant.Outlined" Dense="true">
                    @foreach (var customer in _customers)
                    {
                        <MudSelectItem Value="@((long?)customer.Id)">@customer.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudDatePicker @bind-Date="_fromDate" Label="From Date" DateFormat="dd-MMM-yyyy" Variant="Variant.Outlined" Dense="true" />
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudDatePicker @bind-Date="_toDate" Label="To Date" DateFormat="dd-MMM-yyyy" Variant="Variant.Outlined" Dense="true" />
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="string" Label="Status" @bind-Value="_status" Clearable Variant="Variant.Outlined" Dense="true">
                    <MudSelectItem Value="@("Pending")">Pending</MudSelectItem>
                    <MudSelectItem Value="@("InTransit")">In Transit</MudSelectItem>
                    <MudSelectItem Value="@("Delivered")">Delivered</MudSelectItem>
                    <MudSelectItem Value="@("RTS")">RTS</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadData" FullWidth="true">
                    Generate
                </MudButton>
            </MudItem>
        </MudGrid>

        @if (_isLoading)
        {
            <MudProgressLinear Indeterminate="true" Class="mt-4" />
        }
        else if (_data.Any())
        {
            <MudPaper Class="pa-4 mt-4" Elevation="1" Outlined="true">
                <MudGrid>
                    <MudItem xs="6">
                        <MudText Typo="Typo.h6">@_customerName</MudText>
                    </MudItem>
                    <MudItem xs="6" Class="text-right">
                        <MudText Typo="Typo.body2">@_fromDate?.ToString("dd-MMM-yyyy") to @_toDate?.ToString("dd-MMM-yyyy")</MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>

            <MudPaper Class="pa-4 mt-2" Elevation="1" Style="background: var(--mud-palette-grey-lighten-4);">
                <MudGrid>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">Total AWBs</MudText>
                        <MudText Typo="Typo.h6">@_data.Count</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">Delivered</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Success">@_data.Count(x => x.Status == "Delivered")</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">In Transit</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Info">@_data.Count(x => x.Status == "InTransit" || x.Status == "In Transit")</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">Total Pieces</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.Pieces)</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">Total Weight</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.Weight).ToString("N2") Kg</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="2">
                        <MudText Typo="Typo.caption">Total Amount</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.Amount).ToString("N2")</MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>

            <MudTable Items="@_data" Dense="true" Hover="true" Striped="true" Class="mt-4" FixedHeader="true" Height="400px">
                <HeaderContent>
                    <MudTh>AWB No</MudTh>
                    <MudTh>Date</MudTh>
                    <MudTh>Consignee</MudTh>
                    <MudTh>Destination</MudTh>
                    <MudTh Style="text-align: center">Pcs</MudTh>
                    <MudTh Style="text-align: right">Weight</MudTh>
                    <MudTh Style="text-align: right">Amount</MudTh>
                    <MudTh>Status</MudTh>
                    <MudTh>Delivery Date</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.AWBNo</MudTd>
                    <MudTd>@context.Date.ToString("dd-MMM-yyyy")</MudTd>
                    <MudTd>@context.Consignee</MudTd>
                    <MudTd>@context.Destination</MudTd>
                    <MudTd Style="text-align: center">@context.Pieces</MudTd>
                    <MudTd Style="text-align: right">@context.Weight.ToString("N2")</MudTd>
                    <MudTd Style="text-align: right">@context.Amount.ToString("N2")</MudTd>
                    <MudTd>
                        <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(context.Status)">@context.Status</MudChip>
                    </MudTd>
                    <MudTd>@context.DeliveryDate?.ToString("dd-MMM-yyyy")</MudTd>
                </RowTemplate>
            </MudTable>
        }
        else if (!_isLoading && _customerId.HasValue)
        {
            <MudAlert Severity="Severity.Info" Class="mt-4">No AWBs found for the selected criteria.</MudAlert>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Class="mt-4">Select a customer and click Generate.</MudAlert>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<AWBDto> _data = new();
    private List<Party> _customers = new();
    private long? _customerId;
    private string _customerName = "";
    private DateTime? _fromDate = DateTime.SpecifyKind(new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1), DateTimeKind.Utc);
    private DateTime? _toDate = DateTime.SpecifyKind(DateTime.Today, DateTimeKind.Utc);
    private string? _status;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        _customers = await DbContext.Parties
            .Where(p => p.IsActive && p.AccountNature == PartyAccountNature.Receivable)
            .OrderBy(p => p.Name)
            .ToListAsync();
    }

    private async Task LoadData()
    {
        if (!_customerId.HasValue)
        {
            Snackbar.Add("Please select a customer", Severity.Warning);
            return;
        }

        _isLoading = true;
        _data.Clear();

        try
        {
            var customer = _customers.FirstOrDefault(c => c.Id == _customerId);
            _customerName = customer?.Name ?? "";

            var fromUtc = _fromDate.HasValue ? DateTime.SpecifyKind(_fromDate.Value.Date, DateTimeKind.Utc) : DateTime.MinValue;
            var toUtc = _toDate.HasValue ? DateTime.SpecifyKind(_toDate.Value.Date.AddDays(1).AddTicks(-1), DateTimeKind.Utc) : DateTime.MaxValue;

            var query = DbContext.InscanMasters
                .Where(a => a.CustomerId == _customerId)
                .Where(a => a.TransactionDate >= fromUtc && a.TransactionDate <= toUtc);

            if (!string.IsNullOrEmpty(_status))
            {
                var statusEnum = Enum.Parse<CourierStatus>(_status);
                query = query.Where(a => a.CourierStatusId == statusEnum);
            }

            var awbs = await query.OrderByDescending(a => a.TransactionDate).ToListAsync();

            _data = awbs.Select(a => new AWBDto
            {
                AWBNo = a.AWBNo ?? "",
                Date = a.TransactionDate,
                Consignee = a.Consignee ?? "",
                Destination = a.ConsigneeCity ?? "",
                Pieces = a.Pieces ?? 0,
                Weight = a.Weight ?? 0,
                Amount = a.NetTotal ?? 0,
                Status = a.CourierStatusId.ToString(),
                DeliveryDate = a.DeliveredDate
            }).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }

        _isLoading = false;
    }

    private async Task ExportExcel()
    {
        var columns = new Dictionary<string, Func<AWBDto, object?>>
        {
            { "AWB No", x => x.AWBNo },
            { "Date", x => x.Date },
            { "Consignee", x => x.Consignee },
            { "Destination", x => x.Destination },
            { "Pieces", x => x.Pieces },
            { "Weight", x => x.Weight },
            { "Amount", x => x.Amount },
            { "Status", x => x.Status },
            { "Delivery Date", x => x.DeliveryDate }
        };

        var bytes = ExportService.ExportToExcel("Customer AWB List", _data, columns);
        await DownloadFile(bytes, $"CustomerAWBList_{_customerName.Replace(" ", "_")}.xlsx", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
    }

    private async Task ExportPdf()
    {
        var columns = new Dictionary<string, Func<AWBDto, object?>>
        {
            { "AWB No", x => x.AWBNo },
            { "Date", x => x.Date },
            { "Consignee", x => x.Consignee },
            { "Dest", x => x.Destination },
            { "Pcs", x => x.Pieces },
            { "Weight", x => x.Weight },
            { "Amount", x => x.Amount },
            { "Status", x => x.Status }
        };

        var totals = new Dictionary<string, decimal>
        {
            { "Pcs", _data.Sum(x => x.Pieces) },
            { "Weight", _data.Sum(x => x.Weight) },
            { "Amount", _data.Sum(x => x.Amount) }
        };

        var subtitle = $"Customer: {_customerName} | Period: {_fromDate:dd-MMM-yyyy} to {_toDate:dd-MMM-yyyy}";
        var bytes = ExportService.ExportToPdf("Customer AWB List", subtitle, _data, columns, totals);
        await DownloadFile(bytes, $"CustomerAWBList_{_customerName.Replace(" ", "_")}.pdf", "application/pdf");
    }

    private async Task DownloadFile(byte[] bytes, string filename, string contentType)
    {
        var base64 = Convert.ToBase64String(bytes);
        await JS.InvokeVoidAsync("downloadFile", filename, base64, contentType);
    }

    private Color GetStatusColor(string status) => status?.ToLower() switch
    {
        "delivered" => Color.Success,
        "intransit" or "in transit" => Color.Info,
        "rts" => Color.Warning,
        "cancelled" => Color.Error,
        _ => Color.Default
    };

    private class AWBDto
    {
        public string AWBNo { get; set; } = "";
        public DateTime Date { get; set; }
        public string Consignee { get; set; } = "";
        public string Destination { get; set; } = "";
        public int Pieces { get; set; }
        public decimal Weight { get; set; }
        public decimal Amount { get; set; }
        public string Status { get; set; } = "";
        public DateTime? DeliveryDate { get; set; }
    }
}
