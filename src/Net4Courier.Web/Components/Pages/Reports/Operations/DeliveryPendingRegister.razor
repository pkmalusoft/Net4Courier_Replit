@page "/reports/ops/delivery-pending"
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@using Net4Courier.Masters.Entities
@using Net4Courier.Kernel.Enums
@using Net4Courier.Web.Services
@using Microsoft.JSInterop
@inject ApplicationDbContext DbContext
@inject ReportExportService ExportService
@inject IJSRuntime JS
@inject ISnackbar Snackbar

<PageTitle>Delivery Pending Register - Net4Courier</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4" Elevation="2">
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.h5">Delivery Pending Register</MudText>
            </MudItem>
            <MudItem xs="12" sm="6" Class="d-flex justify-end gap-2">
                <MudButton Variant="Variant.Outlined" Color="Color.Success" StartIcon="@Icons.Material.Filled.TableChart" 
                           OnClick="ExportExcel" Disabled="@(!_data.Any())">Excel</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Error" StartIcon="@Icons.Material.Filled.PictureAsPdf" 
                           OnClick="ExportPdf" Disabled="@(!_data.Any())">PDF</MudButton>
            </MudItem>
        </MudGrid>

        <MudGrid Class="mt-4">
            <MudItem xs="12" sm="2">
                <MudDatePicker @bind-Date="_asOnDate" Label="As On Date" DateFormat="dd-MMM-yyyy" Variant="Variant.Outlined" Dense="true" />
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="long?" Label="Branch" @bind-Value="_branchId" Clearable Variant="Variant.Outlined" Dense="true">
                    @foreach (var branch in _branches)
                    {
                        <MudSelectItem Value="@((long?)branch.Id)">@branch.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadData" FullWidth="true">
                    Generate
                </MudButton>
            </MudItem>
        </MudGrid>

        @if (_isLoading)
        {
            <MudProgressLinear Indeterminate="true" Class="mt-4" />
        }
        else if (_data.Any())
        {
            <MudPaper Class="pa-4 mt-4" Elevation="1" Style="background: var(--mud-palette-error-lighten);">
                <MudGrid>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Pending Deliveries</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Error">@_data.Count</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Critical (7+ days)</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Error">@_data.Count(x => x.DaysPending > 7)</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Pieces</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.Pieces)</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.caption">Total Weight</MudText>
                        <MudText Typo="Typo.h6">@_data.Sum(x => x.Weight).ToString("N2") Kg</MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>

            <MudTable Items="@_data" Dense="true" Hover="true" Striped="true" Class="mt-4" FixedHeader="true" Height="450px">
                <HeaderContent>
                    <MudTh>AWB No</MudTh>
                    <MudTh>Booking Date</MudTh>
                    <MudTh>Customer</MudTh>
                    <MudTh>Consignee</MudTh>
                    <MudTh>Destination</MudTh>
                    <MudTh Style="text-align: center">Pcs</MudTh>
                    <MudTh Style="text-align: right">Weight</MudTh>
                    <MudTh>Days Pending</MudTh>
                    <MudTh>Last Status</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.AWBNo</MudTd>
                    <MudTd>@context.BookingDate.ToString("dd-MMM-yyyy")</MudTd>
                    <MudTd>@context.Customer</MudTd>
                    <MudTd>@context.Consignee</MudTd>
                    <MudTd>@context.Destination</MudTd>
                    <MudTd Style="text-align: center">@context.Pieces</MudTd>
                    <MudTd Style="text-align: right">@context.Weight.ToString("N2")</MudTd>
                    <MudTd>
                        <MudChip T="string" Size="Size.Small" Color="@(context.DaysPending > 7 ? Color.Error : context.DaysPending > 3 ? Color.Warning : Color.Info)">
                            @context.DaysPending days
                        </MudChip>
                    </MudTd>
                    <MudTd>@context.LastStatus</MudTd>
                </RowTemplate>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Success" Class="mt-4">No pending deliveries found!</MudAlert>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<PendingDeliveryDto> _data = new();
    private List<Branch> _branches = new();
    private DateTime? _asOnDate = DateTime.SpecifyKind(DateTime.Today, DateTimeKind.Utc);
    private long? _branchId;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        _branches = await DbContext.Branches.Where(b => b.IsActive).OrderBy(b => b.Name).ToListAsync();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _data.Clear();

        try
        {
            var asOnUtc = _asOnDate.HasValue 
                ? DateTime.SpecifyKind(_asOnDate.Value.Date.AddDays(1).AddTicks(-1), DateTimeKind.Utc) 
                : DateTime.UtcNow;

            var query = DbContext.InscanMasters
                .Where(a => a.TransactionDate <= asOnUtc)
                .Where(a => a.CourierStatusId != CourierStatus.Delivered 
                    && a.CourierStatusId != CourierStatus.Returned 
                    && a.CourierStatusId != CourierStatus.Cancelled);

            if (_branchId.HasValue)
                query = query.Where(a => a.BranchId == _branchId);

            var awbs = await query.OrderBy(a => a.TransactionDate).ToListAsync();

            _data = awbs.Select(a => new PendingDeliveryDto
            {
                AWBNo = a.AWBNo ?? "",
                BookingDate = a.TransactionDate,
                Customer = a.Consignor ?? "",
                Consignee = a.Consignee ?? "",
                Destination = a.ConsigneeCity ?? "",
                Pieces = a.Pieces ?? 0,
                Weight = a.Weight ?? 0,
                DaysPending = (int)(DateTime.Today - a.TransactionDate).TotalDays,
                LastStatus = a.CourierStatusId.ToString()
            }).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }

        _isLoading = false;
    }

    private async Task ExportExcel()
    {
        var columns = new Dictionary<string, Func<PendingDeliveryDto, object?>>
        {
            { "AWB No", x => x.AWBNo },
            { "Booking Date", x => x.BookingDate },
            { "Customer", x => x.Customer },
            { "Consignee", x => x.Consignee },
            { "Destination", x => x.Destination },
            { "Pieces", x => x.Pieces },
            { "Weight", x => x.Weight },
            { "Days Pending", x => x.DaysPending },
            { "Last Status", x => x.LastStatus }
        };

        var bytes = ExportService.ExportToExcel("Delivery Pending", _data, columns);
        await DownloadFile(bytes, "DeliveryPending.xlsx", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
    }

    private async Task ExportPdf()
    {
        var columns = new Dictionary<string, Func<PendingDeliveryDto, object?>>
        {
            { "AWB No", x => x.AWBNo },
            { "Booking", x => x.BookingDate },
            { "Customer", x => x.Customer },
            { "Consignee", x => x.Consignee },
            { "Dest", x => x.Destination },
            { "Pcs", x => x.Pieces },
            { "Weight", x => x.Weight },
            { "Days", x => x.DaysPending }
        };

        var totals = new Dictionary<string, decimal>
        {
            { "Pcs", _data.Sum(x => x.Pieces) },
            { "Weight", _data.Sum(x => x.Weight) }
        };

        var subtitle = $"As on: {_asOnDate:dd-MMM-yyyy} | Total Pending: {_data.Count}";
        var bytes = ExportService.ExportToPdf("Delivery Pending Register", subtitle, _data, columns, totals);
        await DownloadFile(bytes, "DeliveryPending.pdf", "application/pdf");
    }

    private async Task DownloadFile(byte[] bytes, string filename, string contentType)
    {
        var base64 = Convert.ToBase64String(bytes);
        await JS.InvokeVoidAsync("downloadFile", filename, base64, contentType);
    }

    private class PendingDeliveryDto
    {
        public string AWBNo { get; set; } = "";
        public DateTime BookingDate { get; set; }
        public string Customer { get; set; } = "";
        public string Consignee { get; set; } = "";
        public string Destination { get; set; } = "";
        public int Pieces { get; set; }
        public decimal Weight { get; set; }
        public int DaysPending { get; set; }
        public string LastStatus { get; set; } = "";
    }
}
