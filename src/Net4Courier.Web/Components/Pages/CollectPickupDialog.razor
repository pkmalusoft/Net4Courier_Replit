@using MudBlazor
@using Net4Courier.Operations.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Success" /> Collect Pickup
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="2">
            <MudAlert Severity="Severity.Info" Dense="true">
                <MudText>Pickup: <strong>@Pickup.PickupNo</strong></MudText>
                <MudText>Customer: @Pickup.CustomerName</MudText>
            </MudAlert>
            
            <MudTextField @bind-Value="_remarks" Label="Remarks (optional)" Variant="Variant.Outlined" Lines="3"
                          Placeholder="Any notes about collection..." />
                          
            <MudNumericField @bind-Value="_actualPieces" Label="Actual Pieces Collected" Variant="Variant.Outlined" Min="1" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit" StartIcon="@Icons.Material.Filled.Check">
            Confirm Collection
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public PickupRequest Pickup { get; set; } = new();
    
    private string _remarks = "";
    private int? _actualPieces;

    protected override void OnInitialized()
    {
        _actualPieces = Pickup.EstimatedPieces ?? 1;
    }

    private void Submit() => MudDialog.Close(DialogResult.Ok(new CollectionResult { Remarks = _remarks, ActualPieces = _actualPieces }));
    private void Cancel() => MudDialog.Cancel();

    public class CollectionResult
    {
        public string Remarks { get; set; } = "";
        public int? ActualPieces { get; set; }
    }
}
