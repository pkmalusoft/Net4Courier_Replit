@page "/gl/knowledge-base"
@inject NavigationManager Navigation

<PageTitle>GL Knowledge Base</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="pa-6" Elevation="2">
        <MudText Typo="Typo.h4" Class="mb-2">General Ledger Knowledge Base</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-6">
            Guides, tutorials, and best practices for using the General Ledger module
        </MudText>

        <MudTextField @bind-Value="searchQuery" Label="Search Knowledge Base" Variant="Variant.Outlined"
                     Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-6" />

        <MudGrid>
            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Primary" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.PlayCircle" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Getting Started</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Introduction to General Ledger</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Setting Up Your Chart of Accounts</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Understanding Account Types</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Creating Your First Journal Entry</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Secondary" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.Book" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Journal Entries</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Manual Journal Entries</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Recurring Journal Templates</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Reversing Entries</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Importing Journal Entries</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Tertiary" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.Assessment" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Financial Reports</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Trial Balance Report</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Profit & Loss Statement</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Balance Sheet</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">General Ledger Report</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Info" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.AccountBalance" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Cash & Bank</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Setting Up Bank Accounts</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Recording Receipts and Payments</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Bank Reconciliation Process</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Post-Dated Cheques (PDC)</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Warning" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.CalendarMonth" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Period Management</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Financial Periods Overview</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Opening and Closing Periods</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Year-End Closing Process</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Opening Balance Entry</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Error" Variant="Variant.Filled">
                                <MudIcon Icon="@Icons.Material.Filled.Help" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Troubleshooting</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Article">Common Errors and Solutions</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Fixing Unbalanced Entries</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">Correcting Posted Entries</MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Article">FAQs</MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-6" />

        <MudText Typo="Typo.h5" Class="mb-4">Video Tutorials</MudText>
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent Class="d-flex align-center gap-3">
                        <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Size="Size.Large" Color="Color.Primary" />
                        <div>
                            <MudText Typo="Typo.subtitle1">Quick Start Guide</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">5 min</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent Class="d-flex align-center gap-3">
                        <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Size="Size.Large" Color="Color.Primary" />
                        <div>
                            <MudText Typo="Typo.subtitle1">Chart of Accounts Setup</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">12 min</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent Class="d-flex align-center gap-3">
                        <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Size="Size.Large" Color="Color.Primary" />
                        <div>
                            <MudText Typo="Typo.subtitle1">Year-End Closing</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">20 min</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

@code {
    private string searchQuery = "";
}
