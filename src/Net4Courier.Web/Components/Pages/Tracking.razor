    private decimal CalculateImportTotalCharges(ImportShipment shipment)
    {
        var duty = shipment.DutyAmount ?? 0;
        var vat = shipment.VATAmount ?? 0;
        var customs = shipment.TotalCustomsCharges ?? 0;
        var cod = shipment.CODAmount ?? 0;
        
