    private async Task UploadDocument()
    {
        if (_docFile == null || string.IsNullOrEmpty(_docType) || _docViewShipment == null)
            return;

        _docUploading = true;
        StateHasChanged();

        try
        {
            const long maxSize = 10 * 1024 * 1024;
            using var stream = _docFile.OpenReadStream(maxSize);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            var doc = new ShipmentDocument
            {
                InscanMasterId = _docViewShipment.Shipment.Id,
                DocumentType = _docType,
                FileName = _docFile.Name,
                ContentType = _docFile.ContentType,
                FileData = ms.ToArray(),
                FileSize = _docFile.Size,
                Description = string.IsNullOrWhiteSpace(_docDescription) ? null : _docDescription.Trim()
            };

            await using var dbContext = await DbContextFactory.CreateDbContextAsync();
            dbContext.ShipmentDocuments.Add(doc);
            await dbContext.SaveChangesAsync();

            _docList.Insert(0, doc);
            _docViewShipment.DocumentCount++;
            _docFile = null;
            _docType = "";
            _docDescription = "";
            Snackbar.Add("Document uploaded successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Upload failed: {ex.Message}", Severity.Error);
        }
        finally
        {
            _docUploading = false;
            StateHasChanged();
        }
    }

