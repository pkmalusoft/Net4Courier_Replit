    private List<ImportTimelineEvent> BuildSynthesizedTimeline(InscanMaster shipment, List<ShipmentStatusHistory> existingHistory)
    {
        var synthesized = new List<ImportTimelineEvent>();
        var existingLabels = existingHistory
            .Select(h => (h.Status?.Name ?? h.EventType ?? "").ToLowerInvariant())
            .ToHashSet();

        if (!existingLabels.Any(l => l.Contains("booked") || l.Contains("created") || l.Contains("awb entry")))
        {
            var bookedDate = shipment.TransactionDate != default ? shipment.TransactionDate : shipment.CreatedAt;
            if (bookedDate != default)
            {
                synthesized.Add(new ImportTimelineEvent
                {
                    EventType = "Booked",
                    Timestamp = bookedDate
                });
            }
        }

        if (shipment.PickedUpDate.HasValue && !existingLabels.Any(l => l.Contains("picked") || l.Contains("pickup")))
        {
            synthesized.Add(new ImportTimelineEvent
            {
                EventType = "Picked Up",
                Timestamp = shipment.PickedUpDate.Value
            });
        }

        if (shipment.BaggedAt.HasValue && !existingLabels.Any(l => l.Contains("bagged") || l.Contains("outscan") || l.Contains("manifest")))
        {
            synthesized.Add(new ImportTimelineEvent
            {
                EventType = "Outscanned / Bagged",
                Timestamp = shipment.BaggedAt.Value
            });
        }

        if (shipment.DeliveredDate.HasValue && !existingLabels.Any(l => l.Contains("delivered")))
        {
            synthesized.Add(new ImportTimelineEvent
            {
                EventType = "Delivered",
                Timestamp = shipment.DeliveredDate.Value
            });
        }

        return synthesized;
    }

