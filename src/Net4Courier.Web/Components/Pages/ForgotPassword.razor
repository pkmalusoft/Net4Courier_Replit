@page "/forgot-password"
@layout Net4Courier.Web.Components.Layout.EmptyLayout
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-card">
        <div class="login-content">
            <img src="images/logo.png" alt="Net4Courier" class="login-logo" />
            
            <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Primary" Class="mb-2">
                Forgot Password
            </MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary" Class="mb-6">
                Enter your email address and we'll send you instructions to reset your password.
            </MudText>
            
            @if (_submitted)
            {
                <MudAlert Severity="Severity.Success" Class="mb-4">
                    If an account exists with this email, you will receive password reset instructions shortly.
                </MudAlert>
            }

            <MudTextField @bind-Value="_email" 
                          Label="Email Address" 
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          Required="true"
                          InputType="InputType.Email"
                          Disabled="@_submitted"
                          Class="mb-4" />

            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="@(_isLoading || _submitted)"
                       OnClick="HandleSubmit"
                       Class="login-btn mb-4">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Sending...</span>
                }
                else
                {
                    <span>Send Reset Link</span>
                }
            </MudButton>

            <div class="d-flex justify-center">
                <MudLink Href="/login" Color="Color.Primary" Typo="Typo.body2">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" Class="mr-1" />
                    Back to Login
                </MudLink>
            </div>

            <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary" Class="mt-6">
                a product of Truebooks Business Solutions
            </MudText>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: flex-end;
        align-items: stretch;
        background: linear-gradient(135deg, rgba(21, 101, 192, 0.85), rgba(13, 71, 161, 0.9)), 
                    url('https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        min-height: 100vh;
        background: rgba(255, 255, 255, 0.98);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        box-shadow: -10px 0 40px rgba(0, 0, 0, 0.2);
    }

    .login-content {
        width: 100%;
        max-width: 320px;
    }

    .login-logo {
        display: block;
        width: 180px;
        height: auto;
        margin: 0 auto 24px auto;
    }

    .login-btn {
        height: 48px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: none;
        border-radius: 8px;
    }

    @@media (max-width: 600px) {
        .login-container {
            justify-content: center;
            background: linear-gradient(180deg, rgba(21, 101, 192, 0.9), rgba(13, 71, 161, 0.95));
        }
        
        .login-card {
            max-width: 100%;
            min-height: auto;
            margin: 20px;
            border-radius: 16px;
            padding: 32px 24px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }
    }
</style>

@code {
    private string _email = "";
    private bool _isLoading = false;
    private bool _submitted = false;

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(_email))
            return;

        _isLoading = true;
        StateHasChanged();

        await Task.Delay(1500);

        _isLoading = false;
        _submitted = true;
    }
}
