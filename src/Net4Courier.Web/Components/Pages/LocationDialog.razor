@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="Location.Name" Label="Location Name" Required="true" 
                          RequiredError="Name is required" Variant="Variant.Outlined" Class="mb-3" />
            <MudTextField @bind-Value="Location.Code" Label="Location Code" 
                          Variant="Variant.Outlined" Class="mb-3" />
            <MudTextField @bind-Value="Location.Pincode" Label="Pincode / ZIP" 
                          Variant="Variant.Outlined" Class="mb-3" />
            <MudSelect T="long?" @bind-Value="Location.CityId" Label="City"
                       Variant="Variant.Outlined" Class="mb-3">
                <MudSelectItem T="long?" Value="@((long?)null)">-- Select City --</MudSelectItem>
                @foreach (var city in Cities)
                {
                    <MudSelectItem T="long?" Value="@city.Id">@city.Name</MudSelectItem>
                }
            </MudSelect>
            <MudSelect T="long?" @bind-Value="Location.BranchId" Label="Servicing Branch"
                       Variant="Variant.Outlined" Class="mb-3">
                <MudSelectItem T="long?" Value="@((long?)null)">-- Select Branch --</MudSelectItem>
                @foreach (var branch in Branches)
                {
                    <MudSelectItem T="long?" Value="@branch.Id">@branch.Name</MudSelectItem>
                }
            </MudSelect>
            <MudSwitch @bind-Value="Location.IsServiceable" Label="Serviceable Area" Color="Color.Secondary" Class="mb-3" />
            <MudSwitch @bind-Value="Location.IsActive" Label="Active" Color="Color.Primary" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="@(!_isValid)">
            @(IsNew ? "Create" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Location Location { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }
    [Parameter] public List<City> Cities { get; set; } = new();
    [Parameter] public List<Branch> Branches { get; set; } = new();

    private MudForm? _form;
    private bool _isValid;

    private async Task Save()
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (_form != null)
        {
            await _form.Validate();
            if (!_isValid) return;
        }

        if (IsNew)
        {
            Location.CreatedAt = DateTime.UtcNow;
            dbContext.Locations.Add(Location);
        }
        else
        {
            Location.ModifiedAt = DateTime.UtcNow;
            dbContext.Locations.Update(Location);
        }

        await dbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
