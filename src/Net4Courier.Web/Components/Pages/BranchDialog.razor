@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="mr-2" />
            @(IsNew ? "Add New Branch" : "Edit Branch")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="Branch.CompanyId" Label="Company" Required="true" RequiredError="Company is required" Variant="Variant.Outlined">
                        @foreach (var company in Companies)
                        {
                            <MudSelectItem Value="@company.Id">@company.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Name" Label="Branch Name" Required="true" RequiredError="Branch name is required"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.BranchPrefix" Label="Branch Prefix" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.MobileNo1" Label="Mobile No" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Branch.Address1" Label="Address Line 1" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Address2" Label="Address Line 2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Address3" Label="Address Line 3" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.VATRegistrationNo" Label="VAT Registration No" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Branch.VATPercent" Label="VAT %" Format="N2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.InvoicePrefix" Label="Invoice Prefix" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.CODReceiptPrefix" Label="COD Receipt Prefix" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudStack Row="true" Spacing="4">
                        <MudSwitch @bind-Value="Branch.IsActive" Label="Active" Color="Color.Primary" />
                        <MudSwitch @bind-Value="Branch.TaxEnable" Label="Tax Enabled" Color="Color.Secondary" />
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Branch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }
    [Parameter] public List<Company> Companies { get; set; } = new();

    private MudForm _form = null!;
    private bool _formIsValid;

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            DbContext.Branches.Add(Branch);
        }
        else
        {
            Branch.UpdatedAt = DateTime.UtcNow;
            DbContext.Branches.Update(Branch);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
