@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Store" Class="mr-2" />
            @(IsNew ? "Add Branch" : "Edit Branch")
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_isLoading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else
        {
        <MudForm @ref="_form" @bind-IsValid="@_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Name" Label="Branch Name" Required="true" RequiredError="Name is required" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Code" Label="Branch Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect T="long" @bind-Value="Branch.CompanyId" Label="Company" Required="true" Variant="Variant.Outlined">
                        @foreach (var company in _companies)
                        {
                            <MudSelectItem T="long" Value="@company.Id">@company.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.ManagerName" Label="Manager Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Branch.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Location</MudText>
                </MudItem>

                <MudItem xs="12" md="4">
                    <div class="mud-input-control mud-input-input-control">
                        <div class="mud-input-control-input-container">
                            <label class="mud-input-label mud-input-label-animated mud-input-label-outlined mud-input-label-inputcontrol" style="font-size:12px; color:rgba(0,0,0,0.6);">Country</label>
                            <select @bind="_selectedCountryId" @bind:after="OnCountryChanged" style="width:100%; height:56px; padding:16px 14px; border:1px solid rgba(0,0,0,0.23); border-radius:4px; background:white; font-size:16px;">
                                <option value="0">-- Select Country --</option>
                                @foreach (var country in _countries)
                                {
                                    <option value="@country.Id">@country.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="mud-input-control mud-input-input-control">
                        <div class="mud-input-control-input-container">
                            <label class="mud-input-label mud-input-label-animated mud-input-label-outlined mud-input-label-inputcontrol" style="font-size:12px; color:rgba(0,0,0,0.6);">State</label>
                            <select @bind="_selectedStateId" @bind:after="OnStateChanged" disabled="@(_selectedCountryId == 0)" style="width:100%; height:56px; padding:16px 14px; border:1px solid rgba(0,0,0,0.23); border-radius:4px; background:white; font-size:16px;">
                                <option value="0">-- Select State --</option>
                                @foreach (var state in _states)
                                {
                                    <option value="@state.Id">@state.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="mud-input-control mud-input-input-control">
                        <div class="mud-input-control-input-container">
                            <label class="mud-input-label mud-input-label-animated mud-input-label-outlined mud-input-label-inputcontrol" style="font-size:12px; color:rgba(0,0,0,0.6);">City</label>
                            <select @bind="_selectedCityId" disabled="@(_selectedStateId == 0)" style="width:100%; height:56px; padding:16px 14px; border:1px solid rgba(0,0,0,0.23); border-radius:4px; background:white; font-size:16px;">
                                <option value="0">-- Select City --</option>
                                @foreach (var city in _cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Branch.PostalCode" Label="Postal Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Branch.VatPercentage" Label="VAT %" Format="N2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long?" @bind-Value="Branch.CurrencyId" Label="Default Currency" Variant="Variant.Outlined" Clearable="true">
                        @foreach (var currency in _currencies)
                        {
                            <MudSelectItem T="long?" Value="@((long?)currency.Id)">@currency.Code - @currency.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudStack Row="true" Spacing="4">
                        <MudSwitch @bind-Value="Branch.IsActive" Label="Active" Color="Color.Primary" />
                        <MudSwitch @bind-Value="Branch.IsHeadOffice" Label="Head Office" Color="Color.Secondary" />
                    </MudStack>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Display Settings</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudSwitch @bind-Value="Branch.HideAccountCodes" Label="Hide Account Codes" Color="Color.Primary" Class="mt-0" />
                </MudItem>
            </MudGrid>
        </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Branch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    private bool _isLoading = true;
    
    private List<Company> _companies = new();
    private List<Country> _countries = new();
    private List<State> _states = new();
    private List<City> _cities = new();
    private List<Currency> _currencies = new();
    
    private long _selectedCountryId;
    private long _selectedStateId;
    private long _selectedCityId;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        
        await using var db = await DbContextFactory.CreateDbContextAsync();
        
        _companies = await db.Companies.Where(c => !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        _countries = await db.Countries.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        _currencies = await db.Currencies.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Code).ToListAsync();
        
        if (_companies.Count == 1 && Branch.CompanyId == 0)
        {
            Branch.CompanyId = _companies[0].Id;
        }
        
        _selectedCountryId = Branch.CountryId ?? 0;
        _selectedStateId = Branch.StateId ?? 0;
        _selectedCityId = Branch.CityId ?? 0;
        
        if (_selectedCountryId > 0)
        {
            _states = await db.States.Where(s => s.CountryId == _selectedCountryId && s.IsActive && !s.IsDeleted).OrderBy(s => s.Name).ToListAsync();
        }
        
        if (_selectedStateId > 0)
        {
            _cities = await db.Cities.Where(c => c.StateId == _selectedStateId && c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        }
        
        _isLoading = false;
    }

    private async Task OnCountryChanged()
    {
        Branch.CountryId = _selectedCountryId > 0 ? _selectedCountryId : null;
        Branch.StateId = null;
        Branch.CityId = null;
        _selectedStateId = 0;
        _selectedCityId = 0;
        _states.Clear();
        _cities.Clear();
        
        if (_selectedCountryId > 0)
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            _states = await db.States.Where(s => s.CountryId == _selectedCountryId && s.IsActive && !s.IsDeleted).OrderBy(s => s.Name).ToListAsync();
        }
    }

    private async Task OnStateChanged()
    {
        Branch.StateId = _selectedStateId > 0 ? _selectedStateId : null;
        Branch.CityId = null;
        _selectedCityId = 0;
        _cities.Clear();
        
        if (_selectedStateId > 0)
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            _cities = await db.Cities.Where(c => c.StateId == _selectedStateId && c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        Branch.CityId = _selectedCityId > 0 ? _selectedCityId : null;

        await using var db = await DbContextFactory.CreateDbContextAsync();
        
        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            Branch.AWBLastUsedNumber = Branch.AWBStartingNumber;
            db.Branches.Add(Branch);
        }
        else
        {
            Branch.ModifiedAt = DateTime.UtcNow;
            db.Branches.Update(Branch);
        }

        await db.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
