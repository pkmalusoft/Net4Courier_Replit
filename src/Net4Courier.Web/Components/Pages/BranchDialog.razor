@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@using Net4Courier.Kernel.Enums

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Store" Class="mr-2" />
            @(IsNew ? "Add Branch" : "Edit Branch")
        </MudText>
    </TitleContent>
    <DialogContent>
        <div style="max-height: 65vh; overflow-y: auto; padding-right: 8px;">
        @if (_isLoading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else
        {
        <MudForm @ref="_form" @bind-IsValid="@_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Name" Label="Branch Name" Required="true" RequiredError="Name is required" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Code" Label="Branch Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect T="long" @bind-Value="Branch.CompanyId" Label="Company" Required="true" Variant="Variant.Outlined">
                        @foreach (var company in _companies)
                        {
                            <MudSelectItem T="long" Value="@company.Id">@company.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.ManagerName" Label="Manager Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Branch.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Location</MudText>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudSelect T="long" Value="_selectedCountryId" ValueChanged="OnCountryChanged" Label="Country" Variant="Variant.Outlined">
                        <MudSelectItem T="long" Value="0L">-- Select --</MudSelectItem>
                        @foreach (var country in _countries)
                        {
                            <MudSelectItem T="long" Value="@country.Id">@country.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long" Value="_selectedStateId" ValueChanged="OnStateChanged" Label="State" Variant="Variant.Outlined" Disabled="@(_selectedCountryId == 0)">
                        <MudSelectItem T="long" Value="0L">-- Select --</MudSelectItem>
                        @foreach (var state in _states)
                        {
                            <MudSelectItem T="long" Value="@state.Id">@state.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long" @bind-Value="_selectedCityId" Label="City" Variant="Variant.Outlined" Disabled="@(_selectedStateId == 0)">
                        <MudSelectItem T="long" Value="0L">-- Select --</MudSelectItem>
                        @foreach (var city in _cities)
                        {
                            <MudSelectItem T="long" Value="@city.Id">@city.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Branch.PostalCode" Label="Postal Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Branch.VatPercentage" Label="VAT %" Format="N2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long" @bind-Value="_selectedCurrencyId" Label="Default Currency" Variant="Variant.Outlined">
                        <MudSelectItem T="long" Value="0L">-- Select --</MudSelectItem>
                        @foreach (var currency in _currencies)
                        {
                            <MudSelectItem T="long" Value="@currency.Id">@currency.Code - @currency.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudStack Row="true" Spacing="4">
                        <MudSwitch @bind-Value="Branch.IsActive" Label="Active" Color="Color.Primary" />
                        <MudSwitch @bind-Value="Branch.IsHeadOffice" Label="Head Office" Color="Color.Secondary" />
                    </MudStack>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Settings</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="Branch.HideAccountCodes" Label="Hide Account Codes" Color="Color.Primary" Class="mt-0" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">AWB Configuration</MudText>
                </MudItem>

                @foreach (var config in _awbConfigs)
                {
                    <MudItem xs="12">
                        <MudPaper Elevation="1" Class="pa-3 mb-2">
                            <MudText Typo="Typo.subtitle2" Class="mb-2">@GetMovementTypeLabel(config.MovementType)</MudText>
                            <MudGrid>
                                <MudItem xs="12" md="3">
                                    <MudTextField @bind-Value="config.AWBPrefix" Label="AWB Prefix" Variant="Variant.Outlined" Margin="Margin.Dense" />
                                </MudItem>
                                <MudItem xs="12" md="3">
                                    <MudNumericField @bind-Value="config.StartingNumber" Label="Starting Number" Variant="Variant.Outlined" Margin="Margin.Dense" Min="1" />
                                </MudItem>
                                <MudItem xs="12" md="3">
                                    <MudNumericField @bind-Value="config.IncrementBy" Label="Increment By" Variant="Variant.Outlined" Margin="Margin.Dense" Min="1" />
                                </MudItem>
                                <MudItem xs="12" md="3">
                                    <MudNumericField @bind-Value="config.LastUsedNumber" Label="Last Used Number" Variant="Variant.Outlined" Margin="Margin.Dense" />
                                </MudItem>
                            </MudGrid>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
        }
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Branch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    private bool _isLoading = true;
    
    private List<Company> _companies = new();
    private List<Country> _countries = new();
    private List<State> _states = new();
    private List<City> _cities = new();
    private List<Currency> _currencies = new();
    private List<BranchAWBConfig> _awbConfigs = new();
    
    private long _selectedCountryId;
    private long _selectedStateId;
    private long _selectedCityId;
    private long _selectedCurrencyId;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        
        await using var db = await DbContextFactory.CreateDbContextAsync();
        
        _companies = await db.Companies.Where(c => !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        _countries = await db.Countries.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        _currencies = await db.Currencies.Where(c => c.IsActive && !c.IsDeleted).OrderBy(c => c.Code).ToListAsync();
        
        if (_companies.Count == 1 && Branch.CompanyId == 0)
        {
            Branch.CompanyId = _companies[0].Id;
        }
        
        _selectedCountryId = Branch.CountryId ?? 0;
        _selectedStateId = Branch.StateId ?? 0;
        _selectedCityId = Branch.CityId ?? 0;
        _selectedCurrencyId = Branch.CurrencyId ?? 0;
        
        if (_selectedCountryId > 0)
        {
            _states = await db.States.Where(s => s.CountryId == _selectedCountryId && s.IsActive && !s.IsDeleted).OrderBy(s => s.Name).ToListAsync();
        }
        
        if (_selectedStateId > 0)
        {
            _cities = await db.Cities.Where(c => c.StateId == _selectedStateId && c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        }
        
        // Load existing AWB configs or create defaults for each movement type
        if (!IsNew && Branch.Id > 0)
        {
            _awbConfigs = await db.Set<BranchAWBConfig>()
                .Where(c => c.BranchId == Branch.Id && !c.IsDeleted)
                .ToListAsync();
        }
        
        // Ensure all movement types have a config entry
        var movementTypes = new[] { MovementType.Domestic, MovementType.InternationalExport, MovementType.InternationalImport, MovementType.Transhipment };
        foreach (var mt in movementTypes)
        {
            if (!_awbConfigs.Any(c => c.MovementType == mt))
            {
                _awbConfigs.Add(new BranchAWBConfig
                {
                    BranchId = Branch.Id,
                    MovementType = mt,
                    AWBPrefix = GetDefaultPrefix(mt),
                    StartingNumber = 1,
                    IncrementBy = 1,
                    LastUsedNumber = 0
                });
            }
        }
        
        _isLoading = false;
    }
    
    private string GetDefaultPrefix(MovementType mt) => mt switch
    {
        MovementType.Domestic => "DOM",
        MovementType.InternationalExport => "EXP",
        MovementType.InternationalImport => "IMP",
        MovementType.Transhipment => "TRN",
        _ => ""
    };
    
    private string GetMovementTypeLabel(MovementType mt) => mt switch
    {
        MovementType.Domestic => "Domestic",
        MovementType.InternationalExport => "Export",
        MovementType.InternationalImport => "Import",
        MovementType.Transhipment => "Transhipment",
        _ => mt.ToString()
    };

    private async Task OnCountryChanged(long countryId)
    {
        _selectedCountryId = countryId;
        Branch.CountryId = countryId > 0 ? countryId : null;
        Branch.StateId = null;
        Branch.CityId = null;
        _selectedStateId = 0;
        _selectedCityId = 0;
        _states.Clear();
        _cities.Clear();
        
        if (countryId > 0)
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            _states = await db.States.Where(s => s.CountryId == countryId && s.IsActive && !s.IsDeleted).OrderBy(s => s.Name).ToListAsync();
        }
    }

    private async Task OnStateChanged(long stateId)
    {
        _selectedStateId = stateId;
        Branch.StateId = stateId > 0 ? stateId : null;
        Branch.CityId = null;
        _selectedCityId = 0;
        _cities.Clear();
        
        if (stateId > 0)
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            _cities = await db.Cities.Where(c => c.StateId == stateId && c.IsActive && !c.IsDeleted).OrderBy(c => c.Name).ToListAsync();
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        Branch.CityId = _selectedCityId > 0 ? _selectedCityId : null;
        Branch.CurrencyId = _selectedCurrencyId > 0 ? _selectedCurrencyId : null;

        await using var db = await DbContextFactory.CreateDbContextAsync();
        
        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            Branch.AWBLastUsedNumber = Branch.AWBStartingNumber;
            db.Branches.Add(Branch);
            await db.SaveChangesAsync();
            
            // Set BranchId for new AWB configs after branch is saved
            foreach (var config in _awbConfigs)
            {
                config.BranchId = Branch.Id;
                config.CreatedAt = DateTime.UtcNow;
                db.Set<BranchAWBConfig>().Add(config);
            }
        }
        else
        {
            Branch.ModifiedAt = DateTime.UtcNow;
            db.Branches.Update(Branch);
            
            // Save AWB configs
            foreach (var config in _awbConfigs)
            {
                config.BranchId = Branch.Id;
                if (config.Id == 0)
                {
                    config.CreatedAt = DateTime.UtcNow;
                    db.Set<BranchAWBConfig>().Add(config);
                }
                else
                {
                    config.ModifiedAt = DateTime.UtcNow;
                    db.Set<BranchAWBConfig>().Update(config);
                }
            }
        }

        await db.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
