@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="mr-2" />
            @(IsNew ? "Add New Branch" : "Edit Branch")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudSelect T="long" @bind-Value="Branch.CompanyId" Label="Company" Required="true" RequiredError="Company is required" Variant="Variant.Outlined">
                        @foreach (var company in Companies)
                        {
                            <MudSelectItem T="long" Value="@company.Id">@company.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Name" Label="Branch Name" Required="true" RequiredError="Branch name is required"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Code" Label="Branch Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Branch.ManagerName" Label="Manager Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Branch.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Location</MudText>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudSelect T="long?" Value="Branch.CountryId" 
                               ValueChanged="OnCountryChanged"
                               Label="Country" 
                               Variant="Variant.Outlined"
                               Clearable="true">
                        @foreach (var country in _countries)
                        {
                            <MudSelectItem T="long?" Value="@((long?)country.Id)">@country.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long?" Value="Branch.StateId" 
                               ValueChanged="OnStateChanged"
                               Label="State" 
                               Variant="Variant.Outlined"
                               Disabled="@(!Branch.CountryId.HasValue)"
                               Clearable="true">
                        @foreach (var state in _states)
                        {
                            <MudSelectItem T="long?" Value="@((long?)state.Id)">@state.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="long?" @bind-Value="Branch.CityId" 
                               Label="City" 
                               Variant="Variant.Outlined"
                               Disabled="@(!Branch.StateId.HasValue)"
                               Clearable="true">
                        @foreach (var city in _cities)
                        {
                            <MudSelectItem T="long?" Value="@((long?)city.Id)">@city.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Branch.PostalCode" Label="Postal Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Branch.VatPercentage" Label="VAT %" Format="N2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudStack Row="true" Spacing="4">
                        <MudSwitch @bind-Value="Branch.IsActive" Label="Active" Color="Color.Primary" />
                        <MudSwitch @bind-Value="Branch.IsHeadOffice" Label="Head Office" Color="Color.Secondary" />
                    </MudStack>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">AWB Number Configuration</MudText>
                </MudItem>

                <MudItem xs="12" md="3">
                    <MudTextField @bind-Value="Branch.AWBPrefix" Label="AWB Prefix" 
                                  Variant="Variant.Outlined" HelperText="e.g. 120309" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Branch.AWBStartingNumber" Label="Starting Number" 
                                     Variant="Variant.Outlined" Min="1" HelperText="First AWB number" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Branch.AWBIncrement" Label="Increment By" 
                                     Variant="Variant.Outlined" Min="1" HelperText="e.g. 1, 10, 100" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Branch.AWBLastUsedNumber" Label="Last Used Number" 
                                     Variant="Variant.Outlined" ReadOnly="true" HelperText="Auto-updated" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Branch Branch { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }
    [Parameter] public List<Company> Companies { get; set; } = new();

    private MudForm _form = null!;
    private bool _formIsValid;
    
    private List<Country> _countries = new();
    private List<State> _states = new();
    private List<City> _cities = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCountries();
        
        if (Branch.CountryId.HasValue)
        {
            await LoadStates(Branch.CountryId.Value);
        }
        
        if (Branch.StateId.HasValue)
        {
            await LoadCities(Branch.StateId.Value);
        }
    }

    private async Task LoadCountries()
    {
        _countries = await DbContext.Countries
            .Where(c => c.IsActive && !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
    }

    private async Task LoadStates(long countryId)
    {
        _states = await DbContext.States
            .Where(s => s.CountryId == countryId && s.IsActive && !s.IsDeleted)
            .OrderBy(s => s.Name)
            .ToListAsync();
    }

    private async Task LoadCities(long stateId)
    {
        _cities = await DbContext.Cities
            .Where(c => c.StateId == stateId && c.IsActive && !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
    }

    private async Task OnCountryChanged(long? countryId)
    {
        Branch.CountryId = countryId;
        Branch.StateId = null;
        Branch.CityId = null;
        _states.Clear();
        _cities.Clear();
        
        if (countryId.HasValue)
        {
            await LoadStates(countryId.Value);
        }
    }

    private async Task OnStateChanged(long? stateId)
    {
        Branch.StateId = stateId;
        Branch.CityId = null;
        _cities.Clear();
        
        if (stateId.HasValue)
        {
            await LoadCities(stateId.Value);
        }
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Branch.CreatedAt = DateTime.UtcNow;
            DbContext.Branches.Add(Branch);
        }
        else
        {
            Branch.ModifiedAt = DateTime.UtcNow;
            DbContext.Branches.Update(Branch);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Branch));
    }

    private void Cancel() => MudDialog.Cancel();
}
