@page "/countries"
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject ApplicationDbContext DbContext
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>Countries</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Elevation="2" Class="pa-4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
            <MudText Typo="Typo.h5">Countries</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">
                Add Country
            </MudButton>
        </MudStack>

        <MudTable Items="@_countries" Hover="true" Striped="true" Loading="@_loading" LoadingProgressColor="Color.Primary" Dense="true">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Code</MudTh>
                <MudTh>IATA Code</MudTh>
                <MudTh>States</MudTh>
                <MudTh>Status</MudTh>
                <MudTh Style="width: 120px;">Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Code">@context.Code</MudTd>
                <MudTd DataLabel="IATA">@context.IATACode</MudTd>
                <MudTd DataLabel="States">@context.States.Count</MudTd>
                <MudTd DataLabel="Status">
                    <MudChip T="string" Color="@(context.IsActive ? Color.Success : Color.Default)" Size="Size.Small">
                        @(context.IsActive ? "Active" : "Inactive")
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => DeleteCountry(context))" />
                </MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText>No countries found.</MudText>
            </NoRecordsContent>
        </MudTable>
    </MudPaper>
</MudContainer>

@code {
    private List<Country> _countries = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        _countries = await DbContext.Countries
            .Include(c => c.States)
            .Where(c => !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
        _loading = false;
    }

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters<CountryDialog>
        {
            { x => x.Country, new Country() },
            { x => x.IsNew, true }
        };

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<CountryDialog>("Add Country", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
            Snackbar.Add("Country created successfully", Severity.Success);
        }
    }

    private async Task OpenEditDialog(Country country)
    {
        var parameters = new DialogParameters<CountryDialog>
        {
            { x => x.Country, country },
            { x => x.IsNew, false }
        };

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<CountryDialog>("Edit Country", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
            Snackbar.Add("Country updated successfully", Severity.Success);
        }
    }

    private async Task DeleteCountry(Country country)
    {
        if (country.States.Any())
        {
            Snackbar.Add($"Cannot delete '{country.Name}' - it has {country.States.Count} states", Severity.Warning);
            return;
        }

        var confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete '{country.Name}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            country.IsDeleted = true;
            await DbContext.SaveChangesAsync();
            await LoadData();
            Snackbar.Add("Country deleted successfully", Severity.Success);
        }
    }
}
