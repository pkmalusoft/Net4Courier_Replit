@page "/contracts-pricing"
@inject NavigationManager Navigation
@using MudBlazor

<PageTitle>Contracts & Pricing - Net4Courier</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Contracts & Pricing</MudText>
    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-6">
        Manage customer service level agreements, rate cards, and pricing configurations.
    </MudText>

    <MudGrid Spacing="4">
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Primary" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.Description" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">SLA Agreements</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Service Level Agreements</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Create and manage Service Level Agreements with customers. Define transit times, 
                        credit terms, liability limits, and special conditions for each customer.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/sla-agreements"))">
                        Manage SLA Agreements
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Success" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.RequestQuote" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Rate Cards</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Pricing Configuration</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Configure rate cards with zone-based pricing, weight slabs, and service type rates.
                        Import rates from Excel templates or create custom pricing structures.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/rate-cards"))">
                        Manage Rate Cards
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Info" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.Category" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Zone Categories</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Geographic Pricing Zones</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Define zone categories and assign countries/regions to pricing zones.
                        Used by rate cards to determine shipping costs based on destination.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/zone-categories"))">
                        Manage Zone Categories
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Warning" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.LocalShipping" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Service Types</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Delivery Service Options</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Configure available service types like Express, Standard, Economy, etc.
                        Each service type can have different transit times and pricing.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/service-types"))">
                        Manage Service Types
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Secondary" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Other Charges</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Additional Fee Types</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Define additional charge types like fuel surcharge, handling fees, 
                        remote area charges, and other supplementary fees.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/other-charge-types"))">
                        Manage Other Charges
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Tertiary" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Material.Filled.CurrencyExchange" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Currencies</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Currency Management</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Manage supported currencies for billing and invoicing.
                        Configure exchange rates and default currency settings.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" 
                               OnClick="@(() => Navigation.NavigateTo("/currencies"))">
                        Manage Currencies
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
