@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject ApplicationDbContext DbContext

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="AccountType.Code" 
                          Label="Code" 
                          Variant="Variant.Outlined"
                          Class="mb-4" />
            
            <MudTextField @bind-Value="AccountType.Name" 
                          Label="Name" 
                          Required="true" 
                          RequiredError="Name is required"
                          Variant="Variant.Outlined"
                          Class="mb-4" />
            
            <MudTextField @bind-Value="AccountType.Description" 
                          Label="Description" 
                          Variant="Variant.Outlined"
                          Lines="2"
                          Class="mb-4" />
            
            <MudNumericField @bind-Value="AccountType.SortOrder" 
                             Label="Sort Order" 
                             Variant="Variant.Outlined"
                             Class="mb-4" />
            
            <MudSwitch @bind-Value="AccountType.IsActive" 
                       Label="Active" 
                       Color="Color.Primary" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="@(!_isValid)">
            @(IsNew ? "Create" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] 
    public AccountType AccountType { get; set; } = new();

    [Parameter] 
    public bool IsNew { get; set; }

    private MudForm? _form;
    private bool _isValid;

    private async Task Save()
    {
        if (_form != null)
        {
            await _form.Validate();
            if (!_isValid) return;
        }

        if (IsNew)
        {
            AccountType.CreatedAt = DateTime.UtcNow;
            DbContext.AccountTypes.Add(AccountType);
        }
        else
        {
            AccountType.ModifiedAt = DateTime.UtcNow;
            DbContext.AccountTypes.Update(AccountType);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
