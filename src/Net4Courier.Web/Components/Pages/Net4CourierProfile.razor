@page "/net4courier-profile"
@using MudBlazor

<PageTitle>Net4Courier - Platform Overview</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #1976d2 0%, #0d47a1 50%, #1a237e 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        text-align: center;
    }
    
    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .hero-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        max-width: 700px;
        margin: 0 auto;
    }
    
    .stats-row {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
    }
    
    .stat-label {
        font-size: 0.9rem;
        opacity: 0.85;
    }
    
    .feature-card {
        height: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px !important;
    }
    
    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    
    .feature-icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }
    
    .section-title {
        font-size: 1.8rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 0.5rem;
        color: #1976d2;
    }
    
    .section-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .module-section {
        margin-bottom: 3rem;
    }
    
    .highlight-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }
    
    .tech-stack-card {
        background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
    }
    
    .footer-section {
        background: #263238;
        color: white;
        padding: 2rem;
        border-radius: 12px;
        text-align: center;
        margin-top: 2rem;
    }
</style>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
    
    <div class="hero-section">
        <div class="hero-title">Net4Courier</div>
        <div class="hero-subtitle">
            Comprehensive Logistics Management Platform for Modern Courier Operations
        </div>
        
        <div class="stats-row">
            <div class="stat-item">
                <div class="stat-number">23+</div>
                <div class="stat-label">Financial Reports</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">9</div>
                <div class="stat-label">Core Modules</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">100%</div>
                <div class="stat-label">Cloud-Based</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Availability</div>
            </div>
        </div>
    </div>

    <div class="module-section">
        <div class="section-title">Core Modules</div>
        <div class="section-subtitle">
            A complete ecosystem for end-to-end courier and logistics management
        </div>
        
        <MudGrid Spacing="3">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #42a5f5, #1976d2);">
                            <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Shipment Management</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Complete AWB lifecycle from pickup to delivery with real-time tracking, POD capture, and RTS handling.
                        </MudText>
                        <div class="highlight-badge" style="background: #e3f2fd; color: #1565c0;">End-to-End Tracking</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #66bb6a, #43a047);">
                            <MudIcon Icon="@Icons.Material.Filled.Flight" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Import / Export</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            MAWB processing, bag management, customs clearance, duty/VAT tracking, and COD collection management.
                        </MudText>
                        <div class="highlight-badge" style="background: #e8f5e9; color: #2e7d32;">Multi-Modal Support</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #ab47bc, #7b1fa2);">
                            <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Customer CRM</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Customer profiles, branches, SLA management, contracts, complaint tracking, and relationship management.
                        </MudText>
                        <div class="highlight-badge" style="background: #f3e5f5; color: #6a1b9a;">360-Degree View</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #ff7043, #e64a19);">
                            <MudIcon Icon="@Icons.Material.Filled.CreditCard" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Prepaid AWB System</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            AWB stock management, prepaid sales, automatic allocation, balance tracking, and integrated accounting.
                        </MudText>
                        <div class="highlight-badge" style="background: #fbe9e7; color: #d84315;">Revenue Control</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #26c6da, #00838f);">
                            <MudIcon Icon="@Icons.Material.Filled.PriceChange" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Dynamic Pricing</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Rate cards, zone management, fuel surcharges, weight slabs, Excel import, and rate simulation.
                        </MudText>
                        <div class="highlight-badge" style="background: #e0f7fa; color: #00695c;">Flexible Rules</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #5c6bc0, #303f9f);">
                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">General Ledger</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Full accounting with Chart of Accounts, journals, cash/bank vouchers, and comprehensive financial reports.
                        </MudText>
                        <div class="highlight-badge" style="background: #e8eaf6; color: #283593;">Complete GL</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #ffca28, #f9a825);">
                            <MudIcon Icon="@Icons.Material.Filled.Receipt" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">AR / AP Management</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Invoicing, receipts, payments, aging reports, customer/supplier ledgers, and statement generation.
                        </MudText>
                        <div class="highlight-badge" style="background: #fff8e1; color: #f57f17;">Cash Flow Control</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #ef5350, #c62828);">
                            <MudIcon Icon="@Icons.Material.Filled.Verified" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Compliance & Audit</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Empost regulatory compliance, licensing, royalty calculations, and quarterly submission tracking.
                        </MudText>
                        <div class="highlight-badge" style="background: #ffebee; color: #b71c1c;">UAE Compliant</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="feature-card" Elevation="3">
                    <MudCardContent>
                        <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #78909c, #455a64);">
                            <MudIcon Icon="@Icons.Material.Filled.Settings" Color="Color.Surface" Size="Size.Large" />
                        </div>
                        <MudText Typo="Typo.h6" Class="mb-2">Masters & Settings</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Company setup, branches, users, roles, geography, service types, vehicles, and workflow configuration.
                        </MudText>
                        <div class="highlight-badge" style="background: #eceff1; color: #37474f;">Fully Configurable</div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </div>

    <div class="module-section">
        <div class="section-title">Key Highlights</div>
        <div class="section-subtitle">
            What sets Net4Courier apart from traditional logistics software
        </div>
        
        <MudGrid Spacing="3">
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Color="Color.Primary" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">Real-Time Operations</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Live pickup dashboard with commitment tracking, countdown timers, and courier performance metrics with 30-second auto-refresh.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Success" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">Integrated Email Reports</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Send customer ledgers and statements directly via Gmail API with PDF attachments and professional formatting.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.TableChart" Color="Color.Warning" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">Excel Import/Export</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Bulk shipment upload, rate card import from client templates, and comprehensive data export capabilities.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Error" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">23+ Financial Reports</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Trial Balance, P&L, Balance Sheet, Cash Flow, Aging Reports, Ledgers, and multiple report variants.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Info" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">Multi-Region Ready</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Built-in support for GCC, South Asia, and Southeast Asia with extensible geography masters.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <MudCard Class="feature-card" Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Api" Color="Color.Secondary" Size="Size.Large" />
                            <div>
                                <MudText Typo="Typo.h6">API Integration</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Webhook endpoints for third-party booking websites and external system integration.
                                </MudText>
                            </div>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </div>

    <div class="module-section">
        <div class="section-title">Technology Stack</div>
        <div class="section-subtitle">
            Built on modern, enterprise-grade technologies
        </div>
        
        <MudGrid Spacing="3" Justify="Justify.Center">
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Custom.Brands.Microsoft" Size="Size.Large" Color="Color.Primary" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">.NET 8</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Blazor Server</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Material.Filled.Storage" Size="Size.Large" Color="Color.Info" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">PostgreSQL</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Database</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Material.Filled.Palette" Size="Size.Large" Color="Color.Secondary" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">MudBlazor</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">UI Framework</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf" Size="Size.Large" Color="Color.Error" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">QuestPDF</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Reporting</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Material.Filled.Cloud" Size="Size.Large" Color="Color.Success" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">Cloud</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Hosting</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="4" md="2">
                <div class="tech-stack-card">
                    <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Large" Color="Color.Warning" />
                    <MudText Typo="Typo.subtitle2" Class="mt-2">Gmail API</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Email</MudText>
                </div>
            </MudItem>
        </MudGrid>
    </div>

    <div class="footer-section">
        <MudText Typo="Typo.h5" Class="mb-2">Ready to Transform Your Logistics Operations?</MudText>
        <MudText Typo="Typo.body1" Style="opacity: 0.85; margin-bottom: 1rem;">
            Net4Courier brings enterprise-level logistics management to courier companies of all sizes.
        </MudText>
        <MudStack Row="true" Justify="Justify.Center" Spacing="2">
            <MudChip T="string" Color="Color.Primary" Size="Size.Medium">Scalable</MudChip>
            <MudChip T="string" Color="Color.Success" Size="Size.Medium">Secure</MudChip>
            <MudChip T="string" Color="Color.Warning" Size="Size.Medium">Reliable</MudChip>
            <MudChip T="string" Color="Color.Info" Size="Size.Medium">Modern</MudChip>
        </MudStack>
    </div>

</MudContainer>

