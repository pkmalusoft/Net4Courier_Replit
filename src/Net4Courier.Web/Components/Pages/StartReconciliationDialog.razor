@inject ISnackbar Snackbar
@using Net4Courier.Web.DTOs

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PlayArrow" Class="mr-2" />
            Start New Reconciliation
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Info">
            Bank Reconciliation module is under development. This feature will be available after TrueBooks GL integration is complete.
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public List<BankAccountListDto> BankAccounts { get; set; } = new();

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
