@using MudBlazor
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AssignmentInd" Class="mr-2" /> Assign Courier
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudSelect T="long?" @bind-Value="_selectedCourierId" Label="Select Courier" Variant="Variant.Outlined" 
                   FullWidth="true" AnchorOrigin="Origin.BottomCenter">
            @foreach (var courier in Couriers)
            {
                <MudSelectItem T="long?" Value="@((long?)courier.Id)">
                    @courier.Name @(string.IsNullOrEmpty(courier.Mobile) ? "" : $" ({courier.Mobile})")
                </MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!_selectedCourierId.HasValue)">Assign</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public List<Party> Couriers { get; set; } = new();
    [Parameter] public long? SelectedCourierId { get; set; }
    
    private long? _selectedCourierId;

    protected override void OnInitialized()
    {
        _selectedCourierId = SelectedCourierId;
    }

    private void Submit() => MudDialog.Close(DialogResult.Ok(_selectedCourierId!.Value));
    private void Cancel() => MudDialog.Cancel();
}
