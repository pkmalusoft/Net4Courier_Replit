@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="UserType.Name" 
                          Label="Name" 
                          Required="true" 
                          RequiredError="Name is required"
                          Variant="Variant.Outlined"
                          Class="mb-4" />
            
            <MudSwitch @bind-Value="UserType.IsActive" 
                       Label="Active" 
                       Color="Color.Primary" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="@(!_isValid)">
            @(IsNew ? "Create" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] 
    public UserType UserType { get; set; } = new();

    [Parameter] 
    public bool IsNew { get; set; }

    private MudForm? _form;
    private bool _isValid;

    private async Task Save()
    {
        if (_form != null)
        {
            await _form.Validate();
            if (!_isValid) return;
        }

        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (IsNew)
        {
            dbContext.UserTypes.Add(UserType);
        }
        else
        {
            dbContext.UserTypes.Update(UserType);
        }

        await dbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
