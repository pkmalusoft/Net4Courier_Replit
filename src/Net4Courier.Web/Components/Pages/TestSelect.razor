@page "/test-select"
@using MudBlazor

<MudDialogProvider />
<MudPopoverProvider />

<MudDialog Open="true">
    <DialogContent>
        <MudSelect @bind-Value="_value"
                   T="int"
                   Label="Test Select"
                   DisablePortal="true">
            <MudSelectItem T="int" Value="1">One</MudSelectItem>
            <MudSelectItem T="int" Value="2">Two</MudSelectItem>
            <MudSelectItem T="int" Value="3">Three</MudSelectItem>
        </MudSelect>
    </DialogContent>
</MudDialog>

@code {
    private int _value = 1;
}
