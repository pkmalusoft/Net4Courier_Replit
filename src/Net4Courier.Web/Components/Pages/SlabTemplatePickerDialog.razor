@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Select a Template</MudText>
    </TitleContent>
    <DialogContent>
        <MudList T="SlabRuleTemplate" Clickable="true" Dense="true">
            @foreach (var template in Templates)
            {
                <MudListItem T="SlabRuleTemplate" OnClick="@(() => SelectTemplate(template))"
                             Class="@(template == _selected ? "mud-primary-text" : "")">
                    <MudStack>
                        <MudText Typo="Typo.subtitle2">@template.TemplateName</MudText>
                        @if (!string.IsNullOrEmpty(template.Description))
                        {
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@template.Description</MudText>
                        }
                        <MudText Typo="Typo.caption">
                            Base: @template.BaseWeight.ToString("N3")kg @@ @template.BaseRate.ToString("N2") | 
                            @template.Details.Count slab(s)
                        </MudText>
                    </MudStack>
                </MudListItem>
            }
        </MudList>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Confirm" 
                   Disabled="@(_selected == null)">Load</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public List<SlabRuleTemplate> Templates { get; set; } = new();

    private SlabRuleTemplate? _selected;

    private void SelectTemplate(SlabRuleTemplate template)
    {
        _selected = template;
    }

    private void Confirm()
    {
        if (_selected != null)
        {
            MudDialog.Close(DialogResult.Ok(_selected));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
