@page "/inco-terms"
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<PageTitle>Inco Terms - Net4Courier</PageTitle>

<MudPaper Class="pa-4" Elevation="0">
    <MudToolBar Dense="true" Class="pl-0">
        <MudText Typo="Typo.h6">Inco Terms</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenAddDialog">
            Add Term
        </MudButton>
    </MudToolBar>

    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-3">
        Configure Incoterms (International Commercial Terms) for shipments
    </MudText>

    <MudTable Items="_incoTerms" Hover="true" Dense="true" Loading="_loading">
        <HeaderContent>
            <MudTh>Code</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Description</MudTh>
            <MudTh>Sort Order</MudTh>
            <MudTh>Status</MudTh>
            <MudTh Style="width: 120px;">Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Code</MudTd>
            <MudTd>@context.Name</MudTd>
            <MudTd>@(context.Description ?? "-")</MudTd>
            <MudTd>@context.SortOrder</MudTd>
            <MudTd>
                <MudChip T="string" Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                    @(context.IsActive ? "Active" : "Inactive")
                </MudChip>
            </MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="@(() => OpenEditDialog(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="@(() => DeleteTerm(context))" />
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No Inco Terms found. Click "Add Term" to create one.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

<MudDialog @bind-Visible="_dialogVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">@(_editingTerm.Id == 0 ? "Add Inco Term" : "Edit Inco Term")</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="2">
            <MudItem xs="4">
                <MudTextField @bind-Value="_editingTerm.Code" Label="Code*" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="8">
                <MudTextField @bind-Value="_editingTerm.Name" Label="Name*" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_editingTerm.Description" Label="Description" Variant="Variant.Outlined" Lines="2" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_editingTerm.SortOrder" Label="Sort Order" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudCheckBox @bind-Value="_editingTerm.IsActive" Label="Active" Color="Color.Success" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveTerm">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private List<IncoTerm> _incoTerms = new();
    private bool _loading = true;
    private bool _dialogVisible;
    private IncoTerm _editingTerm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        _loading = true;
        _incoTerms = await dbContext.IncoTerms
            .Where(t => !t.IsDeleted)
            .OrderBy(t => t.SortOrder)
            .ThenBy(t => t.Name)
            .ToListAsync();
        _loading = false;
    }

    private void OpenAddDialog()
    {
        _editingTerm = new IncoTerm { IsActive = true, SortOrder = _incoTerms.Count + 1 };
        _dialogVisible = true;
    }

    private void OpenEditDialog(IncoTerm term)
    {
        _editingTerm = new IncoTerm
        {
            Id = term.Id,
            Code = term.Code,
            Name = term.Name,
            Description = term.Description,
            SortOrder = term.SortOrder,
            IsActive = term.IsActive
        };
        _dialogVisible = true;
    }

    private void CloseDialog()
    {
        _dialogVisible = false;
    }

    private async Task SaveTerm()
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        if (string.IsNullOrWhiteSpace(_editingTerm.Code) || string.IsNullOrWhiteSpace(_editingTerm.Name))
        {
            Snackbar.Add("Code and Name are required", Severity.Warning);
            return;
        }

        try
        {
            if (_editingTerm.Id == 0)
            {
                var exists = await dbContext.IncoTerms.AnyAsync(t => t.Code == _editingTerm.Code && !t.IsDeleted);
                if (exists)
                {
                    Snackbar.Add("An Inco Term with this code already exists", Severity.Warning);
                    return;
                }

                _editingTerm.CreatedAt = DateTime.UtcNow;
                dbContext.IncoTerms.Add(_editingTerm);
                await dbContext.SaveChangesAsync();
                Snackbar.Add("Inco Term added successfully", Severity.Success);
            }
            else
            {
                var existing = await dbContext.IncoTerms.FindAsync(_editingTerm.Id);
                if (existing != null)
                {
                    existing.Code = _editingTerm.Code;
                    existing.Name = _editingTerm.Name;
                    existing.Description = _editingTerm.Description;
                    existing.SortOrder = _editingTerm.SortOrder;
                    existing.IsActive = _editingTerm.IsActive;
                    existing.ModifiedAt = DateTime.UtcNow;
                    await dbContext.SaveChangesAsync();
                    Snackbar.Add("Inco Term updated successfully", Severity.Success);
                }
            }

            _dialogVisible = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving Inco Term: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteTerm(IncoTerm term)
    {
        await using var dbContext = await DbFactory.CreateDbContextAsync();
        var confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete the Inco Term '{term.Name}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                term.IsDeleted = true;
                term.ModifiedAt = DateTime.UtcNow;
                await dbContext.SaveChangesAsync();
                Snackbar.Add("Inco Term deleted", Severity.Success);
                await LoadData();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting Inco Term: {ex.Message}", Severity.Error);
            }
        }
    }
}
