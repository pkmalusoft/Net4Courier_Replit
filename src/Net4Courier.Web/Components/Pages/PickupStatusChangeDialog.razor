@using MudBlazor
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-2" /> Change Pickup Status
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">Current Status: <MudChip T="string" Color="@GetStatusColor(PickupRequest.Status)" Size="Size.Small">@GetStatusText(PickupRequest.Status)</MudChip></MudText>
        
        <MudSelect T="PickupStatus" @bind-Value="_newStatus" Label="New Status" Variant="Variant.Outlined" Required="true">
            @foreach (var status in Enum.GetValues<PickupStatus>())
            {
                <MudSelectItem Value="@status">@GetStatusText(status)</MudSelectItem>
            }
        </MudSelect>
        
        <MudTextField @bind-Value="_remarks" Label="Remarks" Variant="Variant.Outlined" Lines="3" Class="mt-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(_newStatus == PickupRequest.Status)">
            Update Status
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public PickupRequest PickupRequest { get; set; } = null!;
    
    private PickupStatus _newStatus;
    private string _remarks = "";

    protected override void OnInitialized()
    {
        _newStatus = PickupRequest.Status;
    }

    private async Task Submit()
    {
        var oldStatus = PickupRequest.Status;
        PickupRequest.Status = _newStatus;
        PickupRequest.ModifiedAt = DateTime.UtcNow;
        
        if (_newStatus == PickupStatus.AssignedForCollection && !PickupRequest.AssignedAt.HasValue)
        {
            PickupRequest.AssignedAt = DateTime.UtcNow;
        }
        else if (_newStatus == PickupStatus.ShipmentCollected && !PickupRequest.CollectedAt.HasValue)
        {
            PickupRequest.CollectedAt = DateTime.UtcNow;
            PickupRequest.CollectionRemarks = _remarks;
        }
        else if (_newStatus == PickupStatus.Inscanned && !PickupRequest.InscannedAt.HasValue)
        {
            PickupRequest.InscannedAt = DateTime.UtcNow;
        }
        
        if (!string.IsNullOrWhiteSpace(_remarks))
        {
            PickupRequest.Remarks = _remarks;
        }
        
        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();

    private Color GetStatusColor(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => Color.Warning,
        PickupStatus.AssignedForCollection => Color.Info,
        PickupStatus.ShipmentCollected => Color.Success,
        PickupStatus.Inscanned => Color.Secondary,
        PickupStatus.Cancelled => Color.Error,
        _ => Color.Default
    };

    private string GetStatusText(PickupStatus status) => status switch
    {
        PickupStatus.PickupRequest => "Pickup Request",
        PickupStatus.AssignedForCollection => "Assigned for Collection",
        PickupStatus.ShipmentCollected => "Shipment Collected",
        PickupStatus.Inscanned => "Inscanned",
        PickupStatus.Cancelled => "Cancelled",
        _ => status.ToString()
    };
}
