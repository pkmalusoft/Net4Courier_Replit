@inject ApplicationDbContext DbContext
@inject ISnackbar Snackbar
@inject IWebHostEnvironment WebHostEnvironment
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @if (IsNew) { <text>New SLA Agreement</text> } else { <text>Edit SLA Agreement: @Agreement.AgreementNo</text> }
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid Spacing="2">
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Agreement.AgreementNo" Label="Agreement No" Required="true" 
                                  RequiredError="Agreement number is required" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudAutocomplete T="long" @bind-Value="_selectedCustomerId" Label="Customer" Required="true"
                                     RequiredError="Customer is required" SearchFunc="SearchCustomers" 
                                     ToStringFunc="@(id => _customers.FirstOrDefault(c => c.Id == id)?.Name ?? "")"
                                     Variant="Variant.Outlined" ResetValueOnEmptyText="true" 
                                     Disabled="@(PreselectedCustomerId.HasValue)" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Agreement.Title" Label="Title / Description" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Account Terms</MudText>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="SLAAccountType" @bind-Value="Agreement.AccountType" Label="Account Type" Variant="Variant.Outlined">
                        @foreach (var type in Enum.GetValues<SLAAccountType>())
                        {
                            <MudSelectItem T="SLAAccountType" Value="type">@type</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Agreement.CreditLimit" Label="Credit Limit" Variant="Variant.Outlined" Format="N0" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Agreement.PaymentTermsDays" Label="Payment Terms (Days)" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Agreement Period</MudText>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="_agreementDate" Label="Agreement Date" Variant="Variant.Outlined" 
                                   DateFormat="dd-MMM-yyyy" Editable="true"
                                   AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="_expiryDate" Label="Expiry Date (Optional)" Variant="Variant.Outlined" 
                                   DateFormat="dd-MMM-yyyy" Editable="true" Clearable="true"
                                   AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Weight & Volumetric Settings</MudText>
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Agreement.MaxPackageWeight" Label="Max Package Weight (KG)" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Agreement.VolumetricDivisorAir" Label="Vol. Divisor (Air)" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Agreement.VolumetricDivisorRoad" Label="Vol. Divisor (Road)" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudNumericField @bind-Value="Agreement.VolumetricDivisorDomestic" Label="Vol. Divisor (Domestic)" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Liability</MudText>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Agreement.LiabilityLimitUSD" Label="Liability Limit" Variant="Variant.Outlined" Format="N2" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Agreement.LiabilityLimitCurrency" Label="Currency" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Additional Terms</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Agreement.SpecialTerms" Label="Special Terms" Variant="Variant.Outlined" Lines="3" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Agreement.Notes" Label="Internal Notes" Variant="Variant.Outlined" Lines="2" />
                </MudItem>

                @if (!IsNew)
                {
                    <MudItem xs="12">
                        <MudDivider Class="my-2" />
                        <MudText Typo="Typo.subtitle1" Class="mb-2">Attached Documents</MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="mb-2">
                            <MudFileUpload T="IBrowserFile" FilesChanged="OnDocumentFileChanged" Accept=".pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg">
                                <ButtonTemplate>
                                    <MudButton HtmlTag="label"
                                               Variant="Variant.Outlined" 
                                               Color="Color.Primary" 
                                               Size="Size.Small"
                                               StartIcon="@Icons.Material.Filled.AttachFile"
                                               for="@context.Id"
                                               Disabled="_isUploading">
                                        @if (_isUploading) { <text>Uploading...</text> } else { <text>Attach Document</text> }
                                    </MudButton>
                                </ButtonTemplate>
                            </MudFileUpload>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">PDF, Word, Excel, Images (Max 10MB)</MudText>
                        </MudStack>
                        
                        @if (_documents.Any())
                        {
                            <MudTable Items="@_documents" Dense="true" Hover="true" Elevation="0" Class="mt-2">
                                <HeaderContent>
                                    <MudTh>File Name</MudTh>
                                    <MudTh>Size</MudTh>
                                    <MudTh>Uploaded</MudTh>
                                    <MudTh Style="width: 100px;">Actions</MudTh>
                                </HeaderContent>
                                <RowTemplate>
                                    <MudTd DataLabel="File Name">@context.OriginalFileName</MudTd>
                                    <MudTd DataLabel="Size">@FormatFileSize(context.FileSize)</MudTd>
                                    <MudTd DataLabel="Uploaded">@context.UploadedAt.ToString("dd-MMM-yyyy HH:mm")</MudTd>
                                    <MudTd DataLabel="Actions">
                                        <MudIconButton Icon="@Icons.Material.Filled.Download" Size="Size.Small" Color="Color.Primary" 
                                                       OnClick="@(() => DownloadDocument(context))" Title="Download" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" 
                                                       OnClick="@(() => DeleteDocument(context))" Title="Delete" />
                                    </MudTd>
                                </RowTemplate>
                            </MudTable>
                        }
                        else
                        {
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">No documents attached</MudText>
                        }
                    </MudItem>
                }

                @if (!IsNew)
                {
                    <MudItem xs="12" md="6">
                        <MudSelect T="SLAStatus" @bind-Value="Agreement.Status" Label="Status" Variant="Variant.Outlined">
                            @foreach (var status in Enum.GetValues<SLAStatus>())
                            {
                                <MudSelectItem T="SLAStatus" Value="status">@status</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudSwitch @bind-Value="Agreement.IsActive" Label="Active" Color="Color.Primary" />
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public SLAAgreement Agreement { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }
    [Parameter] public long? PreselectedCustomerId { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    private bool _initialized;
    private List<Party> _customers = new();
    private List<Company> _companies = new();
    private long _selectedCustomerId;
    private DateTime? _agreementDate;
    private DateTime? _expiryDate;
    private List<SLADocument> _documents = new();
    private bool _isUploading;
    private const long MaxFileSize = 10 * 1024 * 1024; // 10MB

    protected override async Task OnInitializedAsync()
    {
        await LoadLookups();
        
        if (PreselectedCustomerId.HasValue && IsNew)
        {
            _selectedCustomerId = PreselectedCustomerId.Value;
            Agreement.CustomerId = PreselectedCustomerId.Value;
        }
        else if (!IsNew)
        {
            _selectedCustomerId = Agreement.CustomerId;
        }
        
        _agreementDate = Agreement.AgreementDate == default ? DateTime.Today : Agreement.AgreementDate;
        _expiryDate = Agreement.ExpiryDate;
        
        if (IsNew)
        {
            Agreement.AgreementNo = await GenerateAgreementNo();
            if (_companies.Any())
            {
                Agreement.CompanyId = _companies.First().Id;
            }
        }
        else
        {
            await LoadDocuments();
        }
        
        _initialized = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _initialized && !IsNew)
        {
            await Task.Delay(100);
            await _form.Validate();
            StateHasChanged();
        }
    }

    private async Task LoadDocuments()
    {
        _documents = await DbContext.SLADocuments
            .Where(d => d.SLAAgreementId == Agreement.Id && d.IsActive)
            .OrderByDescending(d => d.UploadedAt)
            .ToListAsync();
    }

    private async Task LoadLookups()
    {
        _customers = await DbContext.Parties
            .Where(p => p.PartyType == PartyType.Customer && p.IsActive && !p.IsDeleted)
            .OrderBy(p => p.Name)
            .ToListAsync();
            
        _companies = await DbContext.Companies
            .Where(c => c.IsActive && !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
    }

    private async Task<string> GenerateAgreementNo()
    {
        var count = await DbContext.SLAAgreements.CountAsync() + 1;
        return $"SLA-{DateTime.Today:yyyyMM}-{count:D4}";
    }

    private Task<IEnumerable<long>> SearchCustomers(string value)
    {
        var results = _customers
            .Where(c => string.IsNullOrEmpty(value) || 
                       c.Name.Contains(value, StringComparison.OrdinalIgnoreCase) ||
                       (c.Code?.Contains(value, StringComparison.OrdinalIgnoreCase) ?? false))
            .Select(c => c.Id);
        return Task.FromResult(results);
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        Agreement.CustomerId = _selectedCustomerId;
        var agreementDate = _agreementDate ?? DateTime.Today;
        Agreement.AgreementDate = DateTime.SpecifyKind(agreementDate, DateTimeKind.Utc);
        Agreement.ExpiryDate = _expiryDate.HasValue 
            ? DateTime.SpecifyKind(_expiryDate.Value, DateTimeKind.Utc) 
            : null;
        
        if (IsNew)
        {
            Agreement.CreatedAt = DateTime.UtcNow;
            DbContext.SLAAgreements.Add(Agreement);
        }
        else
        {
            Agreement.ModifiedAt = DateTime.UtcNow;
            DbContext.SLAAgreements.Update(Agreement);
        }

        await DbContext.SaveChangesAsync();
        Snackbar.Add(IsNew ? "Agreement created successfully" : "Agreement updated successfully", Severity.Success);
        MudDialog.Close(DialogResult.Ok(Agreement));
    }

    private void Cancel() => MudDialog.Cancel();

    private static readonly string[] AllowedExtensions = { ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".png", ".jpg", ".jpeg" };

    private async Task OnDocumentFileChanged(IBrowserFile file)
    {
        if (file == null) return;
        
        if (file.Size > MaxFileSize)
        {
            Snackbar.Add("File size exceeds 10MB limit", Severity.Error);
            return;
        }

        var extension = Path.GetExtension(file.Name).ToLowerInvariant();
        if (!AllowedExtensions.Contains(extension))
        {
            Snackbar.Add("Invalid file type. Allowed: PDF, Word, Excel, Images", Severity.Error);
            return;
        }

        _isUploading = true;
        StateHasChanged();

        try
        {
            var uploadsPath = Path.Combine(WebHostEnvironment.WebRootPath, "uploads", "sla-documents");
            Directory.CreateDirectory(uploadsPath);
            var uniqueFileName = $"sla_{Agreement.Id}_{Guid.NewGuid()}{extension}";
            var filePath = Path.Combine(uploadsPath, uniqueFileName);

            await using var stream = new FileStream(filePath, FileMode.Create);
            await file.OpenReadStream(MaxFileSize).CopyToAsync(stream);

            var document = new SLADocument
            {
                SLAAgreementId = Agreement.Id,
                FileName = uniqueFileName,
                OriginalFileName = file.Name,
                FilePath = $"/uploads/sla-documents/{uniqueFileName}",
                ContentType = file.ContentType,
                FileSize = file.Size,
                UploadedAt = DateTime.UtcNow,
                CreatedAt = DateTime.UtcNow,
                IsActive = true
            };

            DbContext.SLADocuments.Add(document);
            await DbContext.SaveChangesAsync();

            await LoadDocuments();
            Snackbar.Add("Document uploaded successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error uploading document: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isUploading = false;
            StateHasChanged();
        }
    }

    private async Task DownloadDocument(SLADocument document)
    {
        var fullPath = Path.Combine(WebHostEnvironment.WebRootPath, document.FilePath.TrimStart('/'));
        if (!File.Exists(fullPath))
        {
            Snackbar.Add("File not found", Severity.Error);
            return;
        }

        var fileBytes = await File.ReadAllBytesAsync(fullPath);
        var base64 = Convert.ToBase64String(fileBytes);
        var mimeType = document.ContentType ?? "application/octet-stream";
        
        await JSRuntime.InvokeVoidAsync("downloadFileFromBase64", base64, document.OriginalFileName, mimeType);
    }

    private async Task DeleteDocument(SLADocument document)
    {
        try
        {
            var fullPath = Path.Combine(WebHostEnvironment.WebRootPath, document.FilePath.TrimStart('/'));
            if (File.Exists(fullPath))
            {
                File.Delete(fullPath);
            }

            document.IsActive = false;
            document.ModifiedAt = DateTime.UtcNow;
            DbContext.SLADocuments.Update(document);
            await DbContext.SaveChangesAsync();

            await LoadDocuments();
            Snackbar.Add("Document deleted", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting document: {ex.Message}", Severity.Error);
        }
    }

    private string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:N1} KB";
        return $"{bytes / (1024.0 * 1024.0):N1} MB";
    }
}
