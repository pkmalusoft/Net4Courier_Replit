@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Business" Class="mr-2" />
            @(IsNew ? "Add New Company" : "Edit Company")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Name" Label="Company Name" Required="true" RequiredError="Company name is required"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Code" Label="Company Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Company.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="form-select-group">
                        <label>Country</label>
                        <select class="form-select" value="@Company.CountryId" @onchange="OnCountryChangedNative">
                            <option value="">-- Select Country --</option>
                            @foreach (var country in _countries)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        </select>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="form-select-group">
                        <label>State</label>
                        <select class="form-select" value="@Company.StateId" @onchange="OnStateChangedNative" disabled="@(!Company.CountryId.HasValue)">
                            <option value="">-- Select State --</option>
                            @foreach (var state in _states)
                            {
                                <option value="@state.Id">@state.Name</option>
                            }
                        </select>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="form-select-group">
                        <label>City</label>
                        <select class="form-select" value="@Company.CityId" @onchange="OnCityChangedNative" disabled="@(!Company.StateId.HasValue)">
                            <option value="">-- Select City --</option>
                            @foreach (var city in _cities)
                            {
                                <option value="@city.Id">@city.Name</option>
                            }
                        </select>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.PostalCode" Label="Postal Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.Website" Label="Website" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.TaxNumber" Label="Tax Number" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.RegistrationNumber" Label="Registration Number" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="Company.IsActive" Label="Active" Color="Color.Primary" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Company Company { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;
    
    private List<Country> _countries = new();
    private List<State> _states = new();
    private List<City> _cities = new();

    protected override async Task OnInitializedAsync()
    {
        _countries = await DbContext.Countries
            .Where(c => c.IsActive && !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
            
        if (Company.CountryId.HasValue)
        {
            await LoadStates(Company.CountryId.Value);
        }
        
        if (Company.StateId.HasValue)
        {
            await LoadCities(Company.StateId.Value);
        }
    }

    private async Task OnCountryChangedNative(ChangeEventArgs e)
    {
        long? countryId = string.IsNullOrEmpty(e.Value?.ToString()) ? null : long.Parse(e.Value.ToString()!);
        Company.CountryId = countryId;
        Company.StateId = null;
        Company.CityId = null;
        _states.Clear();
        _cities.Clear();
        
        if (countryId.HasValue)
        {
            await LoadStates(countryId.Value);
        }
        StateHasChanged();
    }

    private async Task OnStateChangedNative(ChangeEventArgs e)
    {
        long? stateId = string.IsNullOrEmpty(e.Value?.ToString()) ? null : long.Parse(e.Value.ToString()!);
        Company.StateId = stateId;
        Company.CityId = null;
        _cities.Clear();
        
        if (stateId.HasValue)
        {
            await LoadCities(stateId.Value);
        }
        StateHasChanged();
    }

    private void OnCityChangedNative(ChangeEventArgs e)
    {
        Company.CityId = string.IsNullOrEmpty(e.Value?.ToString()) ? null : long.Parse(e.Value.ToString()!);
    }

    private async Task LoadStates(long countryId)
    {
        _states = await DbContext.States
            .Where(s => s.CountryId == countryId && s.IsActive && !s.IsDeleted)
            .OrderBy(s => s.Name)
            .ToListAsync();
    }

    private async Task LoadCities(long stateId)
    {
        _cities = await DbContext.Cities
            .Where(c => c.StateId == stateId && c.IsActive && !c.IsDeleted)
            .OrderBy(c => c.Name)
            .ToListAsync();
    }

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Company.CreatedAt = DateTime.UtcNow;
            DbContext.Companies.Add(Company);
        }
        else
        {
            Company.ModifiedAt = DateTime.UtcNow;
            DbContext.Companies.Update(Company);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Company));
    }

    private void Cancel() => MudDialog.Cancel();
}
