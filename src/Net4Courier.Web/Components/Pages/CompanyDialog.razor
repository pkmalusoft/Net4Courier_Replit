@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Business" Class="mr-2" />
            @(IsNew ? "Add New Company" : "Edit Company")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Name" Label="Company Name" Required="true" RequiredError="Company name is required"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Code" Label="Company Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Company.Address" Label="Address" Variant="Variant.Outlined" Lines="2" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.City" Label="City" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.State" Label="State" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.Country" Label="Country" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.PostalCode" Label="Postal Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.Website" Label="Website" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Company.TaxNumber" Label="Tax Number" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.RegistrationNumber" Label="Registration Number" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="Company.IsActive" Label="Active" Color="Color.Primary" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Company Company { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Company.CreatedAt = DateTime.UtcNow;
            DbContext.Companies.Add(Company);
        }
        else
        {
            Company.ModifiedAt = DateTime.UtcNow;
            DbContext.Companies.Update(Company);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Company));
    }

    private void Cancel() => MudDialog.Cancel();
}
