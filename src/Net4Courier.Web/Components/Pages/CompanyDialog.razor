@inject ApplicationDbContext DbContext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Business" Class="mr-2" />
            @(IsNew ? "Add New Company" : "Edit Company")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Name" Label="Company Name" Required="true" RequiredError="Company name is required"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.CompanyPrefix" Label="Company Prefix" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Phone" Label="Phone" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.MobileNo1" Label="Mobile No 1" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.MobileNo2" Label="Mobile No 2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Company.Address1" Label="Address Line 1" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Address2" Label="Address Line 2" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Address3" Label="Address Line 3" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.Website" Label="Website" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.KeyPerson" Label="Key Person" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.AWBFormat" Label="AWB Format" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Company.InvoicePrefix" Label="Invoice Prefix" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudStack Row="true" Spacing="4">
                        <MudSwitch @bind-Value="Company.IsActive" Label="Active" Color="Color.Primary" />
                        <MudSwitch @bind-Value="Company.EnableAPI" Label="Enable API" Color="Color.Secondary" />
                        <MudSwitch @bind-Value="Company.AWBAlphaNumeric" Label="AWB Alphanumeric" Color="Color.Info" />
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!_formIsValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Company Company { get; set; } = new();
    [Parameter] public bool IsNew { get; set; }

    private MudForm _form = null!;
    private bool _formIsValid;

    private async Task Save()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        if (IsNew)
        {
            Company.CreatedAt = DateTime.UtcNow;
            DbContext.Companies.Add(Company);
        }
        else
        {
            Company.UpdatedAt = DateTime.UtcNow;
            DbContext.Companies.Update(Company);
        }

        await DbContext.SaveChangesAsync();
        MudDialog.Close(DialogResult.Ok(Company));
    }

    private void Cancel() => MudDialog.Cancel();
}
