@using Net4Courier.Operations.Entities
@using Net4Courier.Kernel.Enums

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@(Bag.Id == 0 ? "Add Bag" : "Edit Bag")</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="Bag.BagNumber" Label="Bag Number *" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudSelect T="BagType" Label="Bag Type" @bind-Value="Bag.BagType" Variant="Variant.Outlined">
                    <MudSelectItem Value="BagType.CourierBag">Courier Bag</MudSelectItem>
                    <MudSelectItem Value="BagType.Pallet">Pallet</MudSelectItem>
                    <MudSelectItem Value="BagType.Container">Container</MudSelectItem>
                    <MudSelectItem Value="BagType.Loose">Loose</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudNumericField @bind-Value="Bag.GrossWeight" Label="Gross Weight (kg)" Variant="Variant.Outlined" Format="N3" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Bag.SealNumber" Label="Seal Number" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Bag.Remarks" Label="Remarks" Variant="Variant.Outlined" Lines="2" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance? MudDialog { get; set; }
    
    [Parameter] public ImportBag Bag { get; set; } = new();

    private void Cancel() => MudDialog?.Cancel();
    
    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(Bag.BagNumber))
        {
            return;
        }
        MudDialog?.Close(DialogResult.Ok(Bag));
    }
}
