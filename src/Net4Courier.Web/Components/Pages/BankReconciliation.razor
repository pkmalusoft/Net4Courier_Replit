@page "/bank-reconciliation"
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudText Typo="Typo.h4">Bank Reconciliation</MudText>
    </MudStack>

    <MudAlert Severity="Severity.Info" Class="mb-4">
        Bank Reconciliation module is under development. This feature will be available after TrueBooks GL integration is complete.
    </MudAlert>

    <MudPaper Class="pa-4" Elevation="2">
        <MudText Typo="Typo.body1">
            The Bank Reconciliation module will allow you to:
        </MudText>
        <MudList T="string" Dense="true" Class="mt-2">
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Match bank statement entries with book entries</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Import bank statements from CSV/Excel files</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Track unreconciled transactions</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Generate reconciliation reports</MudListItem>
        </MudList>
    </MudPaper>
</MudContainer>

