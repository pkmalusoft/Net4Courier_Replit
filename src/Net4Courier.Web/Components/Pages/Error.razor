@page "/Error"
@using Microsoft.AspNetCore.Diagnostics

<PageTitle>Error - Net4Courier</PageTitle>

<div style="display:flex;justify-content:center;align-items:center;min-height:80vh;font-family:Roboto,sans-serif;">
    <div style="text-align:center;padding:40px;background:#fff;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.1);max-width:500px;">
        <div style="font-size:64px;color:#f44336;margin-bottom:16px;">&#9888;</div>
        <h2 style="color:#f44336;margin-bottom:16px;">Something went wrong</h2>
        <p style="color:#555;margin-bottom:12px;">An unexpected error occurred while processing your request. Please try again.</p>
        <p style="color:#888;margin-bottom:24px;font-size:14px;">If the problem persists, please contact your system administrator.</p>
        <a href="/" style="display:inline-block;padding:10px 24px;background:#1976d2;color:#fff;text-decoration:none;border-radius:4px;font-size:14px;">Go to Dashboard</a>
    </div>
</div>
