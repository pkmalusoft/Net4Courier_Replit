@page "/returns-rto"
@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Operations.Entities
@using Net4Courier.Kernel.Enums

<PageTitle>Returns / RTO - Net4Courier</PageTitle>

<MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
    <MudText Typo="Typo.h4">Returns / RTO Management</MudText>
</MudStack>

<MudPaper Class="pa-4 mb-4" Elevation="2">
    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
        <MudTextField @bind-Value="_searchString" Placeholder="Search AWB, consignor, consignee..." Adornment="Adornment.Start" 
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" Immediate="true" Style="width:280px" />
        <MudDatePicker @bind-Date="_fromDate" Label="From Date" Variant="Variant.Outlined" DateFormat="dd/MM/yyyy" Style="width:150px" />
        <MudDatePicker @bind-Date="_toDate" Label="To Date" Variant="Variant.Outlined" DateFormat="dd/MM/yyyy" Style="width:150px" />
        <MudSelect T="string" @bind-Value="_returnTypeFilter" Label="Return Type" Variant="Variant.Outlined" Style="width:150px" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem T="string" Value="@("")">All</MudSelectItem>
            <MudSelectItem T="string" Value="@("RTS")">RTS</MudSelectItem>
            <MudSelectItem T="string" Value="@("RTO")">RTO (Returned to Origin)</MudSelectItem>
        </MudSelect>
        <MudSelect T="CourierStatus?" @bind-Value="_statusFilter" Label="Status" Variant="Variant.Outlined" Style="width:150px" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem T="CourierStatus?" Value="@((CourierStatus?)null)">All</MudSelectItem>
            <MudSelectItem T="CourierStatus?" Value="@CourierStatus.Pending">Pending</MudSelectItem>
            <MudSelectItem T="CourierStatus?" Value="@CourierStatus.InTransit">In Transit</MudSelectItem>
            <MudSelectItem T="CourierStatus?" Value="@CourierStatus.Delivered">Delivered</MudSelectItem>
        </MudSelect>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Search" StartIcon="@Icons.Material.Filled.Search">Search</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Default" OnClick="ClearFilters">Clear</MudButton>
    </MudStack>
</MudPaper>

<MudPaper Class="pa-4 mb-4" Elevation="1">
    <MudStack Row="true" Spacing="4">
        <MudPaper Class="pa-3" Elevation="0" Style="background-color: var(--mud-palette-info-lighten);">
            <MudText Typo="Typo.subtitle2">Total Returns</MudText>
            <MudText Typo="Typo.h5">@_totalReturns</MudText>
        </MudPaper>
        <MudPaper Class="pa-3" Elevation="0" Style="background-color: var(--mud-palette-warning-lighten);">
            <MudText Typo="Typo.subtitle2">RTS Shipments</MudText>
            <MudText Typo="Typo.h5">@_rtsCount</MudText>
        </MudPaper>
        <MudPaper Class="pa-3" Elevation="0" Style="background-color: var(--mud-palette-secondary-lighten);">
            <MudText Typo="Typo.subtitle2">RTO Shipments</MudText>
            <MudText Typo="Typo.h5">@_rtoCount</MudText>
        </MudPaper>
        <MudPaper Class="pa-3" Elevation="0" Style="background-color: var(--mud-palette-success-lighten);">
            <MudText Typo="Typo.subtitle2">Completed</MudText>
            <MudText Typo="Typo.h5">@_completedCount</MudText>
        </MudPaper>
    </MudStack>
</MudPaper>

<MudPaper Elevation="2">
    <MudTable Items="@_returnShipments" Hover="true" Striped="true" Loading="@_loading" LoadingProgressColor="Color.Primary">
        <HeaderContent>
            <MudTh>AWB No</MudTh>
            <MudTh>Return Type</MudTh>
            <MudTh>Date</MudTh>
            <MudTh>Original AWB</MudTh>
            <MudTh>From</MudTh>
            <MudTh>To</MudTh>
            <MudTh>Weight</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Reason</MudTh>
            <MudTh Style="width: 120px;">Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="AWB No">
                <MudLink Href="@($"/awb-entry/{context.Id}")">@context.AWBNo</MudLink>
            </MudTd>
            <MudTd DataLabel="Return Type">
                @if(context.IsRTS)
                {
                    <MudChip T="string" Color="Color.Warning" Size="Size.Small">RTS</MudChip>
                }
                else
                {
                    <MudChip T="string" Color="Color.Secondary" Size="Size.Small">RTO</MudChip>
                }
            </MudTd>
            <MudTd DataLabel="Date">@(context.IsRTS ? context.RTSCreatedAt?.ToString("dd/MM/yyyy") : context.TransactionDate.ToString("dd/MM/yyyy"))</MudTd>
            <MudTd DataLabel="Original AWB">
                @if(context.OriginalShipment != null)
                {
                    <MudLink Href="@($"/awb-entry/{context.OriginalShipmentId}")">@context.OriginalShipment.AWBNo</MudLink>
                }
                else if(context.IsReturnedToConsignor)
                {
                    <MudText Typo="Typo.caption">Self</MudText>
                }
            </MudTd>
            <MudTd DataLabel="From">@context.Consignor</MudTd>
            <MudTd DataLabel="To">@context.Consignee</MudTd>
            <MudTd DataLabel="Weight">@context.ChargeableWeight?.ToString("N2") kg</MudTd>
            <MudTd DataLabel="Status">
                <MudChip T="string" Color="@GetStatusColor(context.CourierStatusId)" Size="Size.Small">@context.CourierStatusId</MudChip>
            </MudTd>
            <MudTd DataLabel="Reason">
                @if(context.IsRTS && !string.IsNullOrEmpty(context.RTSReason))
                {
                    <MudTooltip Text="@context.RTSReason">
                        <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Small" />
                    </MudTooltip>
                }
            </MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Color="Color.Secondary" Href="@($"/shipment/{context.Id}")" Title="View Dashboard" />
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary" Href="@($"/awb-entry/{context.Id}")" Title="Edit" />
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No return shipments found.</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
        </PagerContent>
    </MudTable>
</MudPaper>

@code {
    private List<InscanMaster> _returnShipments = new();
    private bool _loading = true;
    private string _searchString = "";
    private DateTime? _fromDate = DateTime.Today.AddDays(-30);
    private DateTime? _toDate = DateTime.Today;
    private string _returnTypeFilter = "";
    private CourierStatus? _statusFilter;
    
    private int _totalReturns = 0;
    private int _rtsCount = 0;
    private int _rtoCount = 0;
    private int _completedCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await Search();
    }

    private async Task ClearFilters()
    {
        _searchString = "";
        _fromDate = DateTime.Today.AddDays(-30);
        _toDate = DateTime.Today;
        _returnTypeFilter = "";
        _statusFilter = null;
        await Search();
    }

    private async Task Search()
    {
        _loading = true;
        var query = DbContext.InscanMasters
            .Include(i => i.OriginalShipment)
            .Where(i => !i.IsDeleted && (i.IsRTS || i.IsReturnedToConsignor))
            .AsQueryable();

        if (!string.IsNullOrWhiteSpace(_searchString))
        {
            var search = _searchString.ToLower();
            query = query.Where(i => 
                i.AWBNo.ToLower().Contains(search) ||
                (i.Consignor != null && i.Consignor.ToLower().Contains(search)) ||
                (i.Consignee != null && i.Consignee.ToLower().Contains(search)));
        }

        if (_fromDate.HasValue)
        {
            var fromDateUtc = DateTime.SpecifyKind(_fromDate.Value.Date, DateTimeKind.Utc);
            query = query.Where(i => i.TransactionDate >= fromDateUtc);
        }

        if (_toDate.HasValue)
        {
            var toDateUtc = DateTime.SpecifyKind(_toDate.Value.Date.AddDays(1), DateTimeKind.Utc);
            query = query.Where(i => i.TransactionDate < toDateUtc);
        }

        if (_returnTypeFilter == "RTS")
        {
            query = query.Where(i => i.IsRTS);
        }
        else if (_returnTypeFilter == "RTO")
        {
            query = query.Where(i => i.IsReturnedToConsignor && !i.IsRTS);
        }

        if (_statusFilter.HasValue)
        {
            query = query.Where(i => i.CourierStatusId == _statusFilter.Value);
        }

        _returnShipments = await query
            .OrderByDescending(i => i.TransactionDate)
            .Take(500)
            .ToListAsync();

        _totalReturns = _returnShipments.Count;
        _rtsCount = _returnShipments.Count(i => i.IsRTS);
        _rtoCount = _returnShipments.Count(i => i.IsReturnedToConsignor && !i.IsRTS);
        _completedCount = _returnShipments.Count(i => i.CourierStatusId == CourierStatus.Delivered);

        _loading = false;
    }

    private Color GetStatusColor(CourierStatus status)
    {
        return status switch
        {
            CourierStatus.Pending => Color.Default,
            CourierStatus.InTransit => Color.Info,
            CourierStatus.OutForDelivery => Color.Warning,
            CourierStatus.Delivered => Color.Success,
            CourierStatus.NotDelivered => Color.Error,
            CourierStatus.OnHold => Color.Warning,
            CourierStatus.Cancelled => Color.Error,
            _ => Color.Default
        };
    }
}
