@page "/test-customer-gemini"
@using MudBlazor
@inject IDialogService DialogService

<PageTitle>Test Customer Gemini Dialog</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="py-8">
    <MudPaper Class="pa-6" Elevation="2">
        <MudStack Spacing="4" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Science" Size="Size.Large" Color="Color.Secondary" />
            <MudText Typo="Typo.h4">Gemini Design Preview</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mud-text-secondary">
                Click the button below to preview the Gemini-style Customer dialog with compact layout and inline label styling.
            </MudText>
            
            <MudDivider Class="my-4" FlexItem="true" Style="width:100%" />
            
            <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Design Features:</MudText>
            <MudStack Spacing="1">
                <MudText Typo="Typo.body2">• Compact single-page layout (no card sections)</MudText>
                <MudText Typo="Typo.body2">• Top row with Company, Party Type, Account Type</MudText>
                <MudText Typo="Typo.body2">• Two-column split: Business Profile | Location & Financials</MudText>
                <MudText Typo="Typo.body2">• Simple label-above-field pattern for dropdowns</MudText>
                <MudText Typo="Typo.body2">• Inline MudStack rows for side-by-side fields</MudText>
                <MudText Typo="Typo.body2">• Adornment icons on Account No (lock) and Credit Limit ($)</MudText>
            </MudStack>

            <MudDivider Class="my-4" FlexItem="true" Style="width:100%" />

            <MudButton Variant="Variant.Filled" 
                       Color="Color.Secondary" 
                       Size="Size.Large"
                       StartIcon="@Icons.Material.Filled.OpenInNew"
                       OnClick="OpenTestDialog">
                Open Gemini Dialog
            </MudButton>
            
            <MudText Typo="Typo.caption" Class="mud-text-secondary mt-2">
                This is a temporary test page. Remove after finalizing the design.
            </MudText>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    private async Task OpenTestDialog()
    {
        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Large,
            FullWidth = true,
            CloseOnEscapeKey = true,
            BackdropClick = false
        };

        await DialogService.ShowAsync<TestCustomerGeminiDialog>("", options);
    }
}
