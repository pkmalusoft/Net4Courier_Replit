@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject ISnackbar Snackbar
@using Microsoft.EntityFrameworkCore
@using Net4Courier.Infrastructure.Data
@using Net4Courier.Masters.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.LockReset" Class="mr-2" />
            Reset Password
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2" Class="mb-4">
            Enter a new password for <strong>@User.Username</strong> (@User.FullName)
        </MudText>
        
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudTextField @bind-Value="_newPassword" 
                          Label="New Password" 
                          InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                          Adornment="Adornment.End"
                          AdornmentIcon="@(_showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          OnAdornmentClick="@(() => _showPassword = !_showPassword)"
                          Required="true" 
                          RequiredError="Password is required"
                          Validation="@(new Func<string, string?>(ValidatePassword))"
                          Variant="Variant.Outlined"
                          Class="mb-3" />
            
            <MudTextField @bind-Value="_confirmPassword" 
                          Label="Confirm Password" 
                          InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                          Required="true" 
                          RequiredError="Please confirm the password"
                          Validation="@(new Func<string, string?>(ValidateConfirmPassword))"
                          Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="ResetPassword" Disabled="@(!_formIsValid || _isSaving)">
            @if (_isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Reset Password
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public User User { get; set; } = null!;

    private MudForm _form = null!;
    private bool _formIsValid;
    private bool _isSaving;
    private bool _showPassword;
    private string _newPassword = "";
    private string _confirmPassword = "";

    private string? ValidatePassword(string password)
    {
        if (string.IsNullOrWhiteSpace(password))
            return "Password is required";
        if (password.Length < 6)
            return "Password must be at least 6 characters";
        return null;
    }

    private string? ValidateConfirmPassword(string confirmPassword)
    {
        if (string.IsNullOrWhiteSpace(confirmPassword))
            return "Please confirm the password";
        if (confirmPassword != _newPassword)
            return "Passwords do not match";
        return null;
    }

    private async Task ResetPassword()
    {
        await _form.Validate();
        if (!_formIsValid) return;

        _isSaving = true;
        try
        {
            await using var db = await DbContextFactory.CreateDbContextAsync();
            
            var user = await db.Users.FirstOrDefaultAsync(u => u.Id == User.Id);
            if (user == null)
            {
                Snackbar.Add("User not found", Severity.Error);
                return;
            }

            user.PasswordHash = BCrypt.Net.BCrypt.HashPassword(_newPassword);
            user.ModifiedAt = DateTime.UtcNow;
            
            await db.SaveChangesAsync();
            
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error resetting password: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
