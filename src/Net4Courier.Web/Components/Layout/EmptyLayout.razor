@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@Body

@code {
    private MudTheme _theme = new()
    {
        ZIndex = new ZIndex()
        {
            Dialog = 1400,
            Popover = 1500,
            Snackbar = 1600,
            Tooltip = 1700
        },
        PaletteLight = new PaletteLight()
        {
            Primary = "#556ee6",
            Secondary = "#34c38f",
            Background = "#f8f8fb",
            Surface = "#ffffff"
        }
    };
}
