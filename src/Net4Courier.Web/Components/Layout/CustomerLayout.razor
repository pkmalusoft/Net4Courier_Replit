@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthStateProvider
@using Net4Courier.Web.Services
@using Microsoft.AspNetCore.Components.Authorization

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="true" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-2">Net4Courier</MudText>
        <MudSpacer />
        <MudText Typo="Typo.body2" Class="mr-2">Customer Portal</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="Logout" Title="Logout" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="DrawerVariant.Responsive">
        <MudNavMenu>
            <MudNavLink Href="/customer/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
                Dashboard
            </MudNavLink>
            <MudNavLink Href="/customer/my-pickups" Icon="@Icons.Material.Filled.LocalShipping">
                My Pickups
            </MudNavLink>
            <MudNavLink Href="/customer/my-shipments" Icon="@Icons.Material.Filled.Inventory">
                My Shipments
            </MudNavLink>
            <MudNavLink Href="/customer/pickup-request" Icon="@Icons.Material.Filled.Add">
                New Pickup Request
            </MudNavLink>
            <MudNavLink Href="/customer/track" Icon="@Icons.Material.Filled.Search">
                Track Shipment
            </MudNavLink>
            
            <MudNavGroup Title="Import/Export" Icon="@Icons.Material.Filled.SwapHoriz">
                <MudNavLink Href="/mawb-list" Icon="@Icons.Material.Filled.FlightTakeoff">Export Manifest</MudNavLink>
                <MudNavLink Href="/import-dashboard" Icon="@Icons.Material.Filled.FlightLand">Import Manifest</MudNavLink>
                <MudNavLink Href="/import-customs" Icon="@Icons.Material.Filled.Gavel">Customs Processing</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent Class="pt-16">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void Logout()
    {
        NavigationManager.NavigateTo("/login", true);
    }
}
