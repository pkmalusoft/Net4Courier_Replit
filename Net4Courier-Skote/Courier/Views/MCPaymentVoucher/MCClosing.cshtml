                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Consignor)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.TotalAWB)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
