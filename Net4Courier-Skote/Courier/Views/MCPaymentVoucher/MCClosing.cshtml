<script type="text/javascript">
    var itemlist = [];
    function getvoucherlist() {
        debugger;
        var maxrow = $('#detailbody > tr').length;
        
        
        for (i = 0; i < maxrow; i++) {
            var checked = $('#awbchecked_' + i).prop("checked");
            if (checked == true) {
                var item = {
                    MCPaymentVoucherID: $('#hdnvoucherid_' + i).val()
                }
                itemlist.push(item);
            }
            if ((i + 1) == maxrow) {
                savevoucher(itemlist);
            }
        }

    }
    function savevoucher() {
       
        debugger;

        $.ajax({
            type: "POST",
            url: "/MCPaymentVoucher/SaveMCClosing",
            datatype: "Json",
            data: { Details: JSON.stringify(itemlist) },
            success: function (response) {
                var status = response.Status;
                var documentno = response.DocumentNo;
                var message = response.Message;
                if (status == "OK") {

                    Swal.fire('Data Validation', message, 'success');
                    window.location.href = "/MCPaymentVoucher/MCClosing";

                }
                else {
                    Swal.fire('Data Validation', message, 'error');

                }
            }
        });
    }
