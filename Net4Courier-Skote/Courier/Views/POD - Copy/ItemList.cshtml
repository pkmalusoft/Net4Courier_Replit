<table class="table table-responsive table-bordered tblfont" role="grid" style="min-width: 100%" id="DetailsTable">

    @*<table class="table" style="min-width: 100%">*@
    <thead class="input-table">
        <tr>
            <th width="20px">
                S.No
            </th>
            <th>
                AWB
            </th>
            <th>
                AWB Date
            </th>
            <th>
                Shipper
            </th>
            <th>
                Receiver
            </th>
            <th>
                Receiver Address
            </th>
            <th>
                COD
            </th>
            <th>Material Cost</th>
            <th>
                Status
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody class="input-table" id="detailsbody">
        @foreach (var item in Model.Details1)
        {
            <tr class="@item.deletedclass">
                <td>
                    @(i + 1)
                    @Html.HiddenFor(model => model.Details1[i].InScanID, new { @Value = @item.InScanID })
                    @Html.HiddenFor(model => model.Details1[i].AWB, new { @Value = @item.AWB, @id = "hdnAWbNo_" + @i })
                    @Html.HiddenFor(model => model.Details1[i].ShipmentDetailID, new { @Value = @item.ShipmentDetailID })
                    @Html.HiddenFor(model => model.Details1[i].deleted, new { @Value = @item.deleted, @id = "hdndeleted_" + @i })
                    @Html.HiddenFor(model => model.Details1[i].COD, new { @Value = @item.COD, @id = "hdncod_" + @i })
                    @Html.HiddenFor(model => model.Details1[i].MaterialCost, new { @Value = @item.MaterialCost, @id = "hdnmc_" + @i })
                    @Html.HiddenFor(model => model.Details1[i].consignee, new { @Value = @item.consignee, @id = "hdnconsignee_" + @i })
                </td>
                <td>
                    @item.AWB 
                </td>
                <td>
                    @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.AWBDate) <br />
                    <span class="colorblue"> @item.PayMode</span>
                </td>

                <td>
                    @item.consignor
                </td>
                <td>@item.consignee </td>

                <td>
                    @item.city -@item.address - @item.phone
                </td>

                <td class="text-right">
                    @if (@item.PayMode == "COD" && @item.COD == 0)
                    {
                        <span class="colorred"> @item.COD</span>
                    }
                    else
                    {
                        @item.COD
                    }

                </td>
                <td class="text-right">
                    @item.MaterialCost
                </td>
                <td>@item.CourierStatus</td>
                <td><a awbno="@item.AWB"  href="javascript:void(0);" onclick="deletetrans(this,' + i + ')" class="rem"><i class="fa fa-times" ></i></a></td>
            </tr>

i++;
        }
    </tbody>
    <tfoot>
        <tr>
            <td  colspan="6">
            
            </td>
            
            <td style="text-align:right">
                <span id="spancodtotal" style="font-weight:bold"></span>
            </td>
            <td style="text-align:right"><span style="font-weight:bold" id="spanmctotal"></span></td>
            <td>
                
            </td>
            <td></td>

        </tr>
    </tfoot>
</table>


