@model IEnumerable<Net4Courier.Models.CustRateVM>
@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "Rate Chart";
    ViewBag.pageTitle = "Rate Chart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tfoot{
        display: table-header-group;
    }
    .dataTables_filter {
        display: none;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            if (title!='')
            $(this).html('<input type="text" class="form-control-sm" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers"});

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });
</script>


<div class="clearfix"></div>
@using (Html.BeginForm("Index", "CustomerRatesMaster", FormMethod.Post, new { @id = "booksearch" }))
{
    <div class="card">
        <div class="card-body">
            <div class="col-md-12 mb-3 text-md-end">
                <input type="button" value="Download Template" class="btn btn-primary" onclick="window.location.href='/Template/CustomerRateTemplate.csv'">
                
                <a class="btn btn-primary waves-effect waves-light text-md-end" href="/CustomerRatesMaster/Create"><i class="mdi mdi-plus me-1"></i> New Rate Chart</a>
            </div>
            <table class="table table-bordered mb-0" id="dataTables-example" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            Customer Rate
                        </th>
                        <th>
                            Zone
                        </th>
                        <th>
                            Zone Category
                        </th>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Forwarding Agent
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Customer Rate
                        </th>
                        <th>
                            Zone
                        </th>
                        <th>
                            Zone Category
                        </th>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Forwarding Agent
                        </th>

                        <th></th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerRateType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZoneName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZoneCategory)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAgentName)
                            </td>

                            <td>
                                <div class="d-flex gap-3">
                                    <a href="@Url.Action("Create", new { id = item.CustomerRateID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                                    @*<a href="@Url.Action("Delete", new { id = item.RoleID })"><i class="fa fa-times"></i></a>*@
                                    <a href="#" onclick="Delete(ID=@item.CustomerRateID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                                    <a class="aprint text-secondary" target="_blank" href="RateChartPrint?id=@item.CustomerRateID" title="Invoice Printing"><i class="mdi mdi-print font-size-18"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}

    <script type="text/javascript">
        // function Delete(ID) {
        //     if (confirm("Are you sure, You want to Delete Customer Rates?")) {
        //         window.location.href = "/CustomerRatesMaster/DeleteConfirmed/?id=" + ID;
        //     }
        // }

        function Delete(ID) {
            Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
                function (t) {
                    if (t.value) {
                        $.ajax({
                            type: "POST",
                            url: '/CustomerRatesMaster/DeleteConfirmed',
                            datatype: "html",
                            data: {
                                'id': ID
                            },
                            success: function (response) {
                                if (response.Status == "OK") {
                                    Swal.fire("Delete Status!", response.Message, "success");
                                    window.location.reload();
                                }
                                else {
                                    Swal.fire("Delete Status!", response.Message, "error");
                                }
                            }
                        });
                    }
                });
        }
    </script>
