                        '<td><input type="text" class="text-right" id="txtWtTo_' + i + '"  value="' + value.AddWtTo + '" name="CustRateDetails[' + i + '].AddWtTo"></td>' +
                        '<td><input type="text"  class="text-right" id="txtIncrWt_' + i + '" value="' + value.IncrWt + '" name="CustRateDetails[' + i + '].IncrWt"></td>' +
                        '<td><input type="text" class="text-right"  id="txtContractRate_' + i + '" value="' + x + '" name="CustRateDetails[' + i + '].ContractRate" onchange="contractdatecal(' + i + ')" ></td>' +
                        '<td><input type="text"  class="text-right crate" id="txtAddRate_' + i + '" value="' + value.AddRate  + '" name="CustRateDetails[' + i + '].AddRate"></td>' +
                        //'<td><a href="javascript:void(0)" onclick="check(this)" value="Click"><i class="fa fa-pencil"></i></a></td>' +
                        '<td><a href="javascript:void(0)" onclick="deletetrans(this,' + i + ')"><i class="fa fa-times"></i></a></td>' +
                        +'</tr>';
                    $("#details").append(html);


                });


                var temp = parseFloat($("#details tr:last").find("td:eq(1)").text()) + parseFloat("0.001");
                $("#addwtfrom").val(parseFloat(temp).toFixed(3));
                $('#addwtfrom').val(getmaxweight());                 
                $('#incrwt').val(getmaxIncrweight());
            }

        });
    }
