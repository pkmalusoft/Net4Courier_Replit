<tbody>
    @foreach (var item in Model) {
    <tr>
        <td>@item.DebitNoteNo</td>
        <td>@Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.Date)</td>
        <td>@item.SupplierName</td>
