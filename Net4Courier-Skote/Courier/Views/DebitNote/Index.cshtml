        <td>
        <div class="d-flex gap-3"> 
            @if (ismodify)
            {
                <a href='@Url.Action("Create", "DebitNote", new { id = item.DebitNoteId })' data-toggle="tooltip" data-placement="left" title="Click here" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>  
            }
            
            @if (isdelete)
            {
                <a href="#" onclick="Delete(id=@item.DebitNoteId)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>  
            }
            @if (isprint)
            {
                <a onclick="funExportToPDF(@item.DebitNoteId)" href="#" class="text-secondary"><i class="mdi mdi-printer font-size-18"></i></a>  
            }
