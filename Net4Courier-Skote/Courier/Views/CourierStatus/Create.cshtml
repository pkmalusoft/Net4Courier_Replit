@model Net4Courier.Models.CourierStatusVM

@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "Shipment Status";
    ViewBag.pageTitle = "Shipment Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Name").focus();

        $("#btnsave").click(function () {
            var dep = $("#Name").val();

            if (dep == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
    });

 </script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        <div class="card">
            <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="headinglabel required">Name</label>
                    @Html.TextBoxFor(model => model.CourierStatus, new { @class = "form-control txttarget" })
                    @Html.ValidationMessageFor(model => model.CourierStatus)
                </div>

                <div class="col-md-3">
                    <label class="headinglabel required">Code</label>
                    @Html.TextBoxFor(model => model.StatusCourier, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CourierStatus)
                </div>
                <div class="col-md-3">
                    <label class="headinglabel required">Status Type</label>
                    @Html.DropDownListFor(model => model.StatusTypeID, new SelectList(@ViewBag.statustype, "ID", "Name"), "Select", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.StatusTypeID)
                </div>
                 <div class="col-md-12 text-right">
                    <input type="submit" value="Save" class="btn btn-success" data-toggle="tooltip" id="btnsave" />
                    <a href='@Url.Action("Index", "CourierStatus", new { id = 0 })' class="btn btn-secondary">Cancel</a>        
                </div>
            </div>
            </div>
        </div>


       
    
    </fieldset>
}

