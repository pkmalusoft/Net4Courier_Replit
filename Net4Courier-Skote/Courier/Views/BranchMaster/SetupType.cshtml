    });
    
</script>
@using (Html.BeginForm("SetupType", "BranchMaster", FormMethod.Post, new { @id = "invoicesearch" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 <div class="row">
        <div class="col-md-4">
        <div class="mb-2">
            <label class="col-form-label">Branch</label>
            <input type="text"  class="form-control" value=@ViewBag.BranchName  readonly/>
        </div>
        </div>
        <div class="col-md-4">
         <div class="mb-2">
            @Html.HiddenFor(model => model.SetupID,new { @value = 1 })
            <label class="col-form-label required ">Type</label>
            @Html.DropDownListFor(model => model.SetupTypeID, new SelectList(@ViewBag.SetupType, "ID", "TypeName"), null, new { @class = "form-select", @requied = "true" })
            @Html.ValidationMessageFor(model => model.SetupTypeID)
        </div>
         </div>
        <div class="col-md-1">
         <div class="mb-2 mt-2">
        <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top"  id="btnsearch">
                            <i class="bx bx-search mt-1" style="font-size: 21px;"></i>
                        </button>
           
        </div>
         </div>
     </div>
}


