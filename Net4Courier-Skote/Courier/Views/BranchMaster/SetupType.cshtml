@model Net4Courier.Models.GeneralSetupVM
@{
    Layout = null;
}

<style>
    #invoicesearch .row .col-md-1 {
        width: 12%;
    }

    .multiselect {
        align-items: center;
        display: flex !Important;
        justify-content: space-around;
    }

    #movementid + .btn-group button, #movementid + .btn-group {
        display: block;
        width: 100%;
    }

    #FormDate {
        border-radius: 10px;
    }
</style>

<script>
     var customernames = [];
