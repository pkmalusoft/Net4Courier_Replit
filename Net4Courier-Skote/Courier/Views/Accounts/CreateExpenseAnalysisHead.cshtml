@model Net4Courier.Models.AnalysisHead
@{
      ViewBag.Title = "Analysis Head";
    ViewBag.pTitle = "Analysis Head";
    ViewBag.pageTitle = "General Ledger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .col-form-label {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });


        $("#btnsave").click(function () {
            var acgroup = $("#AnalysisGroupID option:selected").val();
            var head = $("#AnalysisHead1").val();
            var code = $("#AnalysisCode").val();




            if (acgroup == "") {
                $("#alert").show();
                return false;
            }
            else if (head == "") {
                $("#alert").show();
                return false;
            }
            else if (code == "") {
                $("#alert").show();
                return false;
            }

            else {
                $("#alert").hide();
                return true;
            }
        });


    });
</script>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

      
            <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
            <fieldset>

            <div class="card searchdiv">
                <div class="card-body">
                    <div class="row">
                    <div class="col-md-12">
                        <div class="mb-2">
                        <label class="required col-form-label">Analysis Group</label>
                        @Html.DropDownListFor(model => model.AnalysisGroupID, new SelectList(ViewBag.groups, "AnalysisGroupID", "AnalysisGroup"), "Select", new { @class = "form-select txttarget" })
                        @Html.ValidationMessageFor(model => model.AnalysisGroupID)
</div>
                    </div>
              
                    <div class="col-md-12">
                        <div class="mb-2">
                        <label class="required col-form-label">Analysis Head</label>
                        @Html.TextBoxFor(model => model.AnalysisHead1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AnalysisHead1)
</div>
                    </div>
               
                    <div class="col-md-12">
                        <div class="mb-2">
                        <label class="required col-form-label">Analysis Code</label>
                        @Html.TextBoxFor(model => model.AnalysisCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AnalysisCode)
</div>
                    </div>

              
                    <div class="form-group">
                        @if (ViewBag.ErrorMsg != null)
                        {
                            <span class="text-danger">@ViewBag.ErrorMsg</span>
                        }
                    </div>
               
                        <div class="col-md-12 text-md-end mt-3">

                            <input type="submit" value="Save" class="btn btn-success btnwid" id="btnsave" />

                           
                            <a href='@Url.Action("IndexExpenseAnalysisHead", "Accounts", new { id = 0 })' class="btn btn-secondary btnwid" >Cancel</a>

                        </div>
               </div>   </div>   </div>
            </fieldset>
     
    }

