<script type="text/javascript">
    function deleterow(i) {

        var item = $('#JAmount_' + i);
        $(item).parent().parent().addClass('hide');
        var obj = $(item).parent().parent().find('.hdndeleted');
        $(obj).val(true);
        CalculateTotal();

    }
    function CalculateTotal() {
        debugger;
        var maxrow = $('#tbl1 > tr').length;
        Total = 0;
        var totdebit = 0;
        var totcredit = 0;
        for (i = 0; i < maxrow; i++) {
            var debit= $('#JDebit_' + i).val();
            var credit = $('#JCredit_' + i).val();
            if (debit == '') {
                debit = 0;
            }
          
            if (credit == '') {
                credit = 0;
            }
             
            
            var paytypevalue = $('#Paytype_' + i).val();
            //if (paytypevalue == 0)
            //    itemval = parseFloat(itemval).toFixed(3) * -1;

            var deleteobj = $('#JDebit_' + i).parent().parent().find('.hdndeleted').val();
            if (deleteobj != "true") {
                //Total += parseFloat(itemval).toFixed(3);
                totdebit = parseFloat(totdebit) + parseFloat(debit);
                totcredit = parseFloat(totcredit) + parseFloat(credit);

            }
            $('#txtTotalDebit').val(parseFloat(totdebit).toFixed(@_decimal));
            $('#txtTotalCredit').val(parseFloat(totcredit).toFixed(@_decimal));
        }
        if (parseFloat($('#txtTotalDebit').val()) != parseFloat($('#txtTotalCredit').val()) || maxrow==0)
            $('#btnsave').attr('disabled', 'disabled');
        else if (parseFloat(Total)==0 && maxrow>0)
            $('#btnsave').removeAttr('disabled');
    }

