@model Net4Courier.Models.AcGroupVM
@{
    ViewBag.Title = "Modify";
    ViewBag.pTitle = "Account Group";
    ViewBag.pageTitle = "General Ledger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 765px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .headinglabel {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>
<script type="text/javascript">
        $(document).ready(function () {
                     $.notify("@ViewBag.ErrorMsg ", "danger");

            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });
            if ('@Model.ParentID' == 0 || '@Model.ParentID' == "" || '@Model.ParentID' == null) {
                  $("#AcTypeId").removeAttr('readonly');
            }
            else {
                $("#AcGroup").val('@Model.ParentID');
                  $("#AcTypeId").attr('readonly', 'readonly');
            }
             $("#AcGroup").change(function () {
            var thisval = $(this).val();
            if (thisval == null || thisval == "") {
                $("#AcTypeId").val('').trigger('change');
                $("#AcTypeId").removeAttr('readonly');
            } else {
                $.ajax({
                    url: '/Accounts/GetAcCategoryByParentid',
                    type: "GET",
                    dataType: "JSON",
                    data: { parentId: $(this).val() },
                    success: function (response) {
                        debugger;

                        //$("#AcCategoryID").val(groups);
                        $("#AcCategoryID").val(response.categoryid);
                        $("#AcTypeId").val(response.acttypeid).trigger('change');
                        $("#AcTypeId").attr('readonly', 'readonly');

                    }
                });
            }
         });
        });
    </script>

 
<section class="content-header">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="searchdiv  sm-width">

        <div class="row">
            <div class="col-md-12">
                <div class="mb-2">
                    <label class="required headinglabel">Group Name</label>
                    @Html.HiddenFor(mode=>Model.AcGroupID)
                    @Html.TextBoxFor(model => model.subgroup, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.subgroup)
                </div>
            </div>

            <div class="col-md-12">
                <div class="mb-2">
                    <label class="headinglabel">Group Code</label>

                    @Html.TextBoxFor(model => model.GroupCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GroupCode)
                </div>
            </div>

            <div class="col-md-12">
                <div class="mb-2">
                    <label class="headinglabel">Parent Group</label>
                    @Html.DropDownListFor(model => model.ParentID, new SelectList(ViewBag.groups, "AcGroupID", "AcGroup"), "Select", new { @class = "form-select" })
                </div>
                <div class="col-md-12">
                    <label class="required headinglabel">Account Type</label>
                    @Html.DropDownListFor(model => model.AcTypeId, new SelectList(ViewBag.AccountType, "Id", "AccountType"), "Select", new { @class = "form-select txttarget" })
                    @Html.ValidationMessageFor(model => model.AcTypeId)
                </div>

            </div>
        </div>

        <div class="row no-margin" style="padding-top:10px">
            <div class="col-md-12" style="text-align:right;">

                <input type="submit" value="Update" class="btn btn-success btnwidth" />

                &nbsp;
                <a href='@Url.Action("IndexAcGroup", "Accounts", new { id = 0 })' class="btn btn-dark btnwidth">Cancel</a>

            </div>
        </div>


    </fieldset>
}

</section>

