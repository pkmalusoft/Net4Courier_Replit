@model Net4Courier.Models.ParcelTypeVM

@{
    ViewBag.Title = "Edit";
         ViewBag.pTitle = "Parcel Type";
    ViewBag.pageTitle = "Parcel Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

  

    });
</script>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
       <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
 <div class="card"> 
  <div class="card-body"> 
           <div class="row"> 
               @Html.HiddenFor(model => model.id)
             <div class="col-md-3">
             <div class="mb-2">
                          <label class="col-form-label required">Docs/Non Docs</label>
                        @* @Html.DropDownListFor(model => model.DescID, ViewBag.doctype as SelectList, new { @class = "form-control txttarget" })*@
                    @Html.DropDownList("DescID", new List<SelectListItem>
                {
                    new SelectListItem{ Text="Docs", Value = "0" },
                    new SelectListItem{ Text="Non Docs", Value = "1" },
                 
              
                   
                 },"Select", new { @class = "form-select" })
                 
                  </div>
                 </div>
      

               <div class="col-md-3">
                <div class="mb-2">
                          <label class="col-form-label required">Parcel Type</label>
                        @Html.TextBoxFor(model=>model.Description,new{@class="form-control"})          
             
     </div>
                   </div>

        
                        <div class="col-md-12 text-md-end">
                           
                              <input type="submit" value="Update" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "ParcelType", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="">Cancel</a>
                          
                        </div>
                    </div> </div> </div>


    </fieldset>
}
    </section>

