    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#HAWBNo").focus();


        $("#destinationCity").empty();
        $('#destinationCity').append('<option value="0">Select</option>');

