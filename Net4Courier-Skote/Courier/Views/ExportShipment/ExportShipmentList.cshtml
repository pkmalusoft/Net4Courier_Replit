        <input type="text" class="form-control textright" id="txtFwdRate_@i" value="@Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.FwdCharge,"2")" onchange="TotalItems()" />
    </td>
    <td>
        <input type="text" class="form-control textright3" id="txtFwdVerifiedWeight_@i" value="@item.VerifiedWeight" onchange="TotalItems()" />
    </td>
    
   

    
