
@model Net4Courier.Models.ExportShipmentFormModel
@{
    /**/

    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
}
   
@foreach (var item in Model.ShipmentsVM)
{
<tr>
    <td>

        @Html.HiddenFor(model => model.ShipmentsVM[i].ShipmentDetailID, new { @Value = @item.ShipmentDetailID, @id = "hdnShipmentDetailID_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].InscanId, new { @Value = @item.InscanId, @id = "hdnInscanId_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].MAWB, new { @Value = @item.MAWB ,@id= "hdnMAWB_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].AWBNo, new { @Value = @item.AWBNo, @id = "hdnAWBNo_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].AWBDate, new { @Value = @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.AWBDate), @id = "hdnAWBDate_" + @i })
        
        @Html.HiddenFor(model => model.ShipmentsVM[i].Contents, new { @Value = @item.Contents, @id = "hdnContents_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].Shipper, new { @Value = @item.Shipper, @id = "hdnShipper_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].Receiver, new { @Value = @item.Receiver, @id = "hdnReceiver_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].PCS, new { @Value = @item.PCS, @id = "hdnPCS_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].Weight, new { @Value = @item.Weight, @id = "hdnWeight_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].Value, new { @Value = @item.Value, @id = "hdnValue_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].CurrencyID, new { @Value = @item.CurrencyID, @id = "hdnCurrencyID_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].InboundShipmentID, new { @Value = @item.InboundShipmentID, @id = "hdnInboundShipmentID_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].ExportID, new { @Value = @item.ExportID, @id = "hdnExportID_" + @i })
        @*@Html.HiddenFor(model => model.ShipmentsVM[i].FwdAgentAWBNo, new { @Value = $"{item.FwdAgentAWBNo}" })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdAgentId, new { @Value = $"{item.FwdAgentId}" })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdCharge, new { @Value = $"{item.FwdCharge}" })
        @Html.HiddenFor(model => model.ShipmentsVM[i].OtherCharge, new { @Value = $"{item.OtherCharge}" })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdFlight, new { @Value = $"{item.FwdFlight}" })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdDate, new { @Value = $"{item.FwdDate}" })*@
        @Html.HiddenFor(model => model.ShipmentsVM[i].OriginCountry, new { @Value = @item.OriginCountry, @id = "hdnOriginCountry_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].OriginCity, new { @Value = @item.OriginCity, @id = "hdnOriginCity_" + @i })

        @Html.HiddenFor(model => model.ShipmentsVM[i].DestinationCountry, new { @Value = @item.DestinationCountry, @id = "hdnDestinationCountry_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].DestinationCity, new { @Value = @item.DestinationCity, @id = "hdnDestinationCity_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdDate, new { @Value = @item.FwdDate, @id = "hdnFwdDate_" + @i })
        @Html.HiddenFor(model => model.ShipmentsVM[i].FwdFlight, new { @Value = @item.FwdFlight, @id = "hdnFwdFlight_" + @i })
