        @Html.HiddenFor(model => model.ShipmentsVM[i].OtherCharge, new { @Value = @item.OtherCharge, @id = "hdnOtherCharge_" + @i })

        @if (item.AWBChecked)
        {
            <input type="checkbox" id="chkawb_@i" checked value="@item.AWBChecked" onchange="TotalItems()" />
        }
        else
        {
            <input type="checkbox" id="chkawb_@i" value="@item.AWBChecked" onchange="TotalItems()" />
        }
    </td>

    <td>
        @item.AWBNo <br />
        @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.AWBDate)
    </td>
    <td>
        @item.Shipper<br />

        @item.OriginCountry
    </td>
    <td>
        @item.Receiver<br />
        @item.DestinationCountry
    </td>
    <td>
        @item.Contents
    </td>
    <td>
        @item.PCS <br />
        @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.Weight, "3") <br />
