    </td>
    <td>
        <input type="text" class="form-control" id="txtBagNo_@i" value="@item.BagNo" />
    </td>
    <td>
        <input type="text" class="form-select" id="txtFwdAgent_@i" value="@item.FwdAgentName" fagentid="@item.FwdAgentId" />

