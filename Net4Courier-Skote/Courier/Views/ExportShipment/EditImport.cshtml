        <tbody class="input-table" id="listContainer">

            @foreach (var item in Model.Shipments)
            {
                //var isexported = "";
                //if(item.Status>1)
                //{
                //    isexported = "exported";
                //}
                <tr id="@item.ShipmentDetailID" style="line-height:3">
                    <td >
                        <div class="col-md-1 checkboxdesign">
                            @i
                            <input type="checkbox" class="checkfilter" id="Chk_@item.ShipmentDetailID" value="@item.ShipmentDetailID" name="Chk_@item.ShipmentDetailID" />
                            </div>
                    </td>                    
                    <td>@item.AWB</td>
                    <td style="text-align:right">@item.PCS</td>
                    <td style="text-align:right">
                        @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.Weight, "3")
                    </td>
                    <td style="text-align:right">
                        @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.Value, "2")
                    </td>
                    <td>@item.Contents</td>
                    <td>@item.Shipper</td>
                    <td>@item.Reciver</td>
                    <td>@item.BagNo</td>
                    <td>
                        @Net4Courier.Models.CommonFunctions.GetCurrencyId(@item.CurrencyID)
                    </td>
                    <td class="Destcountry">
                        @item.DestinationCountry
                    </td>
                    <td>@item.DestinationCity</td>                    
                </tr>
                i = i + 1;
            }
