                                    <option value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-2">
                                <label class="col-form-label required">Invoice Type</label>
                                @Html.DropDownList("InvoiceType1", new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Customer Invoice", Value = "Customer"},
                                new SelectListItem{ Text="COLoader Invoice", Value = "COLoader" }
                                }, "Select", new { @class = "form-select", @required = "true", @id = "InvoiceType1" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-2">
                                <label class="col-form-label">Invoice Date</label>
                                <div class="docs-datepicker">
                                    <div class="input-group">
                                        <input type="text" class="form-control docs-date datetimepicker" name="InvoiceDate" id="InvoiceDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.InvoiceDate"
                                               placeholder="Pick a date" autocomplete="off">
