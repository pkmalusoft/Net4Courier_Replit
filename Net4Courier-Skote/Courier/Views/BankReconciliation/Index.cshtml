@model Net4Courier.Models.BankReconcSearch
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
    ViewBag.pTitle = "Bank Reconciliation";
    ViewBag.pageTitle = "GL Transactions";
    var _decimal = Convert.ToInt32(@Session["Decimal"].ToString());
}
<script type="text/javascript">
    var chequelist = [];
    function setTwoNumberDecimal(obj) {

         $(obj).val(parseFloat($(obj).val()).toFixed(@_decimal));

    }
   

   
    $(document).ready(function () {
        var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate.split('-')[1] + '-' + startdate.split('-')[0] + '-' + startdate.split('-')[2]);
        var ed = new Date(enddate.split('-')[1] + '-' + enddate.split('-')[0] + '-' + enddate.split('-')[2]);

        $(function () {
            $('#ReconcDate').datepicker({
                maxDate: ed,
                minDate: sd,
                dateFormat: 'dd-mm-yy',
            });
        });
        $('#btnupdate').click(function () {
            getchequelist();

        });

        setTimeout(function () {
            var maxrow1 = $('#chequetablebody > tr').length;
            for (j = 0; j < maxrow1; j++) {
                debugger;
                $('#dwstatus_' + j).val($('#dwstatus_' + j).attr('value')).trigger('change');
                setTwoNumberDecimal($('#txtcharge_' + j));
            }
        }, 300)

        $('#ChangeStatus').focus();
    });

    function getchequelist() {
        debugger;
        chequelist = [];
        var maxrow1 = $('#chequetablebody > tr').length;
            if (maxrow1 == 0) {

                Swal.fire('Data validation','No Cheque Items Listed', "error");
                $('#btnupdate').removeAttr('disabled');
                return;
            }

            for (j = 0; j < maxrow1; j++) {
                debugger;
                var checked = $('#chk_' + j).prop("checked");
                if (checked == true) {

                        if($('#dwstatus_' + j).val() == null || $('#dwstatus_' + j).val() == '')
                        {
                            $('#chk_' + j).removeAttr('checked');
                        }
                        else {
                            var item = {
                                AcBankDetailID: $('#hdnDetailID_' + j).val(),
                                    ChangeStatus: $('#dwstatus_' + j).val(),
                                    BankCharges: $('#txtcharge_' + j).val(),
                                    Remarks: $('#txtremarks_' + j).val(),
                                    Amount: $('#hdnAmount_' + j).val(),
                                    StatusReconciled: $('#chk_' + j).prop('checked')
                                }
                    }
                    chequelist.push(item);
                }
                if ((j + 1) == maxrow1) {
                    if (chequelist.length == 0) {


                        Swal.fire('Data validation', 'Select Cheque Item to continue', "error");
                        $('#btnupdate').removeAttr('disabled');
                    }
                    else {
                        savereconcile();
                    }
                }
            }

    }
    function savereconcile() {
        $.ajax({
            type: "POST",
            url: "/BankReconciliation/SaveReconc",
            datatype: "Json",
            data: { ReconcDate: $('#ReconcDate').val(), Details: JSON.stringify(chequelist) },
            success: function (response) {
                var status = response.Status;
                var documentno = response.DocumentNo;
                var message = response.Message;
                if (status == "Ok") {

                    Swal.fire('Save Status',message, "success");

                    setTimeout(function () {
                        window.location.href = "/BankReconciliation/Index";
                    },200)


                }
                else {
                    Swal.fire('Save Status', message, "error");

                }
            }
        });
    }
    function redrawgrid(obj) {
        debugger;
        var DetailId = $(obj).attr('Detailid');
        var statuschecked = $(obj).prop('checked');
        var idindex = $(obj).attr('id').split('_')[1];
        if ($('#ChangeStatus').val() == '') {


            Swal.fire('Save Status', 'Select Status to change', "error");
            return false;
        }


        var maxrow1 = $('#chequetablebody > tr').length;
        for (j = 0; j < maxrow1; j++) {
            debugger;
            if (j == parseInt(idindex)) {
                if (statuschecked == true)
                    $('#dwstatus_' + j).val($('#ChangeStatus').val()).trigger('change');
                else
                    $('#dwstatus_' + j).val('').trigger('change');

                break;
            }
        }
        
    
        //$.ajax({
        //    type: "POST",
