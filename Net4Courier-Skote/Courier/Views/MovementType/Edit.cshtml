@model Net4Courier.Models.MovementTypeVM

@{
    ViewBag.Title = "Edit";
        ViewBag.pTitle = "Movement Type";
    ViewBag.pageTitle = "Movement Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#MovementTypeName").focus();
      

        $("#btnsave").click(function () {
            var move = $("#MovementTypeName").val();
         


            if (move == "") {
                $("#validations").show();
                return false;
            }
        
            else {
                $("#validations").hide();
                return true;
            }
        });


    });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        <div class="card"> 
<div class="card-body"> 
       <div class="row"> 

         <div class="col-md-4">
         <div class="mb-2">
                      @Html.HiddenFor(model=>model.MovementTypeID)
                          <label class="col-from-label">Movement Type</label>
                 @Html.TextBoxFor(model => model.MovementTypeName,new { @class = "form-control txttarget" })
            @Html.ValidationMessageFor(model => model.MovementTypeName)
                     
                 </div>

            
           </div>
          
   
                        <div class="col-md-12 text-md-end">
                           
                              <input type="submit" value="Update" class="btn btn-success" id="btnsave" />
                              <a href='@Url.Action("Index", "MovementType", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="">Cancel</a>

                                 </div>   </div> 
                          
                        </div>
            </div>
    </fieldset>
}


