@*@model IEnumerable<DAL.RevenueType>*@
@model IEnumerable<Net4Courier.Models.RevenueAcHeadVM>
@{
   ViewBag.Title = "List";
    ViewBag.pTitle = "Revenue Type";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isadd = true;
    var ismodify = true;
    var isdelete = true;

    string path = Request.Url.AbsolutePath.ToLower();

    if (Convert.ToInt32(Session["UserRoleID"]) > 1)
    {
        Net4Courier.Models.SourceMastersModel obj = new Net4Courier.Models.SourceMastersModel();
        isadd = obj.GetAddpermission(Convert.ToInt32(Session["UserRoleID"]), path);
        ismodify = obj.GetModifypermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isdelete = obj.GetDeletepermission(Convert.ToInt32(Session["UserRoleID"]), path);

    }
}


<script type="text/javascript">
    $(document).ready(function () {

        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });


 </script>


<div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
<div class="row row_margin">
    <div class="col-md-12 mb-3">
        @if (isadd)
        {
            @Html.ActionLink("Create", "Create", new { acheadid = 0 }, new { @class = "btn btn-primary btnwidth  float-right" })
        }
        </div>
    </div>
  
        @if (TempData["SuccessMSG"] != null)
        {
            <script type="text/javascript">
         $(document).ready(function () {
             $.notify("@TempData["SuccessMSG"] ", "success");
          });
            </script>
        }
       <div class="">
       <table class="table align-middle table-nowrap" id="datatable">
                    <thead class="table-light">
                        <tr>
                            <th>
                                @Html.Label("Revenue Code")
                            </th>
                            <th>
                                @Html.Label("Revenue Type")
                            </th>
                            <th>
                                @Html.Label("Sales Chart of Account")
                            </th>
                            <th>
                                @Html.Label("Cost Chart of Account")
                            </th>
                            <th>

                            </th>

                        </tr>
                </thead>

             

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevenueCode)
                        </td>
                        <td class="tdtarget">
                            @Html.DisplayFor(modelItem => item.RevenueType)
                        </td>
                        <td class="tdtarget">
                            @Html.DisplayFor(modelItem => item.AcHead)
                        </td>

                        <td class="tdtarget">
                            @Html.DisplayFor(modelItem => item.CostAcHead)
                        </td>
                        <td>
                            <div class="d-flex gap-3">
                                @*@Html.ActionLink("Edit", "Edit", new { id=item.RevenueTypeID }) |*@
                                @* @Html.ActionLink("Details", "Details", new { id=item.RevenueTypeID }) |*@
                                @* @Html.ActionLink("Delete", "Delete", new { id=item.RevenueTypeID })*@
                                @if (ismodify)
                                {
                                    <a href="@Url.Action("Edit", new { id = item.RevenueTypeID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                                }  
                                @* <a href="@Url.Action("Delete", new { id = item.RevenueTypeID })"><i class="fa fa-times"></i></a>*@
                                @if (isdelete)
                                {
                                    <a href="#" onclick="Delete(ID=@item.RevenueTypeID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                                }
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div> </div> </div> </div>
    <script type="text/javascript">
        function Delete(ID) {
            if (confirm("Are you sure, You want to Delete RevenueType?")) {
                window.location.href = "/RevenueType/DeleteConfirmed/?id=" + ID;
            }
        }
    </script>
