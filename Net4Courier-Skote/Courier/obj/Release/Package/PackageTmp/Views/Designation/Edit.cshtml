@model Net4Courier.Models.DesignationVM

@{
    ViewBag.Title = "Edit";
    ViewBag.pTitle = "Designation";
    ViewBag.pageTitle = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Designation").focus();

        $("#btnsave").click(function () {
            var des = $("#Designation").val();

            if (des == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });

    });

 </script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
       <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
     <div class="card"> 
      <div class="card-body"> 
     <div class="row"> 

             <div class="col-md-3">
             <div class="mb-2">
                          <label class="col-form-label required">Designation</label>
                 @Html.HiddenFor(model=>model.DesignationID)
                      @Html.TextBoxFor(model => model.Designation, new {@class="form-control txttarget" })
            @Html.ValidationMessageFor(model => model.Designation)
                 </div>
                 </div>

             @* <div class="col-md-3">
                          <label class="headinglabel">Status Designation</label>
                              @Html.TextBoxFor(model => model.StatusDesignation, new {@class="form-control txttarget" })
                         @Html.ValidationMessageFor(model => model.StatusDesignation)
                 </div>*@
         </div>

    
                        <div class="col-md-12 text-md-end">
                               <input type="submit" value="Update" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "Designation", new { id = 0 })' class="btn btn-secondary">Cancel</a>
                               
                        </div>
                    </div>
   </div>
    </fieldset>
}

