@model Net4Courier.Models.QuotationSearch
@{
    //Layout = null;
    ViewBag.Title = "List";
    ViewBag.pTitle = "Quotation";
    ViewBag.pageTitle = "Operation";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var isadd = true;
    var ismodify = true;
    var isdelete = true;
    var isprint = true;
    var isview = true;
    string path = "/Quotation/Index";
    var _decimal = "2";

    if (Convert.ToInt32(Session["UserRoleID"]) > 1)
    {
        Net4Courier.Models.SourceMastersModel obj = new Net4Courier.Models.SourceMastersModel();
        isadd = obj.GetAddpermission(Convert.ToInt32(Session["UserRoleID"]), path);
        ismodify = obj.GetModifypermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isdelete = obj.GetDeletepermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isprint = obj.GetPrintpermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isview = obj.GetViewpermission(Convert.ToInt32(Session["UserRoleID"]), path);

    }
}



<script type="text/javascript">
   


  
    $(document).ready(function () {
      

 
        

    });


</script>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">From Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="FromDate" id="FromDate" value="@Model.FromDate.ToShortDateString()"
                                       placeholder="Pick a From Date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">To Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="ToDate" id="ToDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.ToDate.ToShortDateString()"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button" class="btn btn-secondary docs-datepicker-trigger" disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 search_field">
                    <div class="mb-2">
                        <label for="FromDate" class="col-form-label">Search Quotation No.</label>
                        @Html.TextBoxFor(mode => mode.QuotationNo, new { @class = "form-control text-right ora_border" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2 mt-2">
                        <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top">
                            <i class="bx bx-search mt-1" style="font-size: 21px;"></i>
                        </button>
                    </div>
                </div>


                <div class="col-md-4 text-md-end">
                    <div class="mb-2 mt-2">
                        @if (@Net4Courier.Models.CommonFunctions.CheckCreateEntryValid() == false || !isadd)
                        {
                          
                            <a class="btn btn-primary waves-effect waves-light btn_top" href="/Quotation/Create" disabled><i class="mdi mdi-plus me-1"></i> New Quotation</a>

                        }
                        else
                        {
                            
                            <a class="btn btn-primary waves-effect waves-light btn_top" href="/Quotation/Create"><i class="mdi mdi-plus me-1"></i> New Quotation</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            Quotation No.
                        </th>
                        <th>
                            Quotation Date
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>Quotation Amount</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuotationNo)
                            </td>
                            <td>
                                @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.QuotationDate)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            
                            <td style="text-align:right">
                                @Net4Courier.Models.CommonFunctions.GetFormatNumber(item.QuotationValue, _decimal)

                            </td>
                            <td>
                                <div class="d-flex gap-3">
                                    @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                                    <a class="aprint text-secondary" target="_blank" href="QuotationPrint?id=@item.QuotationID" title="Invoice Printing"><i class="mdi mdi-printer font-size-18"></i></a>

                                    <a class="aprint text-" target="_blank" href="Create?id=@item.QuotationID&newversion=1" title="Create Quotation New Version"><i class="mdi mdi-new-box font-size-18"></i></a>
                                    <a class="aprint text-" target="_blank" href="Create?id=@item.QuotationID&newversion=-1" title="Copy Quotation"><i class="mdi mdi-content-paste font-size-18"></i></a>
                                    <a class="aedit text-success" href="Create?id=@item.QuotationID"><i class="mdi mdi-pencil font-size-18"></i></a>

                                    <a class="adelete text-danger" href="#" onclick="Delete(@item.QuotationID)"><i class="mdi mdi-delete font-size-18"></i></a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                

            </table>
        </div>
    </div>
}
 
<script type="text/javascript">

    function Delete(ID) {
        Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
            function (t) {
                if (t.value) {

                    $.ajax({
                        type: "POST",
                        url: "/Quotation/DeleteConfirmed",
                        datatype: "html",
                        data: {
                            'id': ID
                        },
                        success: function (response) {
                            if (response.status == "OK") {
                                Swal.fire("Delete Status!", response.message, "success");
                                window.location.reload();
                            }
                            else {
                                Swal.fire("Delete Status!", response.message, "error");
                            }
                        }
                    });

                }
            });

    }
</script>
