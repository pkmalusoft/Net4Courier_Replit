@model Net4Courier.Models.QuotationVM
    @{
        var i = 0;
        var _decimal = @Session["Decimal"].ToString();
        Layout = null;
    }

    
    <script type="text/javascript">
        $(document).ready(function () {

            checkdeletedentry();
            setTimeout(function () {
                setUOMcombo();
            },100)

          
        });

     
    </script>
    <div class="table-responsive">
        <table  class="table table-datatable dataTable tblfont table-bordered table-striped mb-0" id="QuotationDetailTables" style="width: 100% !important;">

            <thead class="table-light">
                <tr>                    
                    <th>Group</th>
                    <th>Description</th>
                    <th>UOM</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Value</th>
                    <th>Remarks</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody class=""  style="text-align:center" >


                @foreach (var item1 in Model.QuotationDetails)
                {
                    <tr id="quodtr_@i">
                        @*<td id="row_@i">@(i+1)</td>*@
                        <td>
                            @Html.TextBoxFor(modelitem => item1.GroupName, new { @id = "QtxtGroupName_" + @i, @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(modelitem => item1.ItemDescription, new { @id = "QtxtDescription_" + @i,@class="form-control" })
                                                    
                            @Html.HiddenFor(modelitem => item1.Deleted, new { @id = "QDeleted_" + @i })
                        </td>
                        <td>
                            @Html.DropDownListFor(modelitem => item1.UOM, new SelectList(ViewBag.Unit, "ItemUnitID", "UnitName"), "Select Unit", new { @id = "QUOM_" + @i, @class = "form-select", @style = "font-size:11px;width:100px", @value = item1.UOM })
                        </td>
                        <td style="text-align:right">
                            @Html.TextBoxFor(modelitem => item1.Quantity, new { @id = "QtxtQty_" + @i, @class = "textright form-control", @onchange = "calculatevalue(" + @i + ")" })
                        </td>
                        <td style="text-align:right">
                            @Html.TextBoxFor(modelitem => item1.Rate, new { @id = "QtxtRate_" + @i, @class = "textright form-control", @onchange = "calculatevalue(" + @i + ")" })
                        </td>
                        <td style="text-align:right">
                            @Html.TextBoxFor(modelitem => item1.Value, new { @id = "QtxtValue_" + @i, @class = "textright form-control", @onchange = "calculatevalue3(" + @i + ")" })
                        </td>
                        <td>
                            @Html.TextBoxFor(modelitem => item1.Remarks, new { @id = "QtxtRemarks_" + @i, @class = "form-control" })
                        </td>
                        <td>
                            <a onclick="DeleteQuotationDetailEntry('@i')" href="javascript:void(0);" title="Delete Quotation Entry" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>

        </table>

    </div>

