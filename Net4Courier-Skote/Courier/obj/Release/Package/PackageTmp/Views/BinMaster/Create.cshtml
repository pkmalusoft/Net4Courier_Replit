@model Net4Courier.Models.tblBinMaster

@{
    //ViewBag.Title = "Create";
    ViewBag.pTitle = "Bin Master";
    ViewBag.PageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 450px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#PackageType").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/Package/GetPackageType',
                    datatype: "json",
                    data: {
                        term: request.term
                    },
                    success: function (data) {
                        response($.map(data, function (val, item) {
                            return {
                                label: val.PackageType,
                                value: val.PackageType
                            }
                        }))
                    }
                })
            },
            minLength: -1,
            autoFocus: false,
            focus: function (event, ui) {

                $('#PackageType').val(ui.item.label);

            },
            select: function (e, i) {
                debugger;
                e.preventDefault();
                $('#PackageType').val(i.item.value);
            },

        });


        $("#btnsave").click(function () {
            var type = $("#PackageType").val();
            var move = $("#PackageName").val();

            if (type == "") {
                $("#validations").show();
                return false;
            }
            else if (move == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });


    });
</script>



@using (Html.BeginForm("Create", "BinMaster", FormMethod.Post, new { @class = "needs-validation ", @novalidate = "novalidate",@id = "customerInvoice" }))
{
    @Html.ValidationSummary(true)
    <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>

        <div class="searchdiv sm-width">
            <div class="row no-margin">
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.BinID)
                    <label class="headinglabel required">Bin Name</label>
                    @Html.TextBoxFor(model => model.BinName, new { @class = "form-control txttarget", @required = "required" })
                    @Html.ValidationMessageFor(model => model.BinName)
                </div>
            </div>
            <div class="row no-margin">
                <div class="col-md-12">
                    <label class="headinglabel required">Short Name</label>
                    @Html.TextBoxFor(model => model.ShortCode, new { @class = "form-control txttarget", @required = "required" })
                    @Html.ValidationMessageFor(model => model.ShortCode)
                </div>
            </div>

            <div class="row no-margin" style="padding-top:10px">
                <div class="col-md-12 btn-right">

                    <input type="submit" value="Save" class="btn btn-success btnwidth" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "BinMaster", new { id = 0 })' class="btn btn-dark btnwidth" data-toggle="tooltip" data-placement="right" title="">Cancel</a>



                </div>
            </div>
        </div>
    </fieldset>
}

