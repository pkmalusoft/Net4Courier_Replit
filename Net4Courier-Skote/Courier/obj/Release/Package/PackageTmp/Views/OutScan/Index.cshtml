@model Net4Courier.Models.OutScanSearch
@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "OutScan";
    ViewBag.pageTitle = "Delivery Run Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";    
    var isadd = true;
    var ismodify = true;
    var isdelete = true;
    var isprint = true;
    var isview = true;
    string path = "/OutScan/Index";
    if (Convert.ToInt32(Session["UserRoleID"]) > 1)
    {
        Net4Courier.Models.SourceMastersModel obj = new Net4Courier.Models.SourceMastersModel();
        isadd = obj.GetAddpermission(Convert.ToInt32(Session["UserRoleID"]), path);
        ismodify = obj.GetModifypermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isdelete = obj.GetDeletepermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isprint = obj.GetPrintpermission(Convert.ToInt32(Session["UserRoleID"]), path);
        isview = obj.GetViewpermission(Convert.ToInt32(Session["UserRoleID"]), path);

    }
}

<style>
    tfoot {
        display: table-header-group;
    }
</style>


<script type="text/javascript">
    $(document).ready(function () {
        var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate.split('-')[1] + '-' + startdate.split('-')[0] + '-' + startdate.split('-')[2]);
        var ed = new Date(enddate.split('-')[1] + '-' + enddate.split('-')[0] + '-' + enddate.split('-')[2]);

       
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style="width:100%" />');
        });


        var table = $('#dataTables-example').DataTable({ "aaSorting": [], "sPaginationType": "full_numbers", "aaSorting": [] });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
        document.addEventListener('keydown', function (event) {
            if (event.code == 'KeyN' && (event.altKey)) { //ADD AWB
                window.location = '/OutScan/CreateBulk';
                //$('#btnCreateNew').trigger('click');
            }
        });
       

    });


</script>


@using (@Html.BeginForm("Index", "OutScan", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="headinglabel">From Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="FromDate" id="FromDate" value="@Model.FromDate.ToShortDateString()"
                                       placeholder="Pick a From Date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="headinglabel">To Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="ToDate" id="ToDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.ToDate.ToShortDateString()"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                   <div class="mb-2">
                        <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top">
                            <i class="bx bx-revision mt-1" style="font-size: 21px;"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end btn_top">
                    <div class="mb-2">
                        @if (@Net4Courier.Models.CommonFunctions.CheckCreateEntryValid() == false || (!isadd))
                        {
                            <a href='/OutScan/Create' class="btn btn-primary btnwidth" id="btnCreateNew" disabled><i class="mdi mdi-plus me-1"></i> New OutScan</a>
                        }
                        else
                        {

                            <a href='/OutScan/Create' class="btn btn-primary btnwidth" id="btnCreateNew"><i class="mdi mdi-plus me-1"></i> New OutScan</a>
                            <a href='/OutScan/CreateBulk' class="btn btn-primary btnwidth" id="btnCreateNew1"><i class="mdi mdi-plus me-1"></i> New OutScan Bulk</a>
                            <input type="button" value="Download Template" class="btn btn-primary btn_template ms-2" onClick="window.location.href='/Template/OutScanTemplate.csv'">
                            @*@Html.ActionLink("Create Bulk", "CreateBulk", null, new { @class = "btn btn-primary btn_template",@style="margin-left:10px;" })*@

                        }
                    </div>
                </div>
        </div>
    </div>
 </div>
    <div class="clearfix"></div>

        <!-- @if(TempData["SuccessMsg"] != null)
        {           
            <script type="text/javascript">
                 $(document).ready(function () {
                     //$.notify("@TempData["SuccessMsg"]", "success");
                      });
            </script>
        } -->
        <div class="card">
            <div class="card-body" style="overflow-x:scroll">
                <table class="table table-bordered dt-responsive nowrap w-100 dataTable no-footer dtr-inline collapsed" id="datatable" style="width:100%">
                    <thead class="table-light">
                        <tr>

                            <th>DRS No.</th>
                            <th>Date</th>
                            <th>Courier</th>
                            <th>Vehicle</th>
                            <th>COD</th>
                            <th>VAT Amount</th>
                            <th>MC Amount</th>
                            <th>Total AWB</th>
                            <th>API Success</th>
                            <th>API Failed</th>
                            <th>Action</th>
                        </tr>
                    </thead>
              
                    <tbody>
                        @foreach (var item in @Model.DRSDetails)
                        {
                        <tr>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.DRSNo)
                            </td>

                            <td>
                                @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.DRSDate)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CourierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vehicle)
                            </td>
                            <td style="text-align:right">

                                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.TotalCourierCharge, "2")
                            </td>
                            <td style="text-align:right">
                                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.TotalVAT, "2")
                            </td>
                            <td style="text-align:right">
                                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.TotalMaterialCost, "2")
                            </td>
                            <td style="text-align:right">
                                @item.TotalAWB
                            </td>
                            <td style="text-align:right">
                                @item.APISuccess
                            </td>
                            <td style="text-align:right">
                                @item.APIFailed
                            </td>
                            <td>
                                <div class="d-flex gap-3">
                                    <a href="@Url.Action("Create", new { id = item.DRSID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>

                                    @if (isprint)
                                    {
                                        <a target="_blank" href="@Url.Action("DRSRunSheet", "OutScan", new { id = item.DRSID })" class="text-secondary"><i class="mdi mdi-printer font-size-18"></i></a>

                                    }
                                    @if (isdelete)
                                    {
                                        <a href="#" class="text-danger" onclick="Delete(ID=@item.DRSID)"><i class="mdi mdi-delete font-size-18"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
    
}

