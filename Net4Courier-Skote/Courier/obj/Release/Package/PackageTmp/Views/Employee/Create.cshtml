@model Net4Courier.Models.EmployeeMaster

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1 class="headingfont">Employee</h1>

</section>

<section class="content">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        

        <div class="row no-margin"> 
         <div class="col-md-3">
                          <label class="headinglabel">Employeecode</label>
                        @Html.TextBoxFor(model => model.EmployeeCode, "Select", new { @class = "form-control" })
                 </div>

       

       <div class="col-md-3">
            <label class="headinglabel">Employeecode</label>
           @Html.TextBoxFor(model => model.EmployeeName, "Select", new { @class = "form-control" })
        </div>

       <div class="col-md-3">
            <label class="headinglabel">Address1</label>
           @Html.TextBoxFor(model => model.Address1, "Select", new { @class = "form-control" })
        </div>

        <div class="col-md-3">
            <label class="headinglabel">Address2</label>
           @Html.TextBoxFor(model => model.Address2, "Select", new { @class = "form-control" })
        </div>

       <div class="col-md-3" style="padding-top:25px">
            <label class="headinglabel">Address3</label>
           @Html.TextBoxFor(model => model.Address3, "Select", new { @class = "form-control" })
        </div>

       <div class="col-md-3">
            <label class="headinglabel">Phone</label>
           @Html.TextBoxFor(model => model.Phone, "Select", new { @class = "form-control" })
        </div>

       <div class="col-md-3">
            <label class="headinglabel">Fax</label>
           @Html.TextBoxFor(model => model.Fax, "Select", new { @class = "form-control" })
        </div>

        <div class="col-md-3">
            <label class="headinglabel">Mobile No</label>
           @Html.TextBoxFor(model => model.Mobile, "Select", new { @class = "form-control" })
        </div>

        <div class="col-md-3" style="padding-top:25px">
                          <label class="headinglabel">CountryID</label>
           @Html.DropDownListFor(model => model.CountryID, new SelectList(@ViewBag.country, "CountryID","country"), "Select", new { @class = "form-control" });

          
                 </div>

        <div class="col-md-3">
                          <label class="headinglabel">Designation</label>
           @Html.DropDownListFor(model => model.DesignationID, new SelectList(@ViewBag.designation, "DesignationID","designation"), "Select", new { @class = "form-control" });

          
                 </div>

         <div class="col-md-3">
            <label class="headinglabel">Join Date</label>
           @Html.TextBoxFor(model => model.JoinDate, "Select", new { @class = "form-control text-right" })
        </div>

         <div class="col-md-3">
                          <label class="headinglabel">Depot</label>
           @Html.DropDownListFor(model => model.Depot, new SelectList(@ViewBag.depot, "Depot","depot"), "Select", new { @class = "form-control" });

          
                 </div>

          <div class="col-md-3" style="padding-top:25px">
            <label class="headinglabel">Email</label>
           @Html.TextBoxFor(model => model.Email, "Select", new { @class = "form-control" })
        </div>

             <div class="col-md-3">
            <label class="headinglabel">Password</label>
           @Html.TextBoxFor(model => model.Password, "Select", new { @class = "form-control" })
        </div>

             <div class="col-md-3">
            <label class="headinglabel">Mobile Device ID</label>
           @Html.TextBoxFor(model => model.MobileDeviceID, "Select", new { @class = "form-control" })
        </div>

             <div class="col-md-3">
            <label class="headinglabel">Mobile Device Password</label>
           @Html.TextBoxFor(model => model.MobileDevicePwd, "Select", new { @class = "form-control" })
        </div>
</div>
        

       <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                           
                              <input type="submit" value="Create" class="btn btn-primary btnwidth" />
                               
                          
                        </div>
                    </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

