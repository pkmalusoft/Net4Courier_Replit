@model Net4Courier.Models.ZoneCategoryVM

@{
    ViewBag.Title = "Edit";
      ViewBag.pTitle = "Zone Category";
        ViewBag.pageTitle = "Zone Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script type="text/javascript">
    $(document).ready(function(){
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#ZoneCategory").focus();

        $("#btnsave").click(function () {
            var zone = $("#ZoneCategory").val();


            if (zone == "") {
                $("#validations").show();
                return false;
            }

            else {
                $("#validations").hide();
                return true;
            }
        });

    });
</script>



@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
       <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        <div class="card">
        <div class="card-body">

       <div class="row"> 
         <div class="col-md-3">
         <div class="mb-2">
             @Html.HiddenFor(model=>model.ZoneCategoryID)
                          <label class="col-form-label required">Zone Category</label>
                 @Html.TextBoxFor(model => model.ZoneCategory, new {@class="form-control txttarget" })
            @Html.ValidationMessageFor(model => model.ZoneCategory)
                     </div>
                 </div>
               <div class="col-md-3 btn_top">
               <div class="mb-2 mt-2">
                    @Html.CheckBox("StatusBaseCategory", new { @name = "StatusBaseCategory" }) &nbsp
                    <label class="col-form-label" style="padding:10px">Status Base Category</label>
                    @Html.ValidationMessageFor(model => model.StatusBaseCategory)
                </div>
                </div>

     
                </div>

                        <div class="col-md-12 text-md-end">
                           
                              <input type="submit" value="Update" class="btn btn-success" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "ZoneCategory", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                               
                          
                        </div>
            </div>  </div>
    </fieldset>
}
