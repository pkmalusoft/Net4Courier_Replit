@model IEnumerable<Net4Courier.Models.CityVM>

@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "City";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tfoot {
        display: table-header-group;
    }

    .dataTables_filter {
        display: none;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" class="form-control-sm" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>
 
<div class="card">
    <div class="card-body">
        <div class="col-md-12 mb-3 text-md-end">
            <a class="btn btn-primary waves-effect waves-light text-md-end" href="/CityMaster/Create"><i class="mdi mdi-plus me-1"></i> New City</a>
        </div>

        <section class="content">
            @if (TempData["SuccessMsg"] != null)
            {
                @* <div class="alert alert-success alert-dismissable" role="alert" id="divMsgHeader" ng-show="SuccessAlert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4><i class="icon fa fa-check"></i>Alert!</h4>
                        <div id="divFinalMsg">@TempData["SuccessMsg"]</div>
                    </div>*@
                <script type="text/javascript">
                 $(document).ready(function () {
                     $.notify("@TempData["SuccessMsg"]", "success");
                      });
                </script>
            }
            <div class="table-responsive tblbackground" style="padding:15px">
                <table class="table table-responsive table-bordered tblfont" id="dataTables-example">

                    <thead>
                        <tr>

                            <th>
                                @Html.Label("City Name")
                            </th>
                            <th>
                                @Html.Label("City Code")
                            </th>
                            <th>
                                @Html.Label("Country Name")
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>

                            <th>
                                @Html.Label("City Name")
                            </th>
                            <th class="right_text">
                                @Html.Label("City Code")
                            </th>
                            <th>
                                @Html.Label("Country Name")
                            </th>

                            <th style="display:none"></th>
                        </tr>
                    </tfoot>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>

                            <td class="text-right">
                                @Html.DisplayFor(modelItem => item.CityCode)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @*    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) *@
                                <a href="@Url.Action("Edit", new { id = item.CityID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>|
                                <a href="#" onclick="Delete(ID=@item.CityID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
      </div>
    </div>

        <script type="text/javascript">
            function Delete(ID) {
                if (confirm("Are you sure, You want to Delete City?")) {
                    window.location.href = "/CityMaster/DeleteConfirmed/?id=" + ID;
                }
            }
        </script>
