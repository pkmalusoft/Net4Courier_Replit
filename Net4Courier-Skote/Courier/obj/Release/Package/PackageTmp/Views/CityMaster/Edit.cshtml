@model Net4Courier.Models.CityVM

@{
    ViewBag.Title = "Modify";
    ViewBag.pTitle = "City";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 600px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#City").focus();
      
        $("#btnsave").click(function () {
            var city = $("#City").val();
            var citycode = $("#CityCode").val();
            var cou = $("#CountryID option:selected").val();



            if (city == "") {
                $("#validations").show();
                return false;
            }
            else if (citycode == "") {
                $("#validations").show();
                return false;
            }
            else if (cou == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });



    });
</script>
 
<div class="searchdiv">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        

      
       <div class="row no-margin"> 
               
         <div class="col-md-12">
                          <label class="headinglabel required">City</label>
             @Html.HiddenFor(model=>model.CityID)
                 @Html.TextBoxFor(model => model.City,new { @class = "form-control txttarget" })
            @Html.ValidationMessageFor(model => model.City)
                     
                 </div>

              <div class="col-md-12">
                          <label class="headinglabel required ">City Code</label>
                 @Html.TextBoxFor(model => model.CityCode,new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CityCode)
                     
                 </div> 

        <div class="col-md-12">
                          <label class="headinglabel required ">Country</label>
              @Html.DropDownListFor(model => model.CountryID, new SelectList(@ViewBag.country, "CountryID","CountryName"), "Select", new { @class = "form-select" })
     
                 </div>

      <div class="col-md-12 checkboxdesign" style="padding-top:22px">
                         
                 @Html.CheckBoxFor(model => model.IsHub)&nbsp;&nbsp; <label class="headinglabel">Is Hub</label>
            @Html.ValidationMessageFor(model => model.IsHub)
                     
                 </div>
           </div>

        <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12 text-md-end">
                           
                           <input type="submit" value="Update" class="btn btn-success btnwidth" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "CityMaster", new { id = 0 })' class="btn btn-secondary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                               
                          
                        </div>
            </div>
    </fieldset>
}

