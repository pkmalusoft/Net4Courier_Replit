@model Net4Courier.Models.YearEndProcessSearch
    @{
        var i = 0;
    }
    
<script type="text/javascript">

  
    $(document).ready(function () {

     
     

        var table1 = $('#AcYearEndCustomer1').DataTable({ "paging": false, "sPaginationType": "simple" });
      
     
    });
</script>
 
<div class="row no-margin" >
    <div class="col-md-12">
        <table class="table table-responsive table-bordered" id="AcYearEndCustomer1" style="background-color:white">
            <thead>
                <tr>
                  
                    <th>Invoice No.</th>
                    <th>Invoice Date</th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody id="details">

                @foreach (var item in Model.CustomerInvDetails)
                {
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.CustomerInvDetails[0].CustomerName, new { @id = "hdncustomerName_" + @i})

                        @item.InvoiceNo
                    </td>
                <td>
                    @item.InvoiceDate
                </td>

                    @if (item.Amount < 0)
                    {
                        <td style="text-align:right;color:red">
                            (    @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.Amount, "2") )
                        </td>
                    }
                    else
                    {
                        <td style="text-align:right;color:blue">
                            @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Amount, "2")
                        </td>
                    }
                
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


