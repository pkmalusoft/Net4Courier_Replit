<div class="row no-margin" style="padding-top:30px">
    <div class="col-md-12">
        <table class="table table-responsive table-bordered" id="AccdataTablesPL" style="background-color:white">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Voucher No</th>
                    <th>Account Name</th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Status
                    </th>                    
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.PLDetails)
                {
                    if (@item.VoucherNo == "1" || @item.VoucherNo=="YE-01")
                    {
                        <tr >@*style="background-color:#f6e89e"*@
                            <td id="row_@i">@(i + 1)</td>
                            <td>
                                @item.VoucherNo
                            </td>
                            <td>
                                @item.AcHeadName
                            </td>

                            @if (item.Amount < 0)
                            {
                                <td style="text-align:right;color:red">
                                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.Amount, "2")
                                </td>
                            }
                            else
                            {
                                <td style="text-align:right;color:blue">
                                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Amount, "2")
                                </td>
                            }

                            <td>
                                @item.updatestatus
                            </td>

                        </tr>
                    }
                    else if (item.VoucherNo == "2" || item.VoucherNo=="YE-02")
                    {
                        <tr >
                            <td id="row_@i">@(i + 1)</td>
                            <td>
                                @item.VoucherNo
                            </td>
                            <td>
                                @item.AcHeadName
                            </td>

                            @if (item.Amount < 0)
                            {
                                <td style="text-align:right;color:red">
                                      @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.Amount, "2") 
                                </td>
                            }
                            else
                            {
                                <td style="text-align:right;color:blue">
                                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Amount, "2")
                                </td>
                            }

                            <td>
                                @item.updatestatus
                            </td>

                        </tr>
                    }
                    else
                    {
                        <tr style="background-color:#77bafb">
                            <td id="row_@i">@(i + 1) </td>
                            <td>
                                @item.VoucherNo
                            </td>
                            <td>
                                @item.AcHeadName
                            </td>

                            @if (item.Amount < 0)
                            {
                                <td style="text-align:right">
                                    (@Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.Amount, "2"))
                                </td>
                            }
                            else
                            {
                                <td style="text-align:right">
                                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Amount, "2")
                                </td>
                            }

                            <td>
                                @item.updatestatus
                            </td>
                        </tr>
                    }
                    i++;
                }
            </tbody>
        </table>
