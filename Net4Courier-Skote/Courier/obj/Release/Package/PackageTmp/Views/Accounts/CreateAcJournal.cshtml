@model Net4Courier.Models.AcJournalMasterVoucherVM

@{
    //ViewBag.Title = "Create";
    ViewBag.pTitle ="Journal Book Entry";
    ViewBag.pageTitle = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .newrow .form-control {
        border: 2px solid darkseagreen;
    }

    .newrow .form-select {
        border: 2px solid darkseagreen;
    }
</style>



    @using (Html.BeginForm("CreateAcJournal", "Accounts", FormMethod.Post, new { @class = "needs-validation ", @novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "needs-validation" })
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-7 text-left ">
                        <h4 class="card-title mb-2 mt-1"> <span id="h2jobcode" style="color:blue" class="ml-10">@Model.VoucherNo</span><span id="h2error" style="margin-left:15px;color:red" class="ml-10"></span></h4>

                        @{
                            if (ViewBag.SaveEnable == false)
                            {
                                <span class="text-danger bold"><i class="mdi mdi-lock"></i> @ViewBag.Message</span>
                            }
                        }
                    </div>
                    <div class="col-md-5">


                        <div class="text-right ">
                            @{
                                if (ViewBag.SaveEnable == false)
                                {
                                    <button type="submit" id="btnSaveAccounts" class="btn btn-success" disabled>Save</button>
                                }
                                else
                                {
                                    <button type="submit" id="btnSaveAccounts" class="btn btn-success">Save</button>
                                }
                            }



                            <a href='@Url.Action("IndexAcJournal", "Accounts")' class="btn btn-secondary">Cancel</a>


                        </div><!-- /btn-group -->
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-2">
                        <div class="mb-2">
                            <label class="col-form-label" id="VoucherNumber">Voucher Number</label>
                            @*<input type="text" name="voucher_number" readonly class="form-control" />*@
                            @Html.TextBoxFor(model => model.VoucherNo, new { @class = "form-control", @readonly = "readonly" })
                            @Html.HiddenFor(model => model.AcJournalID)
                        </div>
                    </div>
                    <div class="col-md-2">

                        <div class="mb-2">
                            <label class="col-form-label">Date</label>
                            <div class="docs-datepicker">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.TransDate, String.Format("{0:dd-MM-yyyy}", this.Model.TransDate), new { @class = "form-control", @required = "required" })

                                    <button type="button"
                                            class="btn btn-secondary docs-datepicker-trigger"
                                            disabled>
                                        <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                    </button>
                                </div>
                                <div class="docs-datepicker-container"></div>
                            </div>
                            <div class="invalid-feedback">Select Date</div>

                        </div>

                    </div>

                    <div class="col-md-2">
                        <div class="mb-2">
                            <label class="col-form-label" id="lblReference">Reference </label>
                            @Html.TextBoxFor(model => model.Refference, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-2">
                            <label class="col-form-label" id="lblremark">Remarks/Narration</label>
                            @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", @rows = "1",@required="required" })
                            <div class="invalid-feedback">Enter Remarks</div>


                        </div>
                    </div>

                </div>

   </div>

                </div>







                <div class="card">

<div class="card-body">
   

    
    <table class="table align-middle table-nowrap" id="datatable1">

        <thead >
            <tr style="background-color:#dedede">

                <th>Chart Of Accounts</th>
                <th>Debit Amount <span id="spandebittotal" style="color:blue;float:right"></span></th>
                <th>Credit Amount<span id="spancredittotal" style="color:red;float:right"></span></th>
                <th>
                    Remark
                </th>
                <th>Action</th>
            </tr>
            <tr class="newrow">
                <th>
                    @Html.HiddenFor(model => model.acHeadId, new { Value = "0", id = "SelectedAcHead" })
                    <input type="text" id="AcHead" value="" class="form-select" autocomplete="off" />
                </th>
                <th> @Html.TextBoxFor(model => model.DebitAmount, new { @class = "form-control textright", @onchange = "checkamount(1)" })
                </th>
                <th>  @Html.TextBoxFor(model => model.CreditAmount, new { @class = "form-control textright", @onchange = "checkamount(2)" })</th>
                <th>
                    @Html.TextAreaFor(model => model.AcRemark, new { @class = "form-control", @id = "AcRemark", @rows = "1" })
                </th>
                <th> <button type="button" class="" index="1" id="btnAdd" title="Add New" style="margin-top: 0px !important; border: none; background: none"><i class="bx bxs-add-to-queue text-success" style="font-size: 33px;"></i></button></th>
        </tr>
        
        </thead>
        <tbody id="details">
        </tbody>
        <tfoot>
            <tr class="newrow">
                <th>

                    Balance
                </th>

                <th><span id="spandebittotal1" style="color:blue;float:right"></span></th>
                <th><span id="spancredittotal1" style="color:red;float:right"></span></th>
                <th>

                </th>
                <th>

                </th>
            </tr>

        </tfoot>


    </table>
                    @Html.HiddenFor(model => model.AcJournalDetail)
                </div>
            </div>
      



    }

 

@section scripts{

    <script src="~/Scripts/JS/AccountBookJournalCreate.js?v=1"></script>
   
}
