<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-md-12 text-md-end">
                <a disabled class="btn btn-primary waves-effect waves-light" href="/Accounts/CreateAcHead?id=0"><i class="mdi mdi-plus me-1"></i>  New Chart of Account</a>
            </div>
        </div>
        <div class="row mt-3">
            <table id="datatable" class="table display table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                            @Html.Label("Chart of Accounts")
                        </th>
                        <th>
                            @Html.Label("Chart Of Account Code")
                        </th>
                        <th>Tax %</th>
                        <th>
                            @Html.Label("Group")
                        </th>
                        <th>
                            @Html.Label("AccountType")
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>



                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.AcHead)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AcHeadKey)
                            </td>
                            <td style="text-align:right">
                                @if (@item.TaxPercent != 0 && @item.TaxPercent != null)
                                {@Html.DisplayFor(modelItem => item.TaxPercent)
                            }
                            </td>
                            <td class="tdtarget">
                                @Html.DisplayFor(modelItem => item.AcGroup)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountType)
                            </td>
                            <td>
                                <div class="input-group gap-3">
                                    @if (ismodify)
                                    {
                                        <a class="text-success" href="@Url.Action("CreateAcHead", new { id = item.AcHeadID })"><i class="mdi mdi-pencil font-size-18"></i></a>
                                    }
                                    @*<a href="@Url.Action("Delete", new { id = item.CountryID })"><i class="fa fa-times"></i></a>*@
                                    @if (isdelete)
                                    {
                                        <a href="javascript:void(0)" class="text-danger" onclick="DeleteHead(@item.AcHeadID)"><i class="mdi mdi-delete font-size-18"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>

<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete Account Head?")) {
            window.location.href = "/Accounts/DeleteAcHead/?id=" + ID;
        }
    }
</script>

<script src="~/Scripts/JS/Chartofaccount.js"></script>