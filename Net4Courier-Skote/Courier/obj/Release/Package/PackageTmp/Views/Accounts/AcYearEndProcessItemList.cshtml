            <tbody>

                @foreach (var item in Model.OpeningDetails)
                {
                <tr>
                    <td id="row_@i">@(i+1)</td>
                    <td>
                        @item.Particulars
                    </td>


                    @if (item.OpeningBalance < 0)
                    {
                        <td style="text-align:right;color:red">
                            @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.OpeningBalance, "2")
                        </td>
                    }
                    else
                    {
                        <td style="text-align:right;color:blue">
                            @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.OpeningBalance, "2")
                        </td>
                    }
                    @if (item.Transactions < 0)
                    {
                        <td style="text-align:right;color:red"> @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.Transactions, "2")  </td>
                    }
                    else
                    {
                        <td style="text-align:right;color:blue">  @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Transactions, "2")  </td>
                    }
                    @if (item.ClosingBalance < 0)
                    {
                        <td style="text-align:right;color:red">  @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.ClosingBalance, "2")  </td>
                    }
                    else
                    {
                        <td style="text-align:right;color:blue">  @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.ClosingBalance, "2")  </td>
                    }

                  
                      @if (item.NextYearOpening < 0)
                        {
                        <td style="text-align:right;color:red">  @Net4Courier.Models.CommonFunctions.GetFormatNumber(-1 * @item.NextYearOpening, "2")</td>
                    }
                    else
                    {
                      <td style="text-align:right;color:blue">  @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.NextYearOpening, "2")</td> 
                    }

                       



                    </tr>
                    i++;
                }
