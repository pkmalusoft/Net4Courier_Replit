@using (Html.BeginForm("Index", "AWBBookIssue", FormMethod.Post, new { @id = "booksearch" }))
{
    <div class="card">
        <div class="card-body">
        <div class="row">
                   <div class="col-md-2">
                    <div class="mb-2">
                        <label class="headinglabel">From Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="FromDate" id="FromDate" value="@Convert.ToDateTime(@Model.FromDate).ToShortDateString()"
                                       placeholder="Pick a From Date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="headinglabel">To Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="ToDate" id="ToDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Convert.ToDateTime(@Model.ToDate).ToShortDateString()"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
            <div class="col-md-2">
                <label class="headinglabel">Search AWB No.</label>
                @Html.TextBoxFor(model => model.DocumentNo, new { @class = "form-control ora_border" })
            </div>


             <div class="col-md-2">
                 <div class="mb-2">
                     <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top">
                         <i class="bx bx-search mt-1" style="font-size: 21px;"></i>
                     </button>
                 </div>
                </div>
            <div class="col-md-4 text-md-end btn_top">
                    @if (@Net4Courier.Models.CommonFunctions.CheckCreateEntryValid() == false || !isadd)
                    {
                         <a class="btn btn-primary waves-effect waves-light text-md-end" href="/AWBBookIssue/Create" disabled><i class="mdi mdi-plus me-1" title="Create Not allowed in the previous financial year"></i> New Air waybill Issue</a>
                    }
                    else
                    {
                         <a class="btn btn-primary waves-effect waves-light text-md-end" href="/AWBBookIssue/Create"><i class="mdi mdi-plus me-1"></i> New Air waybill Issue</a>
                    }
            </div>
        </div>
    </div>
    </div>
}

        @if (TempData["SuccessMsg"] != null)
        {

            <script type="text/javascript">
                 $(document).ready(function () {
                     $.notify("@TempData["SuccessMsg"]", "success");
                 });
            </script>
        }

        <div class="card">
        <div class="card-body">
            <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                    <thead class="table-light">
                    <tr>
                        <th>
                            @Html.Label("DocumentNo")
                        </th>
                        <th>
                            @Html.Label("Trans Date")
                        </th>
                        <th>
                            @Html.Label("BookNo")
                        </th>
                        <th>
                            @Html.Label("Employee Name")
                        </th>
                        <th>
                            @Html.Label("AWB No From")
                        </th>
                        <th>
                            @Html.Label("AWB No To")
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
               

                @foreach (var item in Model.Details)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Documentno)
                        </td>
                        <td>
                            @Net4Courier.Models.CommonFunctions.GetShortDateFormat(@item.TransDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.AWBNOFrom)*@
                            @item.AWBNOFrom
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AWBNOTo)
                        </td>
                        <td>
                            <a href="@Url.Action("Create", new { id = item.AWBBOOKIssueID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a> 

                            <a href="#" onclick="Delete(ID=@item.AWBBOOKIssueID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
   </div>

