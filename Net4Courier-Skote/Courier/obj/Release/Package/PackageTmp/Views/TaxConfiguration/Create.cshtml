@model Net4Courier.Models.TaxConfigurationVM

@{
    ViewBag.Title = "Create";
       ViewBag.pTitle = "Empost Fees Setup";
    ViewBag.pageTitle = "Empost Fees Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        


        $("#MinimumRate").blur(function () {
            if ($("#MinimumRate").val() == "") {
                $("#MinimumRate").val(0);
            }
            var x = parseFloat($(this).val());
            $(this).val(x.toFixed(2));
        });
        $("#TaxPercentage").blur(function () {
            if ($("#TaxPercentage").val() == "") {
                $("#TaxPercentage").val(0);
            }
            var x = parseFloat($(this).val());
            $(this).val(x.toFixed(2));
        });



        $("#btnsave").click(function () {
            var effect = $("#EffectFromDate").val();
            var mode = $("#MoveMentID option:selected").val();
            var des = $("#CourierDescriptionID option:selected").val();
            var achead = $("#SaleHeadID option:selected").val();
            var min = $("#MinimumRate").val();
            var tax = $("#TaxPercentage").val();


            if ($("#MinimumRate").val() == "") {
                $("#MinimumRate").val(0);
            }
            if (effect == "") {
                $("#validations").show();
                $("#EffectFromDate").focus();
                return false;
            }
            else if (mode == "") {
                $("#validations").show();
                $("#MoveMentID").focus();
                return false;
            }
            else if (des == "") {
                $("#validations").show();
                $("#CourierDescriptionID").focus();
                return false;

            }
            else if (achead == "") {
                $("#validations").show();
                $("#SaleHeadID").focus();
                return false;
            }
            //else if (min == "") {
            //    $("#validations").show();
            //    return false;
            //}
            else if (tax == "") {
                $("#validations").show();
                $("#TaxPercentage").focus();
                return false;
            }
           
            else {
                $("#validations").hide();
                return true;
            }
        });

     


    });
</script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#EffectFromDate").datepicker({ dateFormat: 'dd-M-yy', changeYear: true, changeMonth: true });
      
    });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        <div class="card">
<div class="card-body">
       <div class="row"> 
        
              <div class="col-md-3">
              <div class="mb-2">
                          <label class="col-form-label required">Effective Date</label>
                 @Html.TextBoxFor(model => model.EffectFromDate,new { @class = "form-control text-right",@autocomplete="off" })
            @Html.ValidationMessageFor(model => model.EffectFromDate)
                      </div>   
                 </div> 
                 

         <div class="col-md-3">
          <div class="mb-2">
                          <label class="col-form-label required">Courier Mode</label>
               @Html.DropDownListFor(model=>model.MoveMentID,new SelectList(@ViewBag.couriermode,"MovementID","MovementType"),"Select",new{@class="form-select"})
                  </div>   
                 </div>

     <div class="col-md-3">
      <div class="mb-2">
                          <label class="col-form-label required">Parcel Type</label>
               @Html.DropDownListFor(model=>model.ParcelTypeId,new SelectList(@ViewBag.parceltypes, "ID","ParcelType1"),"Select",new{@class="form-select"})
                     
                 </div>
           </div>
        
              <div class="col-md-3">
               <div class="mb-2">
                          <label class="col-form-label required">Sales Head</label>
              @Html.DropDownListFor(model=>model.SaleHeadID,new SelectList(@ViewBag.achead,"AcHeadID","AcHead1"),"Select",new{@class="form-select"})
                     
                 </div> 
                 </div>

         <div class="col-md-3">
          <div class="mb-2">
                          <label class="col-form-label">Minimum Rate</label>
               
                        @Html.TextBoxFor(model => model.MinimumRate,new { @class = "form-control textright" })
            @Html.ValidationMessageFor(model => model.MinimumRate)
                 </div>
                 </div>

     <div class="col-md-3">
      <div class="mb-2">
                          <label class="col-form-label required">Tax%</label>
               
                        @Html.TextBoxFor(model => model.TaxPercentage,new { @class = "form-control textright" })
            @Html.ValidationMessageFor(model => model.TaxPercentage)
                 </div>
                 </div>

                        <div class="col-md-6 text-md-end btn_top">
                           <div class="mb-2 mt-2">
                              <input type="submit" value="Save" class="btn btn-success" id="btnsave" />&nbsp;&nbsp;
                            <a href='@Url.Action("Index", "TaxConfiguration", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title=" ">Cancel</a>
                           </div>    
                          
                        </div>
            </div>
 </div></div>
        
           </fieldset>
}








