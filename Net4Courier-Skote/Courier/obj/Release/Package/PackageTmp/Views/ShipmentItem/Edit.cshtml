@model Net4Courier.Models.ShipmentItemVM

@{
    ViewBag.Title = "Edit";
    ViewBag.pTitle = "Shipment Item";
    ViewBag.pageTitle = "Shipment Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Item").focus();

        $("#btnsave").click(function () {
            var item = $("#Item").val();

            if (item == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
       
    });
</script>



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
         <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
    <div class="card">
    <div class="card-body">
        <div class="row"> 
            <div class="col-md-4">
                @Html.HiddenFor(model=>model.ItemID)
                <label class="col-form-label required">Shipment Item</label>
                @Html.TextBoxFor(model => model.Item, new {@class="form-control txttarget" })
                @Html.ValidationMessageFor(model => model.Item)   
            </div>
            <div class="col-md-12 text-md-end">           
                <input type="submit" value="Update" class="btn btn-success" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "ShipmentItem", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
            </div>
        </div>
    </div>
    </div>
    </fieldset>
  
}

