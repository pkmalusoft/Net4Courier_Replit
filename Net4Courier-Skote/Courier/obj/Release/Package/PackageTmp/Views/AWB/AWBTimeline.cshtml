<script>
    function ShowStatusModal() {

        if ($('#InScanID').val() == '')
            $('#InScanID').val(0);
        var InScanId = $('#InScanID').val();
        var InboundShipmentID = $('#InboundShipmentID').val();
        if (parseFloat(InScanId) > 0) {
            $.ajax({
                type: "POST",
                url: "/AWB/GetActiveStatus",
                datatype: "Json",
                data: { 'InScanID': InScanId },
                success: function (response) {
                    debugger;

                    var _detail = response.data;
                    console.log(_detail);
                    $('#CourierStatusId').val(_detail.CourierStatusID);
                    $('#StatusTypeId').val(_detail.StatusTypeID);
                    $('#ChangeCourierStatusId').val(_detail.CourierStatusID).trigger('change');
                    $('#ChangeStatusTypeId').val(_detail.StatusTypeID).trigger('change');
                    $('#lblCurrentStatus').html(_detail.CourierStatusText);
                    $('#StatusModal').modal('show');

                }
            });
        }
        if (parseFloat(InboundShipmentID) > 0) {
            $.ajax({
                type: "POST",
                url: "/AWB/GetCoAWBActiveStatus",
                datatype: "Json",
                data: { 'ShipmentID': InboundShipmentID },
                success: function (response) {
                    debugger;

                    var _detail = response.data;
                    console.log(_detail);
                    $('#CourierStatusId').val(_detail.CourierStatusID);
                    $('#StatusTypeId').val(_detail.StatusTypeID);
                    $('#ChangeCourierStatusId').val(_detail.CourierStatusID).trigger('change');
                    $('#ChangeStatusTypeId').val(_detail.StatusTypeID).trigger('change');
                    $('#lblCurrentStatus').html(_detail.CourierStatusText);
                    $('#StatusModal').modal('show');

                }
            });
        }
        else {
            $.notify("Enter any of AWB No. to Continue!");
            $('#AWBNo').focus();
            return false;
        }
    }

    function CheckStatus() {

        if ($('#AWBNo').val() != '') {
            $.ajax({
                type: "POST",
                url: "/AWB/RecheckAWBStatus",
                datatype: "Json",
                data: {
                    'AWBNo': $('#AWBNo').val()
                },
                success: function (response) {
                    debugger;
                    if (response.status == 'ok') {
                        Swal.fire('Status Checking', 'AWB Status Rechecked!', 'success');

                        setTimeout(function () {
                            $('#btnsubmit').trigger('click');
                        }, 200);

                    }
                    else {
                        Swal.fire('Status Checking', response.message, 'error');
                    }

                }
            });
        }
        
    }
    function GetHAWB() {
        if ($('#txtFwdNo').val() != '') {

            $.ajax({
                type: "POST",
                url: "/AWB/GetHAWB",
                datatype: "Json",
                data: { ForwardingAgentNO: $('#txtFwdNo').val() },
                success: function (response) {
                    if (response.status == "OK") {
                        $('#AWBNo').val(response.awbno);
                        $('#btnsubmit').trigger('click');
                    }
                    else {
                        $('#AWBNo').val('');
                        Swal.fire('Data Validation', 'HAWB not found!','error');
                    }
                }
            });
        }
    }
    $(document).ready(function () {


        $('#btnsavestatus').click(function () {

            var statusobj = {
                InScanID: $('#InScanID').val(),
                InboundShipmentID:$('#InboundShipmentID').val(),
                StatusTypeID: $('#ChangeStatusTypeId').val(),
                CourierStatusID: $('#ChangeCourierStatusId').val(),
                CourierStatusText: '' //$("#ChangeCourierStatusId option:selected").text()
            };

            $.ajax({
                type: "POST",
                url: "/AWB/AddSaveStatus",
                datatype: "Json",
                data: statusobj,
                success: function (response) {

                    if (response.status == "ok") {
                        var statustype = $("#ChangeStatusTypeId option:selected").text();
                        var statustext = $("#ChangeCourierStatusId option:selected").text();
                        $('#StatusTypeId').val($('#ChangeStatusTypeId').val());
                        $('#CourierStatusId').val($('#ChangeCourierStatusId').val());
                        $('#h4statustype').html(statustype);
                        $('#h4courierstatus').html(response.statustext);
                        $('#StatusModal').modal('hide');
                        Swal.fire("Change Status!", "Status Updated Successfully", "success");
                        window.location.reload(); 
                       // $('#btnsearch').trigger('click');

                    }
                    else {
                        $('#StatusModal').modal('hide');
                        Swal.fire("Change Status!", response.message, "warning");
                  

                    }



                }
            });


        });
        $('#btnsearch').click(function () {
            if ($('#AWBNo').val() == '' && $('#ParentAWBNo').val() == '') {
                $.notify("Enter any of AWB No. to Track!");
                $('#AWBNo').focus();
                return false;
            }
        });

         $("#AWBNo").change(function () {
            if ('@_alphanum' == 'True') {
                var txt = $('#AWBNo').val().trim();
                $('#AWBNo').val(txt.replace(/[^\d,]/g, ''));
            }
         });

        //$('#AWBNo').blur(function () {
        //    $('#AWBNo').focus();
        //});

        document.addEventListener('keydown', function (event) {

            if (event.code == 'KeyR' && (event.altKey)) {
                $('#btnsearch').trigger('click');
            }
            if (event.code == 'KeyS' && (event.altKey)) {
                var url = $('#btnedit').attr('href');
                window.open(url, '_blank').focus();
            }
            //if (event.code == 'KeyL' && (event.altKey)) {
            //    $('#lblconsignorLocation').attr('popup', 'open');
            //    $('#lblconsigneeLocation').attr('popup', '');
            //    showLocationEntry();
            //}
            //if (event.code == 'KeyN' && (event.altKey)) {
            //    $('#lblconsignorLocation').attr('popup', '');
            //    $('#lblconsigneeLocation').attr('popup', 'open');
            //    showLocationEntry();
            //}
        });

        $('#AWBNo').focus();

    });

</script>
