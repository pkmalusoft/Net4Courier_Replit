@model Net4Courier.Models.ZoneNameVM
@{
     ViewBag.Title = "Create";
        ViewBag.pTitle = "Zone Name";
        ViewBag.pageTitle = "Zone Name";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#ZoneName").focus();

        $("#StatusZone").change(function () {
            if ($(this).val() == "D") {
                $("#ZoneType").val("Domestic");
            }
            else if ($(this).val() == "I") {
                $("#ZoneType").val("International");
            }

        });

        $("#btnsave").click(function () {
            var name = $("#ZoneName").val();
            var type = $("#StatusZone option:selected").val();

            if (name == "") {
                $("#validations").show();
                return false;
            }
          else  if (type == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });

    });

</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
     <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        
<div class="card">
<div class="card-body">
       <div class="row"> 
         <div class="col-md-3">
         <div class="mb-2">
                          <label class="col-form-label required">Zone Name</label>
                 @Html.TextBoxFor(model => model.ZoneName, new {@class="form-control txttarget" })
            @Html.ValidationMessageFor(model => model.ZoneName)
                     
                 </div>
</div>
         <div class="col-md-3">
         <div class="mb-2">
             <label class="col-form-label required">Zone Type</label>
             @Html.DropDownList("StatusZone", ViewBag.zonetype as SelectList, "Select", new { @class = "form-control" })
             @*@Html.DropDownListFor(model => model.ZoneType, new SelectList(@ViewBag.Movement, "MovementType", "MovementType"), "Select", new { @class = "form-select", @required = "true" })*@
             @Html.HiddenFor(model => model.ZoneType)
         </div>
         </div>

     
                </div>

   
                        <div class="col-md-12 text-md-end">
                         <input type="submit" value="Save" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "ZoneName", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                               
                        </div>
            </div>
                  </div>
           
    </fieldset>
}
