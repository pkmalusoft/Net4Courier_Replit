                                    @Html.EditorFor(model => model.TotalAWB, new { htmlAttributes = new { @class = "form-control", @min = 1, @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.TotalAWB, "", new { @class = "text-danger" })
