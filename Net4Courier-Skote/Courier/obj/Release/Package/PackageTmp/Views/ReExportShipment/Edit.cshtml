<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Edit", "exportshipment", FormMethod.Post, new { @id = "exportshipment" }))
        {
            @Html.AntiForgeryToken()
            <h4>Edit Export Shipment</h4>
            <hr />
