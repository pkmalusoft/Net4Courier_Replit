@model Net4Courier.Models.PickUpDelAttemptReason

@{
    ViewBag.Title = "Create";
          ViewBag.pTitle = "PickUp Delivery Attempt Reason";
    ViewBag.pageTitle = "PickUp Delivery Attempt Reason";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function(){
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Reason").focus();

        $("#btnsave").click(function () {
            var type = $("#Reason").val();

            if (type == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
      <fieldset>
<div class="card">
<div class="card-body">
          <div class="row">
              <div class="col-md-4">
              <div class="mb-2">
                  <label class="col-form-label required">Reason</label>
                  @Html.HiddenFor(mode => mode.ID)
                  @Html.TextBoxFor(model => model.Reason, new { @class = "form-control txttarget" })
                  @Html.ValidationMessageFor(model => model.Reason)
              </div>
              </div>
         
              <div class="col-md-12 text-md-end">
                  @if (@Model.ID == 0)
                  {
                      <input type="submit" value="Save" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                  }
                  else
                  {
                      <input type="submit" value="Update" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                  }

                  <a href='@Url.Action("Index", "PickDelReason", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="">Cancel</a>

              </div>
          </div>

      </fieldset>
}
    </section>


 