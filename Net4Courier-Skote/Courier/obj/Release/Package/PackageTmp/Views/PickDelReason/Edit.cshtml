@model Net4Courier.Models.TypeOfGoodsVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#TypeOfGood").focus();

        $("#btnsave").click(function () {
            var type = $("#TypeOfGood").val();

            if (type == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
    });
</script>
<section class="container-fluid over_hide">
    <h1 class="titles_head">Type Of Good</h1>

</section>

<section class="content">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
   
          <div class="row no-margin"> 
               
             <div class="col-md-3">
                 @Html.HiddenFor(model=>model.TypeOfGoodID)
                          <label class="headinglabel required">Type Of Good</label>

                   @Html.TextBoxFor(model => model.TypeOfGood, new {@class="form-control txttarget" })
            @Html.ValidationMessageFor(model => model.TypeOfGood)
                     
                 </div>
      

       </div>
         <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                           
                           <input type="submit" value="Update" class="btn btn-primary btnwidth" id="btnsave"/>&nbsp;&nbsp;<a href='@Url.Action("Index", "TypeOfGood", new { id = 0 })' class="btn btn-primary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                        </div>
                    </div>


    </fieldset>
}


