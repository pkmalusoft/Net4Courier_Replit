@model Net4Courier.Models.BRMaster
@{
    
    ViewBag.pTitle = "Bank Reconc Master";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $("#RoleName").focus();
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#btnsave").click(function () {
            if ($("#RoleName").val() == "") {
                $("#alert").show();
                return false;

            }
            else {
                $("#alert").hide();
                return true;
            }
        });
    });
</script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
    <fieldset>
        

<div class="card">
<div class="card-body">
        <div class="row">
             <div class="col-md-3">
                 <div class="mb-2">
                     <label class="required col-form-label">Type</label>
                     @Html.HiddenFor(model => model.BRCode, new { @class = "form-control txttarget" })
                     @Html.DropDownList("Type", new List<SelectListItem>
                           {
                               new SelectListItem{ Text="Add", Value = "Add" },
                               new SelectListItem{ Text="Less", Value = "Less" },
                               new SelectListItem{ Text="Cleared", Value = "Cleared" },
                               new SelectListItem{ Text="Cheque Returned", Value = "Cheque Returned" }

                            }, "Select", new { @class = "form-select" })


                     @Html.ValidationMessageFor(model => model.Type)
                 </div>
             </div>
             <div class="col-md-3">
                 <div class="mb-2">
                     <label class="col-form-label required">Comment</label>
                     @Html.TextBoxFor(model => model.Comment, new { @class = "form-control txttarget" })

                     @Html.ValidationMessageFor(model => model.Type)

                 </div>
       
        </div>
           <div class="col-md-12 text-md-end btn_top">
            <input type="submit" value="Save" class="btn btn-success" id="btnsave" />

                   
           <a href='@Url.Action("Index", "BankReconcMaster", new { id = 0 })' class="btn btn-dark btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
               </div>
                </div>
                
        </div>   </div>
    </fieldset>
}

 



