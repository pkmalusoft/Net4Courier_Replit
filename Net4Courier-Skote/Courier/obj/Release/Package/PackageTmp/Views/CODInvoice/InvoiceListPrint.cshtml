
@model Net4Courier.Models.CustomerInvoiceVM
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
}
<table class="table table-bordered table-responsive" id="details" style="background-color: white">

    <thead style="font-weight:bold">

    </thead>
    <tbody class="input-table">
        <tr>
            <td colspan="3">
                @*<img src="@ViewBag.ImageData">*@
                <img src="http://highway.net4courier.com/Content/ClientLogo/ClientLogo.png" style="width:100%;height:100%;" />

            </td>
            <td colspan="9" style="text-align:center">
                <h1 style="color:maroon">TAX INVOICE </h1>

            </td>
        </tr>
        <tr>
            <td colspan="5"></td>
            <td colspan="7">
            </td>
        </tr>
        <tr>
            <td colspan="5">
                <b>@Model.CustomerName</b>
            </td>
            <td colspan="7" style="text-align:center">
                <b>ACCOUNT NO. :@Model.CustomerCode</b>
            </td>
        </tr>
        <tr>
            <td colspan="5">
                VAT TRN: @Model.VATTRN
            </td>
            <td colspan="7" style="text-align:center">
                <b> INVOICE DATE : @Net4Courier.Models.CommonFunctions.GetShortDateFormat(@Model.InvoiceDate)</b>
            </td>
        </tr>
        <tr>
            <td colspan="5">
                Attn: Account Payable
            </td>
            <td colspan="7" style="text-align:center">
                <b> INVOICE NO. : @Model.CustomerInvoiceNo </b>
            </td>

        </tr>
        <tr>
            <td colspan="5">
                @Model.Address1
            </td>
            <td colspan="7" style="text-align:center">
                <b> TRN No. : @Model.BranchTRN </b>
            </td>
        </tr>
        <tr>
            <td colspan="5">
                @Model.CustomerCountryName
            </td>
            <td colspan="7">
            </td>
        </tr>
        <tr>
            <td colspan="5">
                @Model.CustomerCityName
                @Model.Pincode
            </td>
            <td colspan="7">
            </td>
        </tr>
        <tr>
            <td colspan="5">
                Phone No:@Model.CustomerPhoneNo
            </td>
            <td colspan="7">
            </td>
        </tr>
        <tr></tr>
        <tr>
        </tr>
        <tr></tr>
        <tr>
            <td width="3%" style="text-align: center;font-weight:bold">
                <b>Sl.No.</b>
            </td>
            <td width="8%" style="text-align: center;font-weight:bold"><b>Date</b></td>
            <td width="8%" style="text-align: center;font-weight:bold"><b>AWB No.</b></td>
            <td width="12%" style="text-align: center;font-weight:bold"><b>Shipper</b></td>
            <td width="12%" style="text-align: center;font-weight:bold"><b>Origin</b></td>
            <td width="14%" style="text-align: center;font-weight:bold"><b>Consignee</b></td>
            <td style="text-align: center;font-weight:bold"><b>Destination</b></td>
            <td style="text-align: center;font-weight:bold"><b>Weight</b></td>
            <td style="text-align: center;font-weight:bold"><b>Pieces</b></td>
            <td style="text-align: center;font-weight:bold"><b>Amount</b></td>
            <td style="text-align: center;font-weight:bold"><b>VAT</b></td>
            <td style="text-align: center;font-weight:bold"><b>Total</b></td>
        </tr>
        @foreach (var item in Model.CustomerInvoiceDetailsVM)
        {
            <tr>
                <td>
                    @(i + 1)


                </td>
                <td>
                    @Net4Courier.Models.CommonFunctions.GetShortDateFormat(@item.AWBDateTime)
                </td>
                <td>
                    @item.AWBNo
                </td>
                <td>
                    @item.Consignor
                </td>
                <td>
                    @item.Origin
                </td>
                <td>
                    @item.ConsigneeName
                </td>
                <td>
                    @item.ConsigneeCityName
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Weight, "3")
                </td>
                <td>
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Pieces, "3")
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.CourierCharge, _decimal)
                </td>
                @*<td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.OtherCharge, _decimal)
                </td>*@
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.VATAmount, _decimal)
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.NetValue, _decimal)
                </td>

                @*<td style="width:101px">
                    <a onclick="deleteAWBItem('@i')" href="javascript:void(0);"><i class="fa fa-times"></i></a>
                </td>*@
            </tr>
            i++;
        }
        <tr>
        </tr>
        <tr class="charegRow">
            <td colspan="8"></td>
            <td><b>Total</b></td>
            <td style="text-align:right"><b>@Net4Courier.Models.CommonFunctions.GetFormatNumber(Model.TotalCharges, "2")</b></td>
            <td style="text-align:right"><b>@Net4Courier.Models.CommonFunctions.GetFormatNumber(Model.CustomerInvoiceTax, "2")</b></td>
            <td class="text-right"><b>@Net4Courier.Models.CommonFunctions.GetFormatNumber(Model.InvoiceTotal, "2")</b></td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                <b> @Model.InvoiceFooter1</b>
            </td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                @Model.InvoiceFooter2
            </td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                @Model.InvoiceFooter3
            </td>

        </tr>
        <tr class="charegRow">
            <td colspan="12">
                @Model.InvoiceFooter4
            </td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                <b> @Model.InvoiceFooter5</b>
            </td>
        </tr>
        <tr class="charegRow" >
            <td colspan="12"  >
                <span style="border:1px solid black!important;padding:10px"><b>@Model.BankDetail1</b></span> 
            </td>
        </tr>
        @*<tr class="charegRow">
            <td colspan="12">
                <b>@Model.BankDetail2</b>
            </td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                <b>@Model.BankDetail3</b>
            </td>
        </tr>
        <tr class="charegRow">
            <td colspan="12">
                <b>@Model.BankDetail4</b>
            </td>
        </tr>*@
</table>

      
   
        