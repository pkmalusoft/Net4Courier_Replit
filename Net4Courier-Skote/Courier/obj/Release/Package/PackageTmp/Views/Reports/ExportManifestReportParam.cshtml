@model Net4Courier.Models.ExportManifestReportParam
@{
    Layout = null;
}
 
<style>
    .datefilters{
        border:none;
        padding: 40px 10px;
        border-radius: 5px;
    }
</style>
<script>
    //$(function () {
    //    $('#FromDate').datetimepicker({ format: 'DD-MM-YYYY' });

    //});

    //$(function () {
    //    $('#ToDate').datetimepicker({ format: 'DD-MM-YYYY' });

    //});

    $(document).ready(function () {
         
        $("#ManifestId").html('<option value=0>Select</option>');
        $('#FAgentID').change(function () {
            $.ajax({
                url: '/Reports/GetExportManifestList',
                datatype: "json",
                data: {
                    FAgentId: $('#FAgentID').val()
                },
                success: function (response) {
                    debugger;
                    console.log(response);
                    var data = response;
                    $("#ManifestId").html('');
                    var selectHTML = "<option value=0>Select</option>";
                    $("#ManifestId").html(selectHTML);
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].ManifestNumber);
                        selectHTML += "<option value='" + data[i].ID + "'>" + data[i].ManifestNumber + "</option>";

                    }
                    $("#ManifestId").html(selectHTML);

                }
            })

        })

    });
</script>
@using (Html.BeginForm("ExportManifestReportParam", "Reports", FormMethod.Post, new { @id = "reportparam" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 report_pad">
                <div class="col-md-12">
                  
                    <div class="mb-2">
                        <label class="col-form-label">From Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="FromDate" id="FromDate" value="@Model.FromDate.ToShortDateString()"
                                       placeholder="Pick a From Date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.SortBy)
                    @Html.HiddenFor(model => model.ReportType)
                    <div class="mb-2">
                        <label class="col-form-label">To Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="ToDate" id="ToDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.ToDate.ToShortDateString()"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button" class="btn btn-secondary docs-datepicker-trigger" disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="headinglabel required">Agent Name</label>
                    @Html.DropDownListFor(model => model.FAgentID, new SelectList(@ViewBag.FwdAgentId, "SupplierID", "SupplierName"), "Select", new { @class = "form-control" })
                </div>
                <div class="col-md-12">
                    <label class="headinglabel required">Manifest </label>
                    @Html.DropDownListFor(model => model.ManifestId, new SelectList(@ViewBag.FwdAgentId, "SupplierID", "SupplierName"), "Select", new { @class = "form-control" })
                </div>


                <div class="col-md-10">
                    <label class="headinglabel  required">Output</label>
                    @Html.DropDownList("Output", new List<SelectListItem>
                    {
                        new SelectListItem{ Text="PDF",Value = "PDF" },
                        new SelectListItem{ Text="EXCEL", Value = "EXCEL" },
                        new SelectListItem{ Text="WORD", Value = "WORD" },

                     }, "Select", new { @class = "form-control blue_border", @value = "PDF", @required = "true" })
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top" id="btnreport">
                        <i class="bx bx-search mt-1" style="font-size: 21px;"></i>
                    </button>
                    
                </div>
            </div>



            

           
            <div class="col-md-9" id="divreportframe">
                @{ Html.RenderAction("ReportFrame", "Reports");}
            </div>
        </div>
        
    </div>
</div>
                    }



