@model Net4Courier.Models.AWBReportParam
@{
    Layout = null;
}

 
<style>
    #movementid + .btn-group button, #movementid + .btn-group {
        display: block;
        width: 100%;
    }
    .datefilters{
        border:1px solid #ccc;
        padding: 20px 5px;
        border-radius: 5px;
    }
</style>
<script>
    //$(function () {
    //    $('#FromDate').datetimepicker({ format: 'DD-MM-YYYY' });

    //});

    //$(function () {
    //    $('#ToDate').datetimepicker({ format: 'DD-MM-YYYY' });

    //});

    $(document).ready(function () {
         var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate.split('-')[1] + '-' + startdate.split('-')[0] + '-' + startdate.split('-')[2]);
        var ed = new Date(enddate.split('-')[1] + '-' + enddate.split('-')[0] + '-' + enddate.split('-')[2]);


        $.ajax({
            type: "Get",
            url: "/CustomerInvoice/GetCourierType",
            datatype: "Json",
            success: function (response) {

                var data = response.data;
                $('#movementid').empty();

                $.each(data, function (index, value) {

                    var o_st = $("#MovementId").val().split(",");
                    var flag = 0;
                    for (var j = 0; j < o_st.length; j++) {

                        if (o_st[j] == value.MovementID) {
                            flag = 1;
                            break;
                        }

                    }

                    if (flag == 1) {
                        $('#movementid').append('<option value="' + value.MovementID + '" selected=true>' + value.MovementType + '</option>');
                    }
                    else {
                        $('#movementid').append('<option value="' + value.MovementID + '">' + value.MovementType + '</option>');
                    }

                });


                $('#movementid').select2();
                //$('#movementid').multiselect({
                //    nonSelectedText: 'Select',
                //    enableClickableOptGroups: true,
                //    enableCollapsibleOptGroups: true,
                //    enableFiltering: false,
                //    includeSelectAllOption: true,
                //    selectAllValue: 'multiselect-all'
                //});

            }
        });
        if ($('#ReportType').val() == 'Summary')
        {
                $('#chkRegisterSummary').prop('checked', true)
        }
        else if ($('#ReportType').val() == 'Date' || $('#ReportType').val()== '' || $('#ReportType').val()==null) {
            $('#chkRegister').prop('checked', true)
        }
        else {
            $('#chkRegisterGroup').prop('checked', true);
            $('#GroupBy').val($('#ReportType').val()).trigger('change');
        }

        if ($('#SortBy').val() == '' || $('#SortBy').val() == 'Date Wise' || $('#SortBy').val()==null) {
            $("#chkDateWise").prop('checked', 'checked');
            $('#SortBy').val('Date Wise');
        }
        else {
            $("#chkAWBWise").prop('checked', 'checked');
            $('#SortBy').val('AWB Wise');
        }
        $("#chkRegister").click(function () {
            if ($("#chkRegister").is(':checked')) {
                $("#ReportType").val('Date');
                $("#GroupBy").val('');
                $('#chkRegisterSummary').prop('checked', false);
                $('#chkRegisterGroup').prop('checked', false);
            }
            else {
                $("#GroupBy").val('');
                $("#ReportType").val('');

            }
        });

        $("#chkRegisterSummary").click(function () {
            if ($("#chkRegisterSummary").is(':checked')) {
                $("#ReportType").val('Summary');
                $("#GroupBy").val('');
                $('#chkRegister').prop('checked', false);
                $('#chkRegisterGroup').prop('checked', false);
            }
            else {
                $('#chkRegister').prop('checked', true);
                $("#GroupBy").val('');
                $("#ReportType").val('Date');

            }
        });
        $("#chkRegisterGroup").click(function () {
            if ($("#chkRegisterGroup").is(':checked')) {
                $("#ReportType").val('Date');
                $("#GroupBy").val($('#GroupBy').val());
                $('#chkRegister').prop('checked', false);
                $('#chkRegisterSummary').prop('checked', false);
            }
            else {
                $('#chkRegister').prop('checked', true);
                $("#GroupBy").val('');
                $("#ReportType").val('Date');

            }
        });

        $("#chkDateWise").click(function () {
            if ($("#chkDateWise").is(':checked')) {
                $("#chkAWBWise").removeAttr('checked');
                $('#SortBy').val('Date Wise');
            }
            else {
                $("#chkAWBWise").prop('checked','checked');
                $('#SortBy').val('AWB Wise');
            }
        });

        $("#chkAWBWise").click(function () {
            if ($("#chkAWBWise").is(':checked')) {
                $("#chkDateWise").removeAttr('checked');
                $('#SortBy').val('AWB Wise');
            }
            else {
                $("#chkDateWise").prop('checked', 'checked');
                $('#SortBy').val('Date Wise');
            }
        });
        $('#GroupBy').change(function () {
            if ($('#GroupBy').val() == '') {
                $("#chkRegister").prop('checked', 'checked');
                $('#ReportType').val('Date');
            }
            else {
                $("#chkRegister").removeAttr('checked');
                $('#ReportType').val($('#GroupBy').val());
            }

        });

        setTimeout(function () {
            var fromdate = $('#FromDate').attr('fromdate');
            var sd1 = fromdate.split('/')[1] + '-' + fromdate.split('/')[0] + '-' + fromdate.split('/')[2];            
            $('#FromDate').val(sd1).trigger('change');
        }, 100)

        setTimeout(function () {
            var todate = $('#ToDate').attr('todate'); 
            var ed1 = todate.split('/')[1] + '-' + todate.split('/')[0] + '-' + todate.split('/')[2];       
            $('#ToDate').val(ed1).trigger('change');
        }, 100);
        $("#btnreport").click(function () {



            if ($("#chkRegisterGroup").is(':checked')) {

                if ($('#GroupBy').val() == '') {
                    alert('Select Group By or !');
                    return false;
                }

                debugger;

            }

         });

    });
</script>
