@model Net4Courier.Models.AWBListSearch
@{
    Layout = null;
    int i = 1;
    var _decimal = @Session["Decimal"].ToString();
}



<table border="1" style="margin-top: 15px; " class="table table-bordered table-responsive" id="DetailsTable">
    @*<table class="table table-responsive table-bordered tblfont" role="grid" style="min-width: 100%" >*@

    @*<table class="table" style="min-width: 100%">*@
    <thead class="input-table">
        <tr>
            <th width="20px">
                S.No
            </th>
            <th>
                AWB Date
            </th>
            <th width="100px">
                AWB No
            </th>
            <th>
                Parcel Type
            </th>
            <th>
                Movement Type
            </th>
            <th>
                Consignor
            </th>
            <th>
                Consignee
            </th>
            <th>
                Origin
            </th>
            <th>
                Destination
            </th>
            <th>
                Weight
            </th>
            <th>
                Piecs
            </th>
            <th>
                Courier Charge
            </th>
            <th>
                Other Charge
            </th>
            <th>
                Tax Amount
            </th>
            <th>
                Collected By
            </th>
        </tr>
    </thead>
    <tbody class="input-table" id="listbody">
        @foreach (var item in Model.Details)
        {

        <tr>
            <td>
                @i
            </td>
            <td style="text-align:right">
                @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.InScanDate)
            </td>
            <td>
                @item.HAWBNo
            </td>
            <td>
                @item.ParcelType
            </td>
            <td>@item.MovementType</td>
            <td>@item.shippername</td>
            <td>@item.consigneename</td>
            <td>@item.origin</td>
            <td>@item.destination</td>
            <td style="text-align:right">
                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.Weight, "3")
            </td>
            <td style="text-align:right">
                @item.Pieces
            </td>
            <td style="text-align:right">
                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.CourierCharge, "2")
            </td>
            <td style="text-align:right">
                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.OtherCharge, "2")
            </td>
            <td style="text-align:right">
                @Net4Courier.Models.CommonFunctions.GetDecimalFormat(@item.TaxAmount, "2")
            </td>
            <td>@item.CourierStatus</td>
        </tr>
            i++;

        }
    </tbody>
</table>




