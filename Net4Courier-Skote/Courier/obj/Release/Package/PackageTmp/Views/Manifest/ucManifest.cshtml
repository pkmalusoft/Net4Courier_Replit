@model IEnumerable<Net4Courier.Models.ManifestVM>

@{
    Layout = null;    
}

<style>
    .back {
        background-color: red;
        color: white;
    }

     tfoot {
    display: table-header-group;
    }

    td
    {
        padding-left:5px;
        padding-right:5px;
    }

    .trfoot td
    {
        border-top:;
        border-bottom:none;
    }
</style>

@*<script src="~/Content/jQuery-2.1.3.min.js"></script>*@

 



 
        <div class="col-md-12" style="background-color: white; padding-top: 20px;padding-bottom:20px">
               @foreach (var group in Model.GroupBy(item => item.Shipper))
               {

                   int cnt = 0;
                   var x1 = group.FirstOrDefault();
                   <table border="1" style="width:100%;border-collapse:collapse">
                       <tr style="border:solid 1px black">
                           <td colspan="9"><h3>Manifest</h3></td>
                       </tr>
                       <tr style="height:35px">
                           <td style="border:none"><b>Shipper</b></td>
                           <td style="border:none">@x1.Shipper</td>
                           <td style="border:none"></td>
                           <td style="border:none"></td>
                           <td style="border:none"><b>Courier</b></td>
                           <td style="border:none">@x1.courier</td>
                           <td style="border:none"></td>
                           <td style="border:none"><b>Date</b></td>
                           <td style="border:none">@Net4Courier.Models.CommonFunctions.GetShortDateFormat(@x1.date)</td>
                       </tr>

                       <tr style="height:35px;font-weight:bold">
                           <td>SL.No</td>
                           <td>AWB No</td>
                           <td>Consignee</td>
                           <td>Destination</td>
                           <td>No. Of Pieces</td>
                           <td>Weight</td>
                           <td>Type</td>
                           <td>Contents</td>
                           <td>Remarks</td>
                       </tr>

                       
                     @foreach (var item in group)
                     {
                         <tr style="height:35px;">
                             <td style="text-align:right">@{
                         cnt = cnt + 1;
                             }
                                 @cnt
                             </td>
                             <td style="text-align:right">@item.awbno</td>
                             <td>@item.consignee</td>
                             <td>@item.destination</td>
                             <td style="text-align:right">@item.noofpcs</td>
                             <td>@item.weight</td>
                             <td>@item.type</td>
                             <td>@item.contents</td>
                             <td>@item.remark</td>
                         </tr>
                     }

                       <tr style="height:35px">
                           <td colspan="9" style="border-color:white"></td>
                       </tr>

                       <tr style="height:35px;" class="trfoot">
                           <td style="border-color:white">
                           </td>
                           <td colspan="2" style="border-color:white">
                               Prepared By
                           </td>
                           <td style="border-color:white"></td>
                           <td colspan="2" style="border-color:white">Checked By</td>
                           <td style="border-color:white"></td>
                           <td colspan="2" style="border-color:white">Pickup Courier</td>
                       </tr>

                         <tr style="height:60px;">
                           <td style="border-top-color:white;">
                           </td>
                           <td colspan="2">
                              
                           </td>
                           <td style="border-top-color:white;"></td>
                           <td colspan="2"></td>
                           <td style="border-top-color:white;"></td>
                           <td colspan="2"></td>
                       </tr>

                      

                      
                   </table><br /><br />
               }

        </div>

