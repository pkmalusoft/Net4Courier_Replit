@model Net4Courier.Models.VehicleBinMasterVM

@{
    //ViewBag.Title = "Create";
    ViewBag.pTitle = "Vehicle Bin Master";
    ViewBag.PageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 650px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>
@section styles{
    <link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

}
<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

    
       

        $("#btnsave").click(function () {
            var type = $("#PackageType").val();
            var move = $("#PackageName").val();

            if (type == "") {
                $("#validations").show();
                return false;
            }
            else if (move == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
        setTimeout(function () {
        $.ajax({
            url: '/BinMaster/GetBinList',
            datatype: "json",
            data: {
                term: ''
            },
            success: function (data) {
                debugger;
                var selectedvehicle = [];
                if ($('#BinIds').val() != '') {
                    selectedvehicle = $('#BinIds').val().split(',');
                }
                $.each(data, function (val, item) {

                    var label = item.BinName;
                    var value = item.BinID;
                    var selected = false;
                    $.each(selectedvehicle, function (val1, item1) {
                        if (item.BinID == item1)
                            selected = true;
                    });
                    if (selected == true) {
                        var html = '<option selected value="' + value + '">' + label + '</option>';
                        $('#SelectedValues').append(html);
                    }
                    else {
                        var html = '<option value="' + value + '">' + label + '</option>';
                        $('#SelectedValues').append(html);
                    }
                })

                $("#SelectedValues").select2();
            }
        })
        }, 400)

        if ($('#VehicleBinID').val() > 0) {
            $('#VehicleId').attr('readonly', 'readonly');
        }

    });
</script>



@using (Html.BeginForm("Create", "VehicleBinMaster", FormMethod.Post, new { @class = "needs-validation ", @novalidate = "novalidate", @id = "customerInvoice" }))
{
    @Html.ValidationSummary(true)
    <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>

        <div class="searchdiv sm-width">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-2">
                        @Html.HiddenFor(model => model.VehicleBinID)

                        @Html.HiddenFor(model => model.BinIds)
                        <label class="headinglabel required">Vehicle Name</label>
                        @Html.DropDownListFor(model => model.VehicleId, new SelectList(@ViewBag.Vehicles, "VehicleID", "VehicleDescription"), "Select", new { @class = "form-select", @required = "required" })

                        @*@Html.TextBoxFor(model => model.VehicleName, new { @class = "form-control txttarget", @required = "required" })*@
                        @Html.ValidationMessageFor(model => model.VehicleName)
                    </div>
                </div>
                </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-2">
                        <label class="headinglabel required">Bin Detail</label>
                        <select id="SelectedValues" readonly name="SelectedValues" class="select2 form-control select2-multiple" required
                                multiple="multiple" data-placeholder="Choose ...">
                        </select>
                        @Html.ValidationMessageFor(model => model.BinDetail)
                    </div>
                </div>
                </div>

            <div class="row" style="padding-top:10px">
                <div class="col-md-12 text-md-end ">

                    <input type="submit" value="Save" class="btn btn-success btnwidth" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "VehicleBinMaster", new { id = 0 })' class="btn btn-dark btnwidth" data-toggle="tooltip" data-placement="right" title="">Cancel</a>



                </div>
            </div>
        </div>
    </fieldset>
}

@section scripts{

    <script src="~/assets/libs/select2/js/select2.min.js"></script>
    

}
