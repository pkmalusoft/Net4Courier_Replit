        <div class="row no-margin">
             <div class="col-md-3">
                    <label class="headinglabel required">Menu</label>
                 @Html.HiddenFor(model=>model.MenuAccessID)
                    @Html.DropDownListFor(model => model.MenuID, new SelectList(@ViewBag.Menu, "MenuID", "Title"), "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MenuID)

                </div>

            <div class="col-md-3">
                    <label class="headinglabel required">Role</label>
                    @Html.DropDownListFor(model => model.RoleId, new SelectList(@ViewBag.Roles, "RoleID", "RoleName"), "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RoleId)

                </div>

        </div>
     
       <div class="row no-margin" style="padding-top:10px">
           <div class="col-md-12 btn-right">
            <input type="submit" value="Update" class="btn btn-success btnwidth" id="btnsave" />
            
    

        &nbsp; &nbsp;
                   
                                    <a href='@Url.Action("Index", "MenuRole", new { id = 0 })' class="btn btn-dark btnwidth">Cancel</a>
