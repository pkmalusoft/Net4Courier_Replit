
@model IEnumerable<Net4Courier.Models.QuickAWBVM>
@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "AWB Status";
    ViewBag.pageTitle = "Operations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tfoot {
        display: table-header-group;
    }

    .dataTables_filter {
        display: none;
    }
</style>
<script type="text/javascript">

    function processtatus() {
        $.ajax({
            type: "GET",
            url: "/AWBStatus/RefresAWBStatus",
            datatype: "Json",
            success: function (response) {
                window.location.reload();
            }
        });
    }
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            if (title!='')
            $(this).html('<input type="text" class="form-control-sm" />');
        });
        

        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers"});

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });
</script>

<div class="clearfix"></div>
@using (Html.BeginForm("Index", "AWBStatus", FormMethod.Post, new { @id = "booksearch" }))
{
    <div class="card">
        <div class="card-body">
            <div class="col-md-12 mb-3 text-md-end">
                <input type="button" value="Refresh Status" class="btn btn-success" onclick="processtatus()">
                
            </div>
            <table class="table table-bordered mb-0" id="dataTables-example" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            AWB No.
                        </th>
                        <th>
                            AWB Date
                        </th>
                        <th>
                            Payment Mode
                        </th>
                        <th>
                            Total Charge
                        </th>
                        <th>
                            Courier Status
                        </th>
                        <th>DRR No.</th>

                        <th>Notes</th>
                    </tr>
                </thead>              

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HAWBNo)
                        </td>
                        <td>
                            @item.TransactionDate.ToString()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.paymentmode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.totalCharge)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourierStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DRRNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.remarks)
                        </td>                        
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}

<script type="text/javascript">
     

        function Delete(ID) {
            Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
                function (t) {
                    if (t.value) {
                        $.ajax({
                            type: "POST",
                            url: '/CustomerRatesMaster/DeleteConfirmed',
                            datatype: "html",
                            data: {
                                'id': ID
                            },
                            success: function (response) {
                                if (response.Status == "OK") {
                                    Swal.fire("Delete Status!", response.Message, "success");
                                    window.location.reload();
                                }
                                else {
                                    Swal.fire("Delete Status!", response.Message, "error");
                                }
                            }
                        });
                    }
                });
        }
</script>

