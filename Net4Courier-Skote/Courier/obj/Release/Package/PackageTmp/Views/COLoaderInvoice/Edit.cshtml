                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btnwidth float-right" })

                </div>
            </div>
          

            <div class="row no-margin" style="padding-top: 10px">
                <div class="col-md-12">
                    @{Html.RenderPartial("InvoiceList", Model);}
                </div>
            </div>
         

        }
    </fieldset>
