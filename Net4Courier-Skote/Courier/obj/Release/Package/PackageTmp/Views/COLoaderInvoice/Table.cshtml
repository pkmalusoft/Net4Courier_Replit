@model Net4Courier.Models.AgentInvoiceSearch
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();  
    }

@*<thead>
    <tr>
        <th>
            Invoice No.
        </th>
        <th>
            Invoice Date
        </th>
        <th>
            Customer Name
        </th>
        <th>Invoice Amount</th>
        <th width="5%"></th>
    </tr>
