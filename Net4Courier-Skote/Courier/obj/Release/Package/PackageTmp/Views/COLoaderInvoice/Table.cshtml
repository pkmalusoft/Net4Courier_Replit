<tbody>
    @foreach (var item in Model.Details)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNo)
        </td>
        <td>
            
            @Net4Courier.Models.CommonFunctions.GetShortDateFormat(item.InvoiceDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td style="text-align:right">
            @Net4Courier.Models.CommonFunctions.GetFormatNumber(item.InvoiceTotal, _decimal)

        </td>
        <td>
            <div class="d-flex gap-3">
                @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                @*<a class="aprint" target="_blank" href="InvoicePrint?id=@item.AgentInvoiceID"><i class="fa fa-print"></i></a>*@
                <a class="aprint text-secondary" target="_blank" href="InvoicePrint?id=@item.AgentInvoiceID" title="Invoice Printing"><i class="mdi mdi-printer font-size-18"></i></a>
                <a class="aview text-primary" href="Details?id=@item.AgentInvoiceID"><i class="mdi mdi-eye font-size-18"></i></a><br />

                <a class="aedit text-success" href="Create?id=@item.AgentInvoiceID" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>

                <a class="adelete text-danger" href="#" onclick="Delete(@item.AgentInvoiceID)"><i class="mdi mdi-delete font-size-18"></i></a>
            </div>
        </td>
    </tr>
    }
</tbody>
<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure? You want to Delete this CO-Loader Invoice?")) {
            window.location.href = "/COLoaderInvoice/DeleteConfirmed/?id=" + ID;
        }
    }
</script>

