@model Net4Courier.Models.StatusTypeVM

@{
    ViewBag.Title = "Create";
         ViewBag.pTitle = "Status Type";
    ViewBag.pageTitle = "Status Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Name").focus();

        $("#btnsave").click(function () {
            var dep = $("#Name").val();

            if (dep == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
    });

 </script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
    <div class="card">
    <div class="card-body">
     <div class="row"> 
               
             <div class="col-md-3">
             <div class="mb-2">
                          <label class="col-form-label required">Name</label>
                   @Html.TextBoxFor(model => model.Name, new {@class="form-control" })
            @Html.ValidationMessageFor(model => model.Name)
                     
                 </div>
                 </div>
      
          <div class="col-md-3">
          <div class="mb-2">
                          <label class="col-form-label required">Code</label>
                   @Html.TextBoxFor(model => model.Code, new {@class="form-control" })
            @Html.ValidationMessageFor(model => model.Code)
                     
                 </div>
                  </div>
      
                        <div class="col-md-12 text-md-end">
                      <input type="submit" value="Save" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                          <a href='@Url.Action("Index", "StatusType", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="">Cancel</a>
                               
                        </div>
                    </div>
 </div> </div>
    </fieldset>
}


