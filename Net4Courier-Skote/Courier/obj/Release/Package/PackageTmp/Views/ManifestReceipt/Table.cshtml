@model IEnumerable<Net4Courier.Models.CODReceiptVM>
@{
        Layout = null;
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
    
    
}

    <thead class="table-light">
    <tr>
        <th>
            Receipt No.
        </th>
        <th>
            Receipt date
        </th>
        <th>
            Agent Name
        </th>
        <th>
            Amount
        </th>

        <th width="5%"></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AgentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.allocatedtotalamount)
            </td>
            <td>
            <div class="d-flex gap-3">
                @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                <a target="_blank" href="InvoicePrint?id=@item.ReceiptID" class="text-secondary"><i class="mdi mdi-print font-size-18"></i></a>

                <a href="Details?id=@item.ReceiptID" class="text-primary"><i class="mdi mdi-eye font-size-18"></i></a><br />

                <a href="Create?id=@item.ReceiptID" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>

                <a href="#" onclick="Delete(@item.ReceiptID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
</div>
            </td>
        </tr>
    }
</tbody>
<script type="text/javascript">
        function Delete(ID) {
            if (confirm("Are you sure? You want to Delete this Invoice?")) {
                window.location.href = "/CustomerInvoice/DeleteConfirmed/?id=" + ID;
            }
        }
</script>

