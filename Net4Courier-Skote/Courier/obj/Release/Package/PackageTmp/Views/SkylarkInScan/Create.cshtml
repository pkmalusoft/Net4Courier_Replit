@using (Html.BeginForm("Create", "SkylarkInScan", FormMethod.Post, new { @class = "needs-validation ", @novalidate = "novalidate" }))
{

    @Html.ValidationSummary(true)

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="card-title mb-2 mt-3 text-danger" id="msg1">
                    </h4>
                    @{
                        if (ViewBag.SaveEnable == false)
                        {
                            <span class="text-danger bold"><i class="mdi mdi-lock"></i> @ViewBag.Message</span>
                        }
                    }
                </div>
                <div class="col-md-4 text-md-end">
                  

                    <a href='@Url.Action("Index", "SkylarkInscan", new { id = 0 })' class="btn btn-secondary">Cancel</a>


                </div>

            </div>
            <div class="row">

                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Skylark Batch</label>
                        @Html.HiddenFor(mode => mode.ID)



                        @Html.TextBoxFor(mode => mode.BatchNo, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Transaction Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date datetimepicker" readonly name="Date" id="Date" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.EntryDateTime.ToString("dd-MM-yyyy")"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                        <div class="invalid-feedback">
                            Select Date
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="col-form-label">Customer</label>

                        @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-select", @required = "true" })
                        @*@Html.DropDownListFor(model => model.CustomerID, new SelectList(@ViewBag.customer, "CustomerID", "CustomerName"), "Select", new { @class = "form-control", @required = "true" })*@
                        @Html.HiddenFor(model => model.CustomerID)
                        @Html.HiddenFor(model => model.AWBBatchID)


                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Employee Name</label>
                        @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", @readonly = "readonly", @required = "true", @rows = "1" })

                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Vehicle No.</label>
                        @Html.TextBoxFor(model => model.VehicleNo, new { @class = "form-control", @required = "true", @readonly = "readonly" })

                    </div>
                </div>

                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Received By</label>
                        @Html.DropDownListFor(model => model.ReceivedBy, new SelectList(ViewBag.Employee, "EmployeeID", "EmployeeName"), "Select", new { @class = "form-select", @required = "required" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-2">
                        <label class="col-form-label">Received Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date datetimepicker"   name="Date" id="ReceivedDate" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker" value="@Model.ReceivedDate.ToString("dd-MM-yyyy hh:mm")"
                                       placeholder="Pick a date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                        <div class="invalid-feedback">
                            Select Date
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-2">
                        @{
                            if (ViewBag.SaveEnable == false)
                            {
                                @*<input type="button" value="Upload to Create Shipment" class="btn btn-success btn_top" disabled id="btnsave" />*@
                                <a href="/AWBBatch/Create?id=@Model.AWBBatchID" class="btn btn-primary" target="_blank" style="color:white;margin-top:35px">AWB Batch : @Model.AWBBatchNo</a>
                            }
                            else
                            {
                                <input type="button" value="Upload to Create Shipment" class="btn btn-success btn_top" id="btnsave" />
                            }
                        }
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12" id="listContainer" style="border-right:2px solid #0094ff">

                    <table class="table align-middle table-nowrap" id="datatable">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    AWB No.
                                </th>

                                <th></th>
                            </tr>
                        </thead>



                        <tbody>
                            @foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td>@item.AWBNo</td>

                                    <th>
                                        @{ 

                                            if (@item.InScanID !=null)
                    {
                                                <a href="/AWB/Create?Id=@item.InScanID">Updated</a>
                    }
                                        }
                                    </th>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>




            </div>

        </div>
    </div>


}


 