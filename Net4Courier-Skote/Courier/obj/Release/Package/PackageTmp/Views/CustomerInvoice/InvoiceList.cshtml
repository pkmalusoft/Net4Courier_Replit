
@model Net4Courier.Models.CustomerInvoiceVM
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
}
<style>
    #details > tfoot > .headinglabel {
        color: black!important;
    }
</style>
 <table class="table table-bordered mb-0" id="details" style="width:100%">
                <thead class="table-light">
    <th style="text-align:center">
        SNo.
        All  <input type="checkbox" style="width:20px;" class="Selectall" id="Selectall" value="0" name="Selectall" onchange="redrawgridall()" />
    </th>
    <th>AWB No.</th>
    
    <th>AWB Date</th>
      <th>Pieces</th>
      <th>Weight</th>
    <th >Consignee</th>
    <th>Destination Country</th>
    <th>Courier Charge</th>
    <th>Other Charge</th>
    <th>VAT</th>
    <th>Surcharge %</th>
    <th>Fuel Surcharge</th>
    <th>Total Charge</th>

    </thead>
    <tbody class="input-table" >

        @foreach (var item in Model.CustomerInvoiceDetailsVM)
        {
        <tr>
            <td>
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomerInvoiceDetailID, new { @Value = @item.CustomerInvoiceDetailID, @id = "hdnCustomerInvoiceDetailID_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomerInvoiceID, new { @Value = @item.CustomerInvoiceID })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].AWBNo, new { @Value = @item.AWBNo, @id = "hdnAWBNo_" + @i })

                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].InscanID, new { @Value = @item.InscanID, @id = "hdnInscanID_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CourierCharge, new { @Value = @item.CourierCharge, @id = "hdnCourierCharge_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomCharge, new { @Value = @item.CustomCharge, @id = "hdnCustomCharge_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].OtherCharge, new { @Value = @item.OtherCharge, @id = "hdnOtherCharge_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].NetValue, new { @id = "hdnTotalCharge_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].VATAmount, new { @id = "hdnVatAmount_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].FuelSurcharge, new { @id = "hdnSurCharge_" + @i })
                @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].SurchargePercent, new { @id = "hdnSurchargePercent_" + @i })

                @(i + 1)
                @Html.CheckBoxFor(model => model.CustomerInvoiceDetailsVM[i].AWBChecked, new { @class = "checkfilter calfield", style = "margin-left:10px;", @id = "hdnawbchecked_" + @i, @awbno = @item.AWBNo, @onchange = "redrawgrid(this)" })


            </td>
            <td>
                @item.AWBNo
            </td>
            <td>
                @Net4Courier.Models.CommonFunctions.GetShortDateFormat(@item.AWBDateTime)
            </td>
            <td class="text-right">
                @item.Pieces
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.Weight, "3")
            </td>
            <td>
                @item.ConsigneeName
            </td>
            <td>
                @item.ConsigneeCountryName
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.CourierCharge, _decimal)
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.OtherCharge, _decimal)
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.VATAmount, _decimal)
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.SurchargePercent, _decimal)
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.FuelSurcharge, _decimal)
            </td>
            <td class="text-right">
                @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.NetValue, _decimal)
            </td>
        </tr>
            i++;
        }
    </tbody>
    
    <tfoot style="background-color:#dedede;color:blue">
        <tr class="charegRow">
            <td colspan="7"><div class="text-md-end"><b>Total</b></div></td>
            <td class="text-right"><label class="headinglabel" id="lblcouriercharge">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.TotalCourierCharge, _decimal)</label></td>
            <td class="text-right"><label class="headinglabel" id="lblothercharge">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.OtherCharge, _decimal)</label></td>
            <td class="text-right"><label class="headinglabel" id="lbltaxamount">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.TotalVat, _decimal)</label></td>
            <td></td>
            <td class="text-right"><label class="headinglabel" id="lblfuelamount">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.TotalSurcharge, _decimal)</label></td>
            <td class="text-right"> <label class="headinglabel" id="lbltotalcharge">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.TotalCharges, _decimal)</label></td>
        </tr>
        
       

        <tr class="charegRow">
            <td colspan="8"></td>
            <td colspan="2">Admin Amount (+)</td>
            <td class="text-right"><label class="headinglabel" id="lbladminpercent">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.AdminPer, _decimal)</label></td>
            <td></td>
            <td class="text-right"><label class="headinglabel" id="lbladminamount">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.AdminAmt, _decimal)</label></td>
        </tr>

        <tr class="charegRow">
            <td colspan="8"></td>
            <td colspan="2">Clearance Charge(+)</td>
            <td></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lblclearancecharge">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.ClearingCharge, _decimal)</label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="8"></td>
            <td colspan="2">Discount(-)</td>
            <td></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lbldiscount">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.Discount, _decimal)</label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="8"></td>
            <td colspan="2"><b>Net Invoice Total   </b></td>
            <td></td>
            <td> </td>
            <td class="text-right"> <label class="headinglabel" style="font-weight:600" id="lblinvoicetotal">@Net4Courier.Models.CommonFunctions.GetFormatNumber(@Model.InvoiceTotal, _decimal)   @Model.InvoiceTotal</label></td>
        </tr>
    </tfoot>
</table>

<style>
    .charegRow td{
        padding: 5px 10px;
    }
</style>
