
@model IEnumerable<Net4Courier.Models.RealeseHoldVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
     tfoot {
            display: table-header-group;
     }
        </style>


<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style=width:100% />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>
<section class="content-header">
    <h1 class="headingfont">Release</h1>




    <section class="content">
      @if (TempData["SuccessMsg"] != null)
    {
             <script type="text/javascript">
                 $(document).ready(function () {
                     $.notify("@TempData["SuccessMsg"]", "success");
                 });
                                                </script>
    }
     <div class="table-responsive tblbackground" style="padding:15px">
<table class="table table-responsive table-bordered tblfont" id="dataTables-example">

    <thead>
    <tr>
      
       <th>
           @Html.Label("AWB No")
        </th>
        <th>
            @Html.Label("Date & Time")
        </th>
        <th>
            @Html.Label("Collected By")
        </th>
         
         <th>
            @Html.Label("Shipper")
        </th>
          <th>
            @Html.Label("Origin")
        </th>
          <th>
            @Html.Label("Consignee")
        </th>
          <th>
            @Html.Label("Destination")
        </th>
     
      
        <th>Action</th>
    </tr>
        </thead>
    <tfoot>
         <tr>
      
        <th>
           @Html.Label("AWB No")
        </th>
        <th class="right_text">
            @Html.Label("Date & Time")
        </th>
        <th>
            @Html.Label("Collected By")
        </th>
         
         <th>
            @Html.Label("Shipper")
        </th>
          <th>
            @Html.Label("Origin")
        </th>
          <th>
            @Html.Label("Consignee")
        </th>
          <th>
            @Html.Label("Destination")
        </th>
     
      
       
        <th style="display:none"></th>
    </tr>
    </tfoot>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AWBNo)
        </td>
      
        <td>
          @Net4Courier.Models.CommonFunctions.GetShortDateFormat(@item.date)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.CollectedBy)
        </td>
        
      
          <td>
            @Html.DisplayFor(modelItem => item.Consignor)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.OriginName)
        </td>
      
            <td>
            @Html.DisplayFor(modelItem => item.Consignee)
        </td>
            
         <td>
            @Html.DisplayFor(modelItem => item.DestinationName)
        </td>

      
    
        <td>
      
             <a href="@Url.Action("EditRealese", new { id = item.InScanID })"><i class="fa fa-pencil"></i></a>|
     
        </td>
    </tr>
}

</table>
        </div>
    </section>

