                return;
            }
            else {
                $('#btnadd').attr('disabled', 'disabled');
            }

            $.ajax({
                type: "POST",
                url: "/InBound/GetAWBDetail",
                datatype: "Json",
                data: { id: $("#txtawb").val() },
                success: function (response) {
                    if (response.status == "ok") {
                        $.ajax({
                        type: 'POST',
                        url: '@Url.Action("ShowAWBList", "InBound")',
                        datatype: "html",
                        success: function (data) {
                            $("#listContainer").html(data);
