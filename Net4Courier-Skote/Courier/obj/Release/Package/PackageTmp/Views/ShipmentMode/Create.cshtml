@model Net4Courier.Models.tblShipmentMode
@{
    ViewBag.Title = "Create";
     ViewBag.pTitle = "Shipment Mode";
    ViewBag.pageTitle = "Shipment Mode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#ShipmentMode").focus();
                

        $("#btnsave").click(function () {
            var name = $("#ShipmentMode").val();            

            if (name == "") {
                $("#validations").show();
                return false;
            }
          //else  if (type == "") {
          //      $("#validations").show();
          //      return false;
          //  }
          //  else {
          //      $("#validations").hide();
          //      return true;
          //  }
        });

    });

</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
     <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
     <div class="card"> 
     <div class="card-body">
        <div class="row">

            <div class="col-md-3">
            <div class="mb-2">
                <label class="col-form-label required">Shipment Mode</label>
                @Html.TextBoxFor(model => model.ShipmentMode, new { @class = "form-control txttargetcaps" })
                @Html.ValidationMessageFor(model => model.ShipmentMode)
                @Html.HiddenFor(model => model.ID)
 </div>
            </div>

            <div class="col-md-3">
              <div class="mb-2">
                <label class="col-form-label required">Prefix</label>
                @Html.TextBoxFor(model => model.Prefix, new { @class = "form-control txttargetcaps", @maxlength=3})

            </div>
            </div>
            <div class="col-md-3 checkboxdesign btn_top">
              <div class="mb-2 mt-2">
                @Html.CheckBox("ByDefault", new { @name = "ByDefault" }) &nbsp
                <label class="col-form-label">Default</label>
                @Html.ValidationMessageFor(model => model.ByDefault)
            </div>
            </div>

       
                        <div class="col-md-12 text-md-end">
                         <input type="submit" value="Save" class="btn btn-success" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "ShipmentMode", new { id = 0 })' class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                               
                        </div>
            </div>  </div>  </div>
    </fieldset>
}
