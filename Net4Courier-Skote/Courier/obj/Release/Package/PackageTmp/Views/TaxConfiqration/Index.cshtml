        </th>
        <th>
            @Html.Label("Sale Head")
        </th>
        <th>
            @Html.Label("Minimum Rate")
        </th>
           <th>
            @Html.Label("Tax%")
        </th>

        <th>Action</th>
    </tr>
        </thead>
    <tfoot>
