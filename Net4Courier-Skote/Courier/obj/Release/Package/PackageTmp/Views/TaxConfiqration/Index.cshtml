           <td style="text-align:right">
            @Html.DisplayFor(modelItem => item.TaxPercentage)
        </td>
        <td>
       
             <a href="@Url.Action("Edit", new { id = item.TaxConfiqrationID })"><i class="fa fa-pencil"></i></a>|
        <a href="#" onclick="Delete(ID=@item.TaxConfiqrationID)"><i class="fa fa-times"></i></a>
        </td>
