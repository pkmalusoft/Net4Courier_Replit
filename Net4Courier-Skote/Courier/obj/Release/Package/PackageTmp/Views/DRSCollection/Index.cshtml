                <td>
                    @Html.DisplayFor(modelItem => item.AWBNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CollectionType)
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.PickupCash, "2")
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.COD, "2")
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.MaterialCost, "2")
                </td>
                <td class="text-right">
                    @Net4Courier.Models.CommonFunctions.GetFormatNumber(@item.OtherAmount, "2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)<br />
                    <span style="color:red">@item.LogDetail</span>
                </td>

                <td>
                    <div class="d-flex gap-3">
                        @*  @Html.ActionLink("Edit", "Edit", new {  id=item.DRSReceiptID  }) *@
                        <a href="@Url.Action("Create", new { id = item.CollectionId })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>

                        @*<a href="#" onclick="Delete(ID=@item.CollectionId)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>*@

                    </div>
                </td>
            </tr>
                }

            </table>
        </div>
    </div>

