run = "cd src/Net4Courier.Web && dotnet run"
entrypoint = "main.vb"
hidden = ["bin", "obj"]
modules = ["web", "nodejs-20", "dotnet-8.0", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["zlib", "dotnet-sdk_8"]

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[agent]
expertMode = true
integrations = ["google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Net4Courier Web"

[[workflows.workflow]]
name = "Net4Courier Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/Net4Courier.Web && date -u '+%Y-%m-%d %H:%M:%S UTC' > build_timestamp.txt && dotnet build --no-incremental && dotnet bin/Debug/net8.0/Net4Courier.Web.dll --urls http://0.0.0.0:5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8099
externalPort = 8099

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "DevMinimalMode=true DOTNET_gcServer=0 DOTNET_GCConserveMemory=9 bash src/Net4Courier.Web/startup-health.sh"]
build = ["bash", "-c", "cd src/Net4Courier.Web && date -u '+%Y-%m-%d %H:%M:%S UTC' > build_timestamp.txt && DevMinimalMode=true DOTNET_gcServer=0 DOTNET_GCConserveMemory=9 dotnet build --no-incremental 2>&1 && echo BUILD_OK || echo BUILD_FAILED"]

[userenv]

[userenv.shared]
DevMinimalMode = "true"
