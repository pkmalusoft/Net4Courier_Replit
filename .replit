run = "cd src/Net4Courier.Web && dotnet run"
entrypoint = "main.vb"
hidden = ["bin", "obj"]
modules = ["web", "nodejs-20", "dotnet-8.0", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["zlib", "dotnetCorePackages.sdk_8_0"]

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[agent]
expertMode = true
integrations = ["google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Net4Courier Web"

[[workflows.workflow]]
name = "Net4Courier Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/Net4Courier.Web && date -u '+%Y-%m-%d %H:%M:%S UTC' > build_timestamp.txt && dotnet build --no-incremental && dotnet bin/Debug/net8.0/Net4Courier.Web.dll --urls http://0.0.0.0:5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "export LD_LIBRARY_PATH=./publish:$LD_LIBRARY_PATH && ./publish/Net4Courier.Web --urls http://0.0.0.0:5000"]
build = ["bash", "-c", "dotnet publish src/Net4Courier.Web/Net4Courier.Web.csproj -c Release -r linux-x64 --self-contained true -o publish && LIBZ=$(ldconfig -p 2>/dev/null | grep 'libz.so.1' | awk '{print $NF}' | head -1) && if [ -n \"$LIBZ\" ]; then cp -L \"$LIBZ\" publish/libz.so.1 && ln -sf libz.so.1 publish/libz.so && echo 'Bundled libz from '$LIBZ; else echo 'ERROR: libz.so.1 not found - Excel import will fail in production' && exit 1; fi"]

[userenv]

[userenv.shared]
DevMinimalMode = "true"
