run = "cd src/Net4Courier.Web && dotnet run"
entrypoint = "main.vb"
hidden = ["bin", "obj"]
modules = ["web", "nodejs-20", "dotnet-8.0", "postgresql-16"]

[nix]
channel = "stable-25_05"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[agent]
expertMode = true
integrations = ["google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Net4Courier Web"

[[workflows.workflow]]
name = "Net4Courier Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/Net4Courier.Web && dotnet bin/Debug/net8.0/Net4Courier.Web.dll --urls http://0.0.0.0:5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd src/Net4Courier.Web && dotnet bin/Debug/net8.0/Net4Courier.Web.dll --urls http://0.0.0.0:5000"]
build = ["bash", "-c", "dotnet restore Net4Courier.sln && cd src/Net4Courier.Web && rm -rf wwwroot/_content && rm -f wwwroot/Net4Courier.Web.styles.css && dotnet build -c Debug && mkdir -p wwwroot/_content/MudBlazor && cp ~/.nuget/packages/mudblazor/7.16.0/staticwebassets/MudBlazor.min.css wwwroot/_content/MudBlazor/ && cp ~/.nuget/packages/mudblazor/7.16.0/staticwebassets/MudBlazor.min.js wwwroot/_content/MudBlazor/ && (cp obj/Debug/net8.0/scopedcss/bundle/Net4Courier.Web.styles.css wwwroot/ 2>/dev/null || echo 'Scoped CSS not found, skipping')"]
