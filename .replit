run = "cd src/Net4Courier.Web && dotnet run"
entrypoint = "main.vb"
hidden = ["bin", "obj"]
modules = ["dotnet-8.0", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[agent]
expertMode = true
integrations = ["google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Net4Courier Web"

[[workflows.workflow]]
name = "Net4Courier Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/Net4Courier.Web && dotnet run --urls http://0.0.0.0:5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "gce"
run = ["bash", "-c", "cd publish && dotnet Net4Courier.Web.dll --urls http://0.0.0.0:5000"]
build = ["dotnet", "publish", "-c", "Release", "-o", "publish", "src/Net4Courier.Web/Net4Courier.Web.csproj"]
