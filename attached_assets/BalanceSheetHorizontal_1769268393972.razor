@page "/reports/balance-sheet/horizontal"
@layout MainLayout
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IAuthService AuthService

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-4">Balance Sheet - Horizontal Format</MudText>

        <MudGrid>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="Year" @bind-Value="selectedYear" Variant="Variant.Outlined" Dense="true">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        <MudSelectItem Value="@y">@y</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="As at End of" @bind-Value="selectedMonth" Variant="Variant.Outlined" Dense="true">
                    <MudSelectItem Value="0">Full Year</MudSelectItem>
                    @for (int m = 1; m <= 12; m++)
                    {
                        var month = m;
                        <MudSelectItem Value="@month">@(new DateTime(2000, month, 1).ToString("MMM"))</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <BranchDepartmentFilter @bind-SelectedBranchId="selectedBranchId" 
                                    @bind-SelectedDepartmentId="selectedDepartmentId" 
                                    IsLoading="isLoading" />
            <MudItem xs="12" sm="4" Class="d-flex align-center gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadReport" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="MudBlazor.Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Generate
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="ClearFilters">Clear</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (reportResult != null)
    {
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.subtitle1" Class="mb-4" Align="Align.Center">
                <strong>Balance Sheet as at @reportResult.AsAtDate.ToString("dd MMMM yyyy")</strong>
            </MudText>

            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudSimpleTable Dense="true" Hover="true" Bordered="true">
                        <thead>
                            <tr style="background: var(--mud-palette-primary-lighten);">
                                <th colspan="2"><strong>ASSETS</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background: var(--mud-palette-grey-lighten-3);">
                                <td colspan="2"><strong>Current Assets</strong></td>
                            </tr>
                            @foreach (var asset in reportResult.CurrentAssets)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">@asset.AccountCode - @asset.AccountName</td>
                                    <td style="text-align: right; width: 120px;">@FormatAmount(asset.Balance)</td>
                                </tr>
                            }
                            <tr style="font-weight: bold;">
                                <td style="padding-left: 12px;">Total Current Assets</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalCurrentAssets)</td>
                            </tr>
                            <tr style="background: var(--mud-palette-grey-lighten-3);">
                                <td colspan="2"><strong>Non-Current Assets</strong></td>
                            </tr>
                            @foreach (var asset in reportResult.NonCurrentAssets)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">@asset.AccountCode - @asset.AccountName</td>
                                    <td style="text-align: right; width: 120px;">@FormatAmount(asset.Balance)</td>
                                </tr>
                            }
                            <tr style="font-weight: bold;">
                                <td style="padding-left: 12px;">Total Non-Current Assets</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalNonCurrentAssets)</td>
                            </tr>
                            <tr style="background: var(--mud-palette-success-lighten); font-weight: bold;">
                                <td><strong>TOTAL ASSETS</strong></td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalAssets)</td>
                            </tr>
                        </tbody>
                    </MudSimpleTable>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSimpleTable Dense="true" Hover="true" Bordered="true">
                        <thead>
                            <tr style="background: var(--mud-palette-primary-lighten);">
                                <th colspan="2"><strong>LIABILITIES & EQUITY</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background: var(--mud-palette-grey-lighten-3);">
                                <td colspan="2"><strong>Current Liabilities</strong></td>
                            </tr>
                            @foreach (var liability in reportResult.CurrentLiabilities)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">@liability.AccountCode - @liability.AccountName</td>
                                    <td style="text-align: right; width: 120px;">@FormatAmount(liability.Balance)</td>
                                </tr>
                            }
                            <tr style="font-weight: bold;">
                                <td style="padding-left: 12px;">Total Current Liabilities</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalCurrentLiabilities)</td>
                            </tr>
                            <tr style="background: var(--mud-palette-grey-lighten-3);">
                                <td colspan="2"><strong>Non-Current Liabilities</strong></td>
                            </tr>
                            @foreach (var liability in reportResult.NonCurrentLiabilities)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">@liability.AccountCode - @liability.AccountName</td>
                                    <td style="text-align: right; width: 120px;">@FormatAmount(liability.Balance)</td>
                                </tr>
                            }
                            <tr style="font-weight: bold;">
                                <td style="padding-left: 12px;">Total Non-Current Liabilities</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalNonCurrentLiabilities)</td>
                            </tr>
                            <tr style="font-weight: bold;">
                                <td>Total Liabilities</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalLiabilities)</td>
                            </tr>
                            <tr style="background: var(--mud-palette-grey-lighten-3);">
                                <td colspan="2"><strong>Equity</strong></td>
                            </tr>
                            @foreach (var equity in reportResult.Equity)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">@equity.AccountCode - @equity.AccountName</td>
                                    <td style="text-align: right; width: 120px;">@FormatAmount(equity.Balance)</td>
                                </tr>
                            }
                            @if (reportResult.RetainedEarnings != 0)
                            {
                                <tr>
                                    <td style="padding-left: 24px;">Retained Earnings</td>
                                    <td style="text-align: right;">@FormatAmount(reportResult.RetainedEarnings)</td>
                                </tr>
                            }
                            <tr style="font-weight: bold;">
                                <td>Total Equity</td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalEquity)</td>
                            </tr>
                            <tr style="background: var(--mud-palette-success-lighten); font-weight: bold;">
                                <td><strong>TOTAL LIABILITIES & EQUITY</strong></td>
                                <td style="text-align: right;">@FormatAmount(reportResult.TotalLiabilitiesAndEquity)</td>
                            </tr>
                        </tbody>
                    </MudSimpleTable>
                </MudItem>
            </MudGrid>

            @if (Math.Abs(reportResult.TotalAssets - reportResult.TotalLiabilitiesAndEquity) > 0.01m)
            {
                <MudAlert Severity="Severity.Warning" Class="mt-4">
                    Balance Sheet does not balance. Difference: @FormatAmount(reportResult.TotalAssets - reportResult.TotalLiabilitiesAndEquity)
                </MudAlert>
            }
            else
            {
                <MudAlert Severity="Severity.Success" Class="mt-4">
                    Balance Sheet is balanced. Assets = Liabilities + Equity
                </MudAlert>
            }
        </MudPaper>
    }
    else if (!isLoading)
    {
        <MudPaper Class="pa-4">
            <MudAlert Severity="Severity.Info">
                Select parameters and click Generate to view the Horizontal Balance Sheet.
            </MudAlert>
        </MudPaper>
    }
</MudContainer>

@code {
    private int selectedYear = DateTime.Now.Year;
    private int selectedMonth = DateTime.Now.Month;
    private Guid? selectedBranchId;
    private Guid? selectedDepartmentId;
    private bool isLoading = false;
    private BalanceSheetHorizontalResult? reportResult;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        try
        {
            var request = CreateAuthenticatedRequest(HttpMethod.Post, "/api/balancesheet/horizontal");

            var requestBody = new { 
                Year = selectedYear, 
                Month = selectedMonth,
                BranchId = selectedBranchId,
                DepartmentId = selectedDepartmentId
            };
            request.Content = JsonContent.Create(requestBody);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                reportResult = await response.Content.ReadFromJsonAsync<BalanceSheetHorizontalResult>();
            }
            else
            {
                Snackbar.Add("Failed to load Balance Sheet", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilters()
    {
        selectedYear = DateTime.Now.Year;
        selectedMonth = DateTime.Now.Month;
        selectedBranchId = null;
        selectedDepartmentId = null;
        reportResult = null;
    }

    private string FormatAmount(decimal amount)
    {
        return amount.ToString("N2");
    }

    private HttpRequestMessage CreateAuthenticatedRequest(HttpMethod method, string uri)
    {
        var request = new HttpRequestMessage(method, uri);
        var token = AuthService.GetAccessToken();
        var tenantId = AuthService.GetTenantId();

        if (!string.IsNullOrEmpty(token))
            request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
        if (!string.IsNullOrEmpty(tenantId))
            request.Headers.Add("X-Tenant-Id", tenantId);

        return request;
    }

    private class BalanceSheetHorizontalResult
    {
        public string ReportType { get; set; } = "";
        public DateTime AsAtDate { get; set; }
        public List<BalanceSheetLineItem> CurrentAssets { get; set; } = new();
        public List<BalanceSheetLineItem> NonCurrentAssets { get; set; } = new();
        public List<BalanceSheetLineItem> CurrentLiabilities { get; set; } = new();
        public List<BalanceSheetLineItem> NonCurrentLiabilities { get; set; } = new();
        public List<BalanceSheetLineItem> Equity { get; set; } = new();
        public decimal RetainedEarnings { get; set; }
        public decimal TotalCurrentAssets { get; set; }
        public decimal TotalNonCurrentAssets { get; set; }
        public decimal TotalAssets { get; set; }
        public decimal TotalCurrentLiabilities { get; set; }
        public decimal TotalNonCurrentLiabilities { get; set; }
        public decimal TotalLiabilities { get; set; }
        public decimal TotalEquity { get; set; }
        public decimal TotalLiabilitiesAndEquity { get; set; }
    }

    private class BalanceSheetLineItem
    {
        public Guid AccountId { get; set; }
        public string AccountCode { get; set; } = "";
        public string AccountName { get; set; } = "";
        public decimal Balance { get; set; }
    }
}
