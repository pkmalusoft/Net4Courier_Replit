@page "/reports/profit-loss/period"
@layout MainLayout
@using System.Net.Http.Json
@using System.Text.Json
@using Web.Services
@using Web.Models
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IAuthService AuthService
@inject IBranchService BranchService
@inject IDepartmentService DepartmentService

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-4">Profit & Loss Statement - Period Comparison</MudText>

        <MudGrid>
            <MudItem xs="12" sm="2">
                <MudSelect T="string" Label="Period Type" @bind-Value="periodType" Variant="Variant.Outlined" Dense="true">
                    <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
                    <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                    <MudSelectItem Value="@("Yearly")">Yearly</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="Year" @bind-Value="selectedYear" Variant="Variant.Outlined" Dense="true">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        <MudSelectItem Value="@y">@y</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="1">
                <MudSelect T="int" Label="Month" @bind-Value="selectedMonth" Variant="Variant.Outlined" Dense="true" Disabled="@(periodType == "Yearly")">
                    @for (int m = 1; m <= 12; m++)
                    {
                        var month = m;
                        <MudSelectItem Value="@month">@(new DateTime(2000, month, 1).ToString("MMM"))</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="1">
                <MudNumericField T="int" Label="Periods" @bind-Value="numberOfPeriods" Variant="Variant.Outlined" Dense="true" Min="1" Max="24" />
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect Value="selectedBranchId" Label="Branch" Variant="Variant.Outlined" Dense="true"
                           Clearable="true" T="Guid?" ValueChanged="OnBranchChanged"
                           ValueExpression="@(() => selectedBranchId)">
                    @foreach (var branch in branches)
                    {
                        <MudSelectItem Value="@((Guid?)branch.Id)">@branch.Code - @branch.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect @bind-Value="selectedDepartmentId" Label="Department" Variant="Variant.Outlined" Dense="true"
                           Clearable="true" T="Guid?" Disabled="@(!selectedBranchId.HasValue && branches.Any())">
                    @foreach (var dept in filteredDepartments)
                    {
                        <MudSelectItem Value="@((Guid?)dept.Id)">@dept.Code - @dept.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2" Class="d-flex align-center gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadReport" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="MudBlazor.Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Generate
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="ClearFilters">Clear</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (reportResult != null && reportResult.Periods.Count > 0)
    {
        <MudPaper Class="pa-4">
            <div style="overflow-x: auto;">
                <MudTable Items="@GetDisplayRows()" Dense="true" Hover="true" Bordered="true" FixedHeader="true" Height="600px">
                    <HeaderContent>
                        <MudTh Style="position: sticky; left: 0; background: var(--mud-palette-surface); z-index: 2; min-width: 250px">
                            <strong>Particulars</strong>
                        </MudTh>
                        @foreach (var period in reportResult.Periods)
                        {
                            <MudTh Style="text-align: right; min-width: 120px">@period.PeriodLabel</MudTh>
                        }
                    </HeaderContent>
                    <RowTemplate>
                        @if (context.IsHeader)
                        {
                            <MudTd colspan="@(reportResult.Periods.Count + 1)" Style="background: var(--mud-palette-primary-lighten); font-weight: bold;">
                                @context.Label
                            </MudTd>
                        }
                        else if (context.IsTotalRow)
                        {
                            <MudTd Style="position: sticky; left: 0; background: var(--mud-palette-surface); z-index: 1; font-weight: bold;">
                                @context.Label
                            </MudTd>
                            @foreach (var amount in context.Amounts)
                            {
                                <MudTd Style="@($"text-align: right; font-weight: bold; {GetAmountStyle(amount, context.IsNetProfit)}")">
                                    @FormatAmount(amount)
                                </MudTd>
                            }
                        }
                        else
                        {
                            <MudTd Style="position: sticky; left: 0; background: var(--mud-palette-surface); z-index: 1; padding-left: 24px;">
                                @context.Label
                            </MudTd>
                            @foreach (var amount in context.Amounts)
                            {
                                <MudTd Style="text-align: right">@FormatAmount(amount)</MudTd>
                            }
                        }
                    </RowTemplate>
                </MudTable>
            </div>
        </MudPaper>
    }
    else if (!isLoading)
    {
        <MudPaper Class="pa-4">
            <MudAlert Severity="Severity.Info">
                Select parameters and click Generate to view the Period Comparison Profit & Loss Statement.
            </MudAlert>
        </MudPaper>
    }
</MudContainer>

@code {
    private string periodType = "Monthly";
    private int selectedYear = DateTime.Now.Year;
    private int selectedMonth = DateTime.Now.Month;
    private int numberOfPeriods = 12;
    private Guid? selectedBranchId;
    private Guid? selectedDepartmentId;
    private bool isLoading = false;
    private ProfitLossPeriodResult? reportResult;
    
    private List<BranchDto> branches = new();
    private List<DepartmentDto> departments = new();
    private IEnumerable<DepartmentDto> filteredDepartments => selectedBranchId.HasValue 
        ? departments.Where(d => d.BranchId == selectedBranchId || d.BranchId == null)
        : departments;

    protected override async Task OnInitializedAsync()
    {
        await LoadBranchesAndDepartments();
        await LoadReport();
    }

    private async Task LoadBranchesAndDepartments()
    {
        try
        {
            branches = await BranchService.GetAllAsync();
            departments = await DepartmentService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading branches/departments: {ex.Message}", Severity.Warning);
        }
    }

    private void OnBranchChanged(Guid? newBranchId)
    {
        selectedBranchId = newBranchId;
        selectedDepartmentId = null;
    }

    private async Task LoadReport()
    {
        isLoading = true;
        reportResult = null;
        StateHasChanged();

        try
        {
            var request = CreateAuthenticatedRequest(HttpMethod.Post, "api/profitloss/period");
            request.Content = JsonContent.Create(new
            {
                Year = selectedYear,
                Month = selectedMonth,
                PeriodType = periodType,
                NumberOfPeriods = numberOfPeriods,
                BranchId = selectedBranchId,
                DepartmentId = selectedDepartmentId
            });

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                reportResult = await response.Content.ReadFromJsonAsync<ProfitLossPeriodResult>();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Failed to load report: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<DisplayRow> GetDisplayRows()
    {
        if (reportResult == null) return new List<DisplayRow>();

        var rows = new List<DisplayRow>();

        rows.Add(new DisplayRow { IsHeader = true, Label = "REVENUE" });
        foreach (var item in reportResult.RevenueItems)
        {
            rows.Add(new DisplayRow
            {
                Label = $"{item.AccountCode} - {item.AccountName}",
                Amounts = item.PeriodAmounts
            });
        }
        rows.Add(new DisplayRow
        {
            IsTotalRow = true,
            Label = "Total Revenue",
            Amounts = reportResult.RevenueTotals
        });

        rows.Add(new DisplayRow { IsHeader = true, Label = "EXPENSES" });
        foreach (var item in reportResult.ExpenseItems)
        {
            rows.Add(new DisplayRow
            {
                Label = $"{item.AccountCode} - {item.AccountName}",
                Amounts = item.PeriodAmounts
            });
        }
        rows.Add(new DisplayRow
        {
            IsTotalRow = true,
            Label = "Total Expenses",
            Amounts = reportResult.ExpenseTotals
        });

        rows.Add(new DisplayRow
        {
            IsTotalRow = true,
            IsNetProfit = true,
            Label = "NET PROFIT / (LOSS)",
            Amounts = reportResult.NetProfitLossTotals
        });

        return rows;
    }

    private void ClearFilters()
    {
        periodType = "Monthly";
        selectedYear = DateTime.Now.Year;
        selectedMonth = DateTime.Now.Month;
        numberOfPeriods = 12;
        selectedBranchId = null;
        selectedDepartmentId = null;
        reportResult = null;
    }

    private string FormatAmount(decimal value)
    {
        if (value == 0) return "-";
        if (value < 0) return $"({Math.Abs(value):N2})";
        return value.ToString("N2");
    }

    private string GetAmountStyle(decimal amount, bool isNetProfit)
    {
        if (!isNetProfit) return "";
        return amount >= 0 ? "color: green;" : "color: red;";
    }

    private HttpRequestMessage CreateAuthenticatedRequest(HttpMethod method, string uri)
    {
        var request = new HttpRequestMessage(method, uri);
        var token = AuthService.GetAccessToken();
        var tenantId = AuthService.GetTenantId();

        if (!string.IsNullOrEmpty(token))
            request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
        if (!string.IsNullOrEmpty(tenantId))
            request.Headers.Add("X-Tenant-Id", tenantId);

        return request;
    }

    private class DisplayRow
    {
        public bool IsHeader { get; set; }
        public bool IsTotalRow { get; set; }
        public bool IsNetProfit { get; set; }
        public string Label { get; set; } = "";
        public List<decimal> Amounts { get; set; } = new();
    }

    private class ProfitLossPeriodResult
    {
        public string ReportType { get; set; } = "";
        public string PeriodType { get; set; } = "";
        public List<PeriodColumn> Periods { get; set; } = new();
        public List<ProfitLossPeriodItem> RevenueItems { get; set; } = new();
        public List<ProfitLossPeriodItem> ExpenseItems { get; set; } = new();
        public List<decimal> RevenueTotals { get; set; } = new();
        public List<decimal> ExpenseTotals { get; set; } = new();
        public List<decimal> NetProfitLossTotals { get; set; } = new();
    }

    private class PeriodColumn
    {
        public int PeriodIndex { get; set; }
        public string PeriodLabel { get; set; } = "";
        public DateTime PeriodStart { get; set; }
        public DateTime PeriodEnd { get; set; }
    }

    private class ProfitLossPeriodItem
    {
        public Guid AccountId { get; set; }
        public string AccountCode { get; set; } = "";
        public string AccountName { get; set; } = "";
        public List<decimal> PeriodAmounts { get; set; } = new();
    }
}
