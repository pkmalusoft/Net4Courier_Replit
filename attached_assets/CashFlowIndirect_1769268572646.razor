@page "/reports/cash-flow/indirect"
@layout MainLayout
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IAuthService AuthService

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-4">Cash Flow Statement - Indirect Method</MudText>

        <MudGrid>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="Year" @bind-Value="selectedYear" Variant="Variant.Outlined" Dense="true">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        <MudSelectItem Value="@y">@y</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="Period" @bind-Value="selectedMonth" Variant="Variant.Outlined" Dense="true">
                    <MudSelectItem Value="0">Full Year</MudSelectItem>
                    @for (int m = 1; m <= 12; m++)
                    {
                        var month = m;
                        <MudSelectItem Value="@month">@(new DateTime(2000, month, 1).ToString("MMM"))</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <BranchDepartmentFilter @bind-SelectedBranchId="selectedBranchId" 
                                    @bind-SelectedDepartmentId="selectedDepartmentId" 
                                    IsLoading="isLoading" />
            <MudItem xs="12" sm="4" Class="d-flex align-center gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadReport" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="MudBlazor.Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Generate
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="ClearFilters">Clear</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (reportResult != null)
    {
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.subtitle1" Class="mb-4" Align="Align.Center">
                <strong>Cash Flow Statement for the period @reportResult.PeriodStart.ToString("dd MMM yyyy") to @reportResult.PeriodEnd.ToString("dd MMM yyyy")</strong>
            </MudText>

            <MudPaper Class="pa-3 mb-4" Elevation="1" Style="background: var(--mud-palette-grey-lighten-4);">
                <div class="d-flex justify-space-between">
                    <MudText Typo="Typo.subtitle1">Opening Cash Balance</MudText>
                    <MudText Typo="Typo.subtitle1"><strong>@FormatAmount(reportResult.OpeningCashBalance)</strong></MudText>
                </div>
            </MudPaper>

            <MudExpansionPanels Class="mb-3">
                <MudExpansionPanel IsInitiallyExpanded="true">
                    <TitleContent>
                        <div class="d-flex justify-space-between align-center" style="width: 100%;">
                            <MudText Typo="Typo.subtitle1"><strong>A. Cash Flow from Operating Activities</strong></MudText>
                            <MudText Typo="Typo.subtitle1" Style="@GetAmountStyle(reportResult.NetCashFromOperating)">
                                <strong>@FormatAmount(reportResult.NetCashFromOperating)</strong>
                            </MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudSimpleTable Dense="true" Hover="true" Bordered="true">
                            <tbody>
                                <tr style="background: var(--mud-palette-primary-lighten);">
                                    <td><strong>Net Income (Profit/Loss)</strong></td>
                                    <td style="text-align: right; width: 150px;"><strong>@FormatAmount(reportResult.NetIncome)</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="background: var(--mud-palette-grey-lighten-4);"><strong>Adjustments for Non-Cash Items:</strong></td>
                                </tr>
                                @foreach (var adj in reportResult.NonCashAdjustments)
                                {
                                    <tr>
                                        <td style="padding-left: 24px;">@adj.Description</td>
                                        <td style="text-align: right;">@FormatSignedAmount(adj.Amount)</td>
                                    </tr>
                                }
                                <tr style="font-weight: bold;">
                                    <td style="padding-left: 12px;">Total Non-Cash Adjustments</td>
                                    <td style="text-align: right;">@FormatSignedAmount(reportResult.TotalNonCashAdjustments)</td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="background: var(--mud-palette-grey-lighten-4);"><strong>Changes in Working Capital:</strong></td>
                                </tr>
                                @foreach (var wc in reportResult.WorkingCapitalChanges)
                                {
                                    <tr>
                                        <td style="padding-left: 24px;">@wc.Description</td>
                                        <td style="text-align: right;">@FormatSignedAmount(wc.Amount)</td>
                                    </tr>
                                }
                                <tr style="font-weight: bold;">
                                    <td style="padding-left: 12px;">Total Working Capital Changes</td>
                                    <td style="text-align: right;">@FormatSignedAmount(reportResult.TotalWorkingCapitalChanges)</td>
                                </tr>
                                <tr style="background: var(--mud-palette-success-lighten); font-weight: bold;">
                                    <td>Net Cash from Operating Activities</td>
                                    <td style="text-align: right;">@FormatAmount(reportResult.NetCashFromOperating)</td>
                                </tr>
                            </tbody>
                        </MudSimpleTable>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>

            <MudExpansionPanels Class="mb-3">
                <MudExpansionPanel IsInitiallyExpanded="true">
                    <TitleContent>
                        <div class="d-flex justify-space-between align-center" style="width: 100%;">
                            <MudText Typo="Typo.subtitle1"><strong>B. Cash Flow from Investing Activities</strong></MudText>
                            <MudText Typo="Typo.subtitle1" Style="@GetAmountStyle(reportResult.NetCashFromInvesting)">
                                <strong>@FormatAmount(reportResult.NetCashFromInvesting)</strong>
                            </MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudSimpleTable Dense="true" Hover="true" Bordered="true">
                            <tbody>
                                @if (reportResult.InvestingItems.Any())
                                {
                                    @foreach (var item in reportResult.InvestingItems)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td style="text-align: right; width: 150px;">@FormatSignedAmount(item.Amount)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" style="text-align: center; color: var(--mud-palette-grey);">No investing activities</td>
                                    </tr>
                                }
                                <tr style="background: var(--mud-palette-warning-lighten); font-weight: bold;">
                                    <td>Net Cash from Investing Activities</td>
                                    <td style="text-align: right;">@FormatAmount(reportResult.NetCashFromInvesting)</td>
                                </tr>
                            </tbody>
                        </MudSimpleTable>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>

            <MudExpansionPanels Class="mb-3">
                <MudExpansionPanel IsInitiallyExpanded="true">
                    <TitleContent>
                        <div class="d-flex justify-space-between align-center" style="width: 100%;">
                            <MudText Typo="Typo.subtitle1"><strong>C. Cash Flow from Financing Activities</strong></MudText>
                            <MudText Typo="Typo.subtitle1" Style="@GetAmountStyle(reportResult.NetCashFromFinancing)">
                                <strong>@FormatAmount(reportResult.NetCashFromFinancing)</strong>
                            </MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        <MudSimpleTable Dense="true" Hover="true" Bordered="true">
                            <tbody>
                                @if (reportResult.FinancingItems.Any())
                                {
                                    @foreach (var item in reportResult.FinancingItems)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td style="text-align: right; width: 150px;">@FormatSignedAmount(item.Amount)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" style="text-align: center; color: var(--mud-palette-grey);">No financing activities</td>
                                    </tr>
                                }
                                <tr style="background: var(--mud-palette-info-lighten); font-weight: bold;">
                                    <td>Net Cash from Financing Activities</td>
                                    <td style="text-align: right;">@FormatAmount(reportResult.NetCashFromFinancing)</td>
                                </tr>
                            </tbody>
                        </MudSimpleTable>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>

            <MudDivider Class="my-4" />

            <MudSimpleTable Dense="true" Bordered="true" Class="mb-4">
                <tbody>
                    <tr style="font-weight: bold;">
                        <td>Net Increase/(Decrease) in Cash (A + B + C)</td>
                        <td style="text-align: right; width: 150px; @GetAmountStyle(reportResult.NetChangeInCash)">
                            @FormatAmount(reportResult.NetChangeInCash)
                        </td>
                    </tr>
                    <tr>
                        <td>Add: Opening Cash Balance</td>
                        <td style="text-align: right;">@FormatAmount(reportResult.OpeningCashBalance)</td>
                    </tr>
                    <tr style="background: var(--mud-palette-primary-lighten); font-weight: bold;">
                        <td><strong>Closing Cash Balance</strong></td>
                        <td style="text-align: right;"><strong>@FormatAmount(reportResult.ClosingCashBalance)</strong></td>
                    </tr>
                </tbody>
            </MudSimpleTable>
        </MudPaper>
    }
    else if (!isLoading)
    {
        <MudPaper Class="pa-4">
            <MudAlert Severity="Severity.Info">
                Select parameters and click Generate to view the Indirect Method Cash Flow Statement.
            </MudAlert>
        </MudPaper>
    }
</MudContainer>

@code {
    private int selectedYear = DateTime.Now.Year;
    private int selectedMonth = 0;
    private Guid? selectedBranchId;
    private Guid? selectedDepartmentId;
    private bool isLoading = false;
    private CashFlowIndirectResult? reportResult;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        try
        {
            var request = CreateAuthenticatedRequest(HttpMethod.Post, "/api/cashflow/indirect");

            var requestBody = new { 
                Year = selectedYear, 
                Month = selectedMonth,
                BranchId = selectedBranchId,
                DepartmentId = selectedDepartmentId
            };
            request.Content = JsonContent.Create(requestBody);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                reportResult = await response.Content.ReadFromJsonAsync<CashFlowIndirectResult>();
            }
            else
            {
                Snackbar.Add("Failed to load Cash Flow Statement", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilters()
    {
        selectedYear = DateTime.Now.Year;
        selectedMonth = 0;
        selectedBranchId = null;
        selectedDepartmentId = null;
        reportResult = null;
    }

    private string FormatAmount(decimal amount)
    {
        return amount.ToString("N2");
    }

    private string FormatSignedAmount(decimal amount)
    {
        if (amount > 0) return $"+{amount:N2}";
        return amount.ToString("N2");
    }

    private string GetAmountStyle(decimal amount)
    {
        if (amount > 0) return "color: var(--mud-palette-success);";
        if (amount < 0) return "color: var(--mud-palette-error);";
        return "";
    }

    private HttpRequestMessage CreateAuthenticatedRequest(HttpMethod method, string uri)
    {
        var request = new HttpRequestMessage(method, uri);
        var token = AuthService.GetAccessToken();
        var tenantId = AuthService.GetTenantId();

        if (!string.IsNullOrEmpty(token))
            request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
        if (!string.IsNullOrEmpty(tenantId))
            request.Headers.Add("X-Tenant-Id", tenantId);

        return request;
    }

    private class CashFlowIndirectResult
    {
        public string ReportType { get; set; } = "";
        public DateTime PeriodStart { get; set; }
        public DateTime PeriodEnd { get; set; }
        public decimal OpeningCashBalance { get; set; }
        public decimal NetIncome { get; set; }
        public List<CashFlowAdjustment> NonCashAdjustments { get; set; } = new();
        public decimal TotalNonCashAdjustments { get; set; }
        public List<CashFlowAdjustment> WorkingCapitalChanges { get; set; } = new();
        public decimal TotalWorkingCapitalChanges { get; set; }
        public decimal NetCashFromOperating { get; set; }
        public List<CashFlowItem> InvestingItems { get; set; } = new();
        public decimal NetCashFromInvesting { get; set; }
        public List<CashFlowItem> FinancingItems { get; set; } = new();
        public decimal NetCashFromFinancing { get; set; }
        public decimal NetChangeInCash { get; set; }
        public decimal ClosingCashBalance { get; set; }
    }

    private class CashFlowAdjustment
    {
        public string Description { get; set; } = "";
        public decimal Amount { get; set; }
    }

    private class CashFlowItem
    {
        public string Description { get; set; } = "";
        public decimal Amount { get; set; }
    }
}
