@page "/reports/balance-sheet/groupwise"
@layout MainLayout
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IAuthService AuthService

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-4">Balance Sheet - Group-wise Consolidation</MudText>

        <MudGrid>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="Year" @bind-Value="selectedYear" Variant="Variant.Outlined" Dense="true">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 10; y--)
                    {
                        <MudSelectItem Value="@y">@y</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="2">
                <MudSelect T="int" Label="As at End of" @bind-Value="selectedMonth" Variant="Variant.Outlined" Dense="true">
                    <MudSelectItem Value="0">Full Year</MudSelectItem>
                    @for (int m = 1; m <= 12; m++)
                    {
                        var month = m;
                        <MudSelectItem Value="@month">@(new DateTime(2000, month, 1).ToString("MMM"))</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <BranchDepartmentFilter @bind-SelectedBranchId="selectedBranchId" 
                                    @bind-SelectedDepartmentId="selectedDepartmentId" 
                                    IsLoading="isLoading" />
            <MudItem xs="12" sm="4" Class="d-flex align-center gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadReport" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="MudBlazor.Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Generate
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="ClearFilters">Clear</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (reportResult != null)
    {
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.subtitle1" Class="mb-4" Align="Align.Center">
                <strong>Balance Sheet as at @reportResult.AsAtDate.ToString("dd MMMM yyyy")</strong>
            </MudText>

            @foreach (var group in reportResult.Groups)
            {
                <MudExpansionPanels Class="mb-2">
                    <MudExpansionPanel @bind-Expanded="expandedGroups[group.AccountType]">
                        <TitleContent>
                            <div class="d-flex justify-space-between align-center" style="width: 100%;">
                                <MudText Typo="Typo.subtitle1">
                                    <strong>@GetGroupLabel(group.AccountType)</strong>
                                </MudText>
                                <MudText Typo="Typo.subtitle1" Style="@GetGroupStyle(group.AccountType)">
                                    <strong>@FormatAmount(group.GroupTotal)</strong>
                                </MudText>
                            </div>
                        </TitleContent>
                        <ChildContent>
                            @foreach (var item in group.Items)
                            {
                                <MudExpansionPanels Class="ml-4 mb-1">
                                    <MudExpansionPanel Dense="true" DisableGutters="true">
                                        <TitleContent>
                                            <div class="d-flex justify-space-between align-center" style="width: 100%;">
                                                <MudText Typo="Typo.body2">
                                                    @item.ParentAccountCode - @item.ParentAccountName
                                                </MudText>
                                                <MudText Typo="Typo.body2">
                                                    <strong>@FormatAmount(item.TotalBalance)</strong>
                                                </MudText>
                                            </div>
                                        </TitleContent>
                                        <ChildContent>
                                            @if (item.ParentBalance != 0)
                                            {
                                                <div class="d-flex justify-space-between ml-6 py-1">
                                                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                                                        @item.ParentAccountName (Direct)
                                                    </MudText>
                                                    <MudText Typo="Typo.body2">@FormatAmount(item.ParentBalance)</MudText>
                                                </div>
                                            }
                                            @foreach (var child in item.Children)
                                            {
                                                <div class="d-flex justify-space-between ml-6 py-1">
                                                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                                                        @child.AccountCode - @child.AccountName
                                                    </MudText>
                                                    <MudText Typo="Typo.body2">@FormatAmount(child.Balance)</MudText>
                                                </div>
                                            }
                                        </ChildContent>
                                    </MudExpansionPanel>
                                </MudExpansionPanels>
                            }
                        </ChildContent>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            }

            @if (reportResult.RetainedEarnings != 0)
            {
                <MudPaper Class="pa-3 mb-2" Elevation="1">
                    <div class="d-flex justify-space-between">
                        <MudText Typo="Typo.subtitle1"><strong>Retained Earnings</strong></MudText>
                        <MudText Typo="Typo.subtitle1" Color="Color.Primary">
                            <strong>@FormatAmount(reportResult.RetainedEarnings)</strong>
                        </MudText>
                    </div>
                </MudPaper>
            }

            <MudDivider Class="my-4" />

            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudPaper Class="pa-3" Elevation="2" Style="background: var(--mud-palette-success-lighten);">
                        <div class="d-flex justify-space-between">
                            <MudText Typo="Typo.h6"><strong>Total Assets</strong></MudText>
                            <MudText Typo="Typo.h6"><strong>@FormatAmount(reportResult.TotalAssets)</strong></MudText>
                        </div>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Class="pa-3" Elevation="2" Style="background: var(--mud-palette-info-lighten);">
                        <div class="d-flex justify-space-between">
                            <MudText Typo="Typo.h6"><strong>Total Liabilities & Equity</strong></MudText>
                            <MudText Typo="Typo.h6"><strong>@FormatAmount(reportResult.TotalLiabilitiesAndEquity)</strong></MudText>
                        </div>
                    </MudPaper>
                </MudItem>
            </MudGrid>

            @if (Math.Abs(reportResult.TotalAssets - reportResult.TotalLiabilitiesAndEquity) > 0.01m)
            {
                <MudAlert Severity="Severity.Warning" Class="mt-4">
                    Balance Sheet does not balance. Difference: @FormatAmount(reportResult.TotalAssets - reportResult.TotalLiabilitiesAndEquity)
                </MudAlert>
            }
            else
            {
                <MudAlert Severity="Severity.Success" Class="mt-4">
                    Balance Sheet is balanced. Assets = Liabilities + Equity
                </MudAlert>
            }
        </MudPaper>
    }
    else if (!isLoading)
    {
        <MudPaper Class="pa-4">
            <MudAlert Severity="Severity.Info">
                Select parameters and click Generate to view the Group-wise Balance Sheet.
            </MudAlert>
        </MudPaper>
    }
</MudContainer>

@code {
    private int selectedYear = DateTime.Now.Year;
    private int selectedMonth = DateTime.Now.Month;
    private Guid? selectedBranchId;
    private Guid? selectedDepartmentId;
    private bool isLoading = false;
    private BalanceSheetGroupWiseResult? reportResult;
    private Dictionary<string, bool> expandedGroups = new()
    {
        { "Asset", true },
        { "Liability", true },
        { "Equity", true }
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        try
        {
            var request = CreateAuthenticatedRequest(HttpMethod.Post, "/api/balancesheet/groupwise");

            var requestBody = new { 
                Year = selectedYear, 
                Month = selectedMonth,
                BranchId = selectedBranchId,
                DepartmentId = selectedDepartmentId
            };
            request.Content = JsonContent.Create(requestBody);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                reportResult = await response.Content.ReadFromJsonAsync<BalanceSheetGroupWiseResult>();
            }
            else
            {
                Snackbar.Add("Failed to load Balance Sheet", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilters()
    {
        selectedYear = DateTime.Now.Year;
        selectedMonth = DateTime.Now.Month;
        selectedBranchId = null;
        selectedDepartmentId = null;
        reportResult = null;
    }

    private string FormatAmount(decimal amount)
    {
        return amount.ToString("N2");
    }

    private string GetGroupLabel(string accountType)
    {
        return accountType switch
        {
            "Asset" => "ASSETS",
            "Liability" => "LIABILITIES",
            "Equity" => "EQUITY",
            _ => accountType.ToUpper()
        };
    }

    private string GetGroupStyle(string accountType)
    {
        return accountType switch
        {
            "Asset" => "color: var(--mud-palette-success);",
            "Liability" => "color: var(--mud-palette-warning);",
            "Equity" => "color: var(--mud-palette-info);",
            _ => ""
        };
    }

    private HttpRequestMessage CreateAuthenticatedRequest(HttpMethod method, string uri)
    {
        var request = new HttpRequestMessage(method, uri);
        var token = AuthService.GetAccessToken();
        var tenantId = AuthService.GetTenantId();

        if (!string.IsNullOrEmpty(token))
            request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
        if (!string.IsNullOrEmpty(tenantId))
            request.Headers.Add("X-Tenant-Id", tenantId);

        return request;
    }

    private class BalanceSheetGroupWiseResult
    {
        public string ReportType { get; set; } = "";
        public DateTime AsAtDate { get; set; }
        public List<BalanceSheetGroup> Groups { get; set; } = new();
        public decimal RetainedEarnings { get; set; }
        public decimal TotalAssets { get; set; }
        public decimal TotalLiabilities { get; set; }
        public decimal TotalEquity { get; set; }
        public decimal TotalLiabilitiesAndEquity { get; set; }
    }

    private class BalanceSheetGroup
    {
        public string AccountType { get; set; } = "";
        public List<BalanceSheetGroupItem> Items { get; set; } = new();
        public decimal GroupTotal { get; set; }
    }

    private class BalanceSheetGroupItem
    {
        public Guid ParentAccountId { get; set; }
        public string ParentAccountCode { get; set; } = "";
        public string ParentAccountName { get; set; } = "";
        public decimal ParentBalance { get; set; }
        public List<BalanceSheetLineItem> Children { get; set; } = new();
        public decimal TotalBalance { get; set; }
    }

    private class BalanceSheetLineItem
    {
        public Guid AccountId { get; set; }
        public string AccountCode { get; set; } = "";
        public string AccountName { get; set; } = "";
        public decimal Balance { get; set; }
    }
}
